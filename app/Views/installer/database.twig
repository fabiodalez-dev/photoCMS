{% extends 'installer/_layout.twig' %}
{% block title %}Database Configuration - Cimaise Installer{% endblock %}
{% block steps %}
<div class="step-indicator">
    <div class="step completed">
        <div class="step-number">1</div>
        <div class="step-label">Welcome</div>
    </div>
    <div class="step active">
        <div class="step-number">2</div>
        <div class="step-label">Database</div>
    </div>
    <div class="step">
        <div class="step-number">3</div>
        <div class="step-label">Admin User</div>
    </div>
    <div class="step">
        <div class="step-number">4</div>
        <div class="step-label">Settings</div>
    </div>
    <div class="step">
        <div class="step-number">5</div>
        <div class="step-label">Install</div>
    </div>
</div>
{% endblock %}
{% block content %}
<h3 class="mb-4"><i class="fas fa-database me-2"></i>Database Configuration</h3>

<p class="text-muted">Configure your database connection settings</p>

<form method="post" action="{{ base_path }}/install/database" id="database-form">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    
    <div class="mb-3">
      <label class="form-label">Database Type</label>
      <div class="row g-3" id="db-connection-cards">
        <div class="col-12 col-md-6">
          <label class="card p-3 h-100 cursor-pointer border {% if db_connection == 'sqlite' %}border-primary{% else %}border-secondary{% endif %}" style="user-select:none;">
            <div class="d-flex align-items-center mb-2">
              <i class="fas fa-database me-2"></i>
              <strong class="mb-0">SQLite</strong>
            </div>
            <p class="text-muted small mb-2">Single file, zero-config. Perfect to start quickly.</p>
            <input type="radio" name="db_connection" value="sqlite" id="db-conn-sqlite" class="form-check-input mt-0" {% if db_connection == 'sqlite' %}checked{% endif %}>
          </label>
        </div>
        <div class="col-12 col-md-6">
          <label class="card p-3 h-100 cursor-pointer border {% if db_connection == 'mysql' %}border-primary{% else %}border-secondary{% endif %}" style="user-select:none;">
            <div class="d-flex align-items-center mb-2">
              <i class="fas fa-server me-2"></i>
              <strong class="mb-0">MySQL / MariaDB</strong>
            </div>
            <p class="text-muted small mb-2">For larger sites and multi-user environments.</p>
            <input type="radio" name="db_connection" value="mysql" id="db-conn-mysql" class="form-check-input mt-0" {% if db_connection == 'mysql' %}checked{% endif %}>
          </label>
        </div>
      </div>
      <div class="form-text mt-2">You can migrate from SQLite to MySQL later if needed.</div>
    </div>
    
    <div id="mysql-fields" {% if db_connection != 'mysql' %}style="display: none;"{% endif %}>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="db-host" class="form-label">Host</label>
                    <input type="text" id="db-host" class="form-control" name="db_host" autocomplete="url" value="{{ db_host }}" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="db-port" class="form-label">Port</label>
                    <input type="number" id="db-port" class="form-control" name="db_port" value="{{ db_port }}" required>
                </div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="db-database" class="form-label">Database Name</label>
            <input type="text" id="db-database" class="form-control" name="db_database" value="{{ db_database }}" required>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="db-username" class="form-label">Username</label>
                    <input type="text" id="db-username" class="form-control" name="db_username" autocomplete="username" value="{{ db_username }}" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="db-password" class="form-label">Password</label>
                    <input type="password" id="db-password" class="form-control" name="db_password" autocomplete="current-password" value="{{ db_password }}">
                    <div class="form-text">Leave empty if no password is required</div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="db-charset" class="form-label">Charset</label>
                    <input type="text" id="db-charset" class="form-control" name="db_charset" value="{{ db_charset }}" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="db-collation" class="form-label">Collation</label>
                    <input type="text" id="db-collation" class="form-control" name="db_collation" value="{{ db_collation }}" required>
                </div>
            </div>
        </div>
    </div>
    
    <div id="sqlite-fields" {% if db_connection == 'mysql' %}style="display: none;"{% endif %}>
        <input type="hidden" name="db_database" value="{{ db_database }}">
        <div class="alert alert-light border">
            <div class="d-flex align-items-center mb-1"><i class="fas fa-file-alt me-2"></i><strong>SQLite database path</strong></div>
            <div class="text-muted small">{{ db_database }}</div>
        </div>
    </div>
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
        <a href="{{ base_path }}/install" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check me-2"></i>Continue
        </button>
    </div>
</form>
{% endblock %}
{% block scripts %}
<script>
(function(){
  function toggle(val){
    const showMy = val === 'mysql';
    document.getElementById('mysql-fields').style.display = showMy ? 'block':'none';
    document.getElementById('sqlite-fields').style.display = showMy ? 'none':'block';
  }
  const rSqlite = document.getElementById('db-conn-sqlite');
  const rMysql = document.getElementById('db-conn-mysql');
  if (rSqlite && rMysql){
    rSqlite.addEventListener('change', ()=> toggle('sqlite'));
    rMysql.addEventListener('change', ()=> toggle('mysql'));
  }
})();
</script>
{% endblock %}
