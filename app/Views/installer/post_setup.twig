{% extends 'installer/_layout.twig' %}
{% block title %}Post-Install Setup — photoCMS{% endblock %}
{% block steps %}
<div class="step-indicator">
  <div class="step completed"><div class="step-number">1</div><div class="step-label">Welcome</div></div>
  <div class="step completed"><div class="step-number">2</div><div class="step-label">Database</div></div>
  <div class="step completed"><div class="step-number">3</div><div class="step-label">Admin</div></div>
  <div class="step completed"><div class="step-number">4</div><div class="step-label">Install</div></div>
  <div class="step active"><div class="step-number">5</div><div class="step-label">Post-Setup</div></div>
  </div>
{% endblock %}

{% block content %}
<h3 class="mb-4"><i class="fas fa-wand-magic-sparkles me-2"></i>Finalize Your Site</h3>
<p class="text-muted">Set logo, name and basic info. You can change these later in Admin → Settings.</p>

<form method="post" action="{{ base_path }}/install/post-setup" enctype="multipart/form-data">
  <input type="hidden" name="csrf" value="{{ csrf }}">

  <div class="mb-3">
    <label class="form-label">Site Title</label>
    <input type="text" class="form-control" name="site_title" value="{{ site_title }}" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Site Description</label>
    <textarea class="form-control" name="site_description" rows="3">{{ site_description }}</textarea>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label class="form-label">Copyright</label>
        <input type="text" class="form-control" name="site_copyright" value="{{ site_copyright }}">
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <label class="form-label">Contact Email</label>
        <input type="email" class="form-control" name="site_email" value="{{ site_email }}">
      </div>
    </div>
  </div>

  <div class="mb-3">
    <label class="form-label">Site Logo (optional)</label>
    <input type="file" class="form-control" name="site_logo" accept="image/png,image/jpeg,image/webp">
  </div>

  {% if templates|length > 0 %}
  <div class="mb-3">
    <label class="form-label">Default Gallery Template (optional)</label>
    <select class="form-control" name="default_template_slug">
      <option value="">No default template</option>
      {% for t in templates %}
      <option value="{{ t.slug }}">{{ t.name }}</option>
      {% endfor %}
    </select>
    <div class="form-text">Used when an album has no specific template.</div>
  </div>
  {% endif %}

  <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
    <a href="{{ base_path }}/admin/login" class="btn btn-outline-secondary">
      <i class="fas fa-sign-in-alt me-2"></i>Skip for now
    </a>
    <button type="submit" class="btn btn-primary">
      <i class="fas fa-check me-2"></i>Save & Continue
    </button>
  </div>
</form>
{% endblock %}
