{% extends 'frontend/_layout.twig' %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
  {% include 'frontend/_breadcrumbs.twig' %}
</div>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-12 md:pt-16">
    {% if contact_sent %}
      <div class="mb-6 rounded-md border border-green-200 bg-green-50 text-green-800 px-4 py-3">{{ trans('contact.success') }}</div>
    {% elseif contact_error %}
      <div class="mb-6 rounded-md border border-red-200 bg-red-50 text-red-800 px-4 py-3">{{ trans('contact.error') }}</div>
    {% endif %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 md:gap-16 items-start">
      <div class="lg:col-span-2 order-2 lg:order-1">
        <h1 class="text-4xl md:text-5xl font-semibold tracking-tight">{{ about_title|default(trans('nav.about'))|e }}</h1>
        {% if about_subtitle %}
          <p class="mt-3 text-neutral-600">{{ about_subtitle|e }}</p>
        {% endif %}
        <div class="mt-6 text-lg leading-8">
          {% if about_text %}
            <div>{{ about_text|safe_html }}</div>
          {% else %}
            <p class="text-neutral-600">Aggiungi il tuo testo di presentazione dall'area admin â†’ Pagine.</p>
          {% endif %}
        </div>

        {% if about_socials|default({}) %}
        <div class="mt-8 flex flex-wrap items-center gap-4">
          {% set iconMap = {
            'instagram':'fa-brands fa-instagram',
            'x':'fa-brands fa-x-twitter',
            'facebook':'fa-brands fa-facebook',
            'flickr':'fa-brands fa-flickr',
            '500px':'fa-brands fa-500px',
            'behance':'fa-brands fa-behance'
          } %}
          {% for key, url in about_socials %}
            {% set icon = iconMap[key]|default('fa-solid fa-link') %}
            <a href="{{ url }}" target="_blank" rel="me noopener" class="inline-flex items-center gap-2 text-sm text-neutral-700 hover:text-black transition-colors border border-neutral-200 px-3 py-1.5 rounded-full">
              <i class="{{ icon }}"></i>
              <span class="capitalize">{{ key }}</span>
            </a>
          {% endfor %}
        </div>
        {% endif %}

        <div class="mt-12 border border-neutral-200 rounded-lg p-6">
          <h2 class="text-2xl font-semibold">{{ contact_title|default(trans('contact.title'))|e }}</h2>
          <p class="text-sm text-neutral-600 mt-1">{% if contact_intro %}{{ contact_intro|safe_html }}{% elseif about_footer_text %}{{ about_footer_text|safe_html }}{% else %}{{ trans('contact.intro', {}, 'For collaborations and commissions, contact me via email or social.') }}{% endif %}</p>
          <form method="post" action="{{ about_url }}/contact" class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <div>
              <label for="contact-name" class="block text-sm mb-1">{{ trans('contact.name') }}</label>
              <input type="text" id="contact-name" name="name" autocomplete="name" required class="w-full border border-neutral-300 rounded px-3 py-2">
            </div>
            <div>
              <label for="contact-email" class="block text-sm mb-1">{{ trans('contact.email') }}</label>
              <input type="email" id="contact-email" name="email" autocomplete="email" required class="w-full border border-neutral-300 rounded px-3 py-2">
            </div>
            <div class="md:col-span-2">
              <label for="contact-message" class="block text-sm mb-1">{{ trans('contact.message') }}</label>
              <textarea id="contact-message" name="message" rows="5" required class="w-full border border-neutral-300 rounded px-3 py-2"></textarea>
            </div>
            <div>
              <button type="submit" class="bg-black text-white px-5 py-2 rounded hover:bg-neutral-800 transition-colors">{{ trans('contact.send') }}</button>
            </div>
          </form>
        </div>
      </div>
      <div class="lg:col-span-1 order-1 lg:order-2">
        <div class="max-w-md ml-auto bg-neutral-100 overflow-hidden border border-neutral-200">
          {% if about_photo_url %}
            <img src="{% if about_photo_url starts with '/' %}{{ base_path }}{{ about_photo_url }}{% else %}{{ about_photo_url }}{% endif %}" alt="Portrait" class="w-full h-auto object-cover" loading="eager" fetchpriority="high"/>
          {% else %}
            <div class="aspect-[3/4] w-full h-full flex items-center justify-center text-neutral-400">Portrait</div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endblock %}
