{% extends "frontend/_layout.twig" %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
  {% include 'frontend/_breadcrumbs.twig' %}
</div>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Tag header -->
    <div class="text-center py-12">
        <h1 class="text-3xl md:text-4xl font-light text-black mb-6">
            #{{ tag.name|e }}
        </h1>
        <p class="text-lg text-neutral-600">
            {{ albums|length == 1 ? trans('tag.album_tagged') : trans('tag.albums_tagged', {count: albums|length}) }}
        </p>
    </div>

    <!-- Albums grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {% for album in albums %}
            {% include "frontend/_album_card.twig" %}
        {% endfor %}
    </div>
    
    {% if albums|length == 0 %}
    <div class="text-center py-20">
        <h2 class="text-2xl font-light text-neutral-600 mb-4">{{ trans('tag.no_albums_title') }}</h2>
        <p class="text-neutral-500">
            <a href="{{ base_path }}/" class="hover:text-black transition-colors">{{ trans('tag.no_albums_text') }}</a>
        </p>
    </div>
    {% endif %}

</div>

<!-- Other tags -->
{% if tags|length > 1 %}
<section class="border-t border-neutral-200 mt-16 pt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-light text-center mb-12">{{ trans('tag.related_tags') }}</h2>
        
        <div class="flex flex-wrap justify-center gap-2">
            {% for t in tags %}
                {% if t.slug != tag.slug %}
                <a href="{{ base_path }}/tag/{{ t.slug }}" 
                   class="text-xs text-neutral-500 hover:text-black border border-neutral-200 rounded px-2 py-1 transition-colors">
                    #{{ t.name|e }}
                </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}
{% endblock %}

{% block scripts %}
<script type="application/ld+json" nonce="{{ csp_nonce() }}">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": {{ ('#' ~ tag.name)|json_encode|raw }},
  "url": {{ (canonical_url|default(current_url))|json_encode|raw }},
  "description": {{ meta_description|default('')|json_encode|raw }}
}
</script>
{% endblock %}
