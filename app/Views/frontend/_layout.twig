    <!-- App JS -->
    <script>
        // Enhanced Mobile menu with animations
        document.addEventListener('DOMContentLoaded', function() {
            // 1. Menu Toggle
            const menuToggle = document.getElementById('mobile-menu-toggle');
            const menu = document.getElementById('mobile-menu');
            if (menuToggle && menu) {
                menuToggle.addEventListener('click', function() {
                    const isOpening = menu.classList.contains('hidden');
                    if (isOpening) {
                        menu.classList.remove('hidden');
                        requestAnimationFrame(() => {
                            menu.style.maxHeight = menu.scrollHeight + 'px';
                            menu.style.opacity = '1';
                        });
                    } else {
                        menu.style.maxHeight = '0px';
                        menu.style.opacity = '0';
                        setTimeout(() => menu.classList.add('hidden'), 300);
                    }
                });
            }

            // 2. Sub-category Toggles
            document.querySelectorAll('.mobile-category-toggle').forEach(button => {
                button.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const group = button.closest('.mobile-category-group');
                    if (!group) return;

                    const subcategories = group.querySelector('.mobile-subcategories');
                    const icon = button.querySelector('i');
                    
                    if (subcategories) {
                        if (subcategories.classList.contains('hidden')) {
                            subcategories.classList.remove('hidden');
                            requestAnimationFrame(() => {
                                subcategories.style.maxHeight = subcategories.scrollHeight + 'px';
                            });
                            if (icon) icon.style.transform = 'rotate(180deg)';
                        } else {
                            subcategories.style.maxHeight = '0px';
                            if (icon) icon.style.transform = 'rotate(0deg)';
                            setTimeout(() => subcategories.classList.add('hidden'), 300);
                        }
                    }
                });
            });

            // 3. Active Page Indicator
            const currentUrl = window.location.href.split('?')[0].split('#')[0];
            const mobileMenuLinks = menu ? menu.querySelectorAll('a') : [];
            mobileMenuLinks.forEach(link => {
                const linkUrl = link.href.split('?')[0].split('#')[0];
                if (link.href && linkUrl === currentUrl) {
                    link.classList.add('bg-white', 'text-black');
                    link.setAttribute('aria-current', 'page');
                }
            });
        });

        
        
        // Enhanced Desktop mega menu with category data and images
        const megaMenuData = {
            {% for category in parent_categories|default([]) %}
            {{ category.id }}: {
                name: "{{ category.name|e }}",
                slug: "{{ category.slug }}",
                image: "{{ category.image_path ? category.image_path : '' }}",
                children: [
                    {% for child in category.children %}
                    { name: "{{ child.name|e }}", slug: "{{ child.slug }}" }{% if not loop.last %},{% endif %}
                    {% endfor %}
                ]
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        };
        
        // Enhanced Desktop categories mega menu with animations
        (function(){
            const toggle = document.getElementById('categories-toggle');
            const menu = document.getElementById('categories-mega-menu');
            const icon = document.getElementById('categories-icon');
            let isOpen = false;
            let hoverTimeout;
            
            if (!toggle || !menu) return;
            
            function closeMenu() {
                if (!isOpen) return;
                
                menu.style.transition = 'opacity 0.2s ease, transform 0.2s ease';
                menu.style.opacity = '0';
                menu.style.transform = 'translateY(-10px)';
                
                setTimeout(() => {
                    menu.classList.add('opacity-0', 'invisible');
                    menu.classList.remove('opacity-100', 'visible');
                }, 200);
                
                if (icon) {
                    icon.style.transform = 'rotate(0deg)';
                }
                
                isOpen = false;
            }
            
            function openMenu() {
                if (isOpen) return;
                
                menu.classList.remove('opacity-0', 'invisible');
                menu.classList.add('opacity-100', 'visible');
                
                requestAnimationFrame(() => {
                    menu.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                    menu.style.opacity = '1';
                    menu.style.transform = 'translateY(0)';
                });
                
                if (icon) {
                    icon.style.transform = 'rotate(180deg)';
                }
                
                isOpen = true;
            }
            
            // Mouse enter/leave for smooth mega menu
            const dropdown = document.getElementById('categories-dropdown');
            if (dropdown) {
                dropdown.addEventListener('mouseenter', () => {
                    clearTimeout(hoverTimeout);
                    openMenu();
                });
                
                dropdown.addEventListener('mouseleave', () => {
                    hoverTimeout = setTimeout(closeMenu, 150);
                });
            }
            
            // Click toggle for mobile/accessibility
            toggle.addEventListener('click', (e) => {
                e.preventDefault();
                isOpen ? closeMenu() : openMenu();
            });
            
            // Close on outside click
            document.addEventListener('click', (e) => {
                if (!isOpen) return;
                if (!dropdown?.contains(e.target)) {
                    closeMenu();
                }
            });
        })();
        
        // Enhanced Filters toggle with animations
        document.getElementById('filters-toggle')?.addEventListener('click', function() {
            const panel = document.getElementById('filters-panel');
            const icon = this.querySelector('i');
            
            if (panel.classList.contains('hidden')) {
                panel.classList.remove('hidden');
                // Animate in
                panel.style.opacity = '0';
                panel.style.transform = 'translateY(-10px)';
                panel.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                
                requestAnimationFrame(() => {
                    panel.style.opacity = '1';
                    panel.style.transform = 'translateY(0)';
                });
                
                if (icon) {
                    icon.style.transform = 'rotate(180deg)';
                }
            } else {
                // Animate out
                panel.style.opacity = '0';
                panel.style.transform = 'translateY(-10px)';
                
                setTimeout(() => {
                    panel.classList.add('hidden');
                }, 300);
                
                if (icon) {
                    icon.style.transform = 'rotate(0deg)';
                }
            }
        });

        // Enhanced smooth animations with GSAP
        gsap.registerPlugin(ScrollTrigger);
        
        // Animate elements on scroll with stagger effect - exclude header and mega menu images
        // Avoid animating #images-gallery items to prevent flicker
        gsap.utils.toArray('main .album-card, .gallery-container .image-item').forEach((el, index) => {
            gsap.from(el, {
                opacity: 0,
                y: 30,
                duration: 0.8,
                delay: index * 0.08,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: el,
                    start: "top 85%",
                    end: "bottom 15%",
                    toggleActions: "play none none none",
                    once: true
                }
            });
        });

        // One-time entrance animation for gallery items
        window.animateGalleryOnce = function() {
            if (typeof gsap === 'undefined') return;
            const container = document.getElementById('images-gallery');
            if (!container) return;
            const nodes = Array.from(container.querySelectorAll('.image-item')).filter(n => !n.hasAttribute('data-animated'));
            if (!nodes.length) return;
            // Mark as animated to avoid double-run on same nodes
            nodes.forEach(n => n.setAttribute('data-animated','1'));
            gsap.from(nodes, {
                opacity: 0,
                y: 24,
                duration: 0.6,
                stagger: 0.03,
                ease: 'power2.out'
            });
        };

        // Initialize gallery entrance animation on load (no scroll trigger)
        window.animateGalleryOnce();
        
        // Enhanced header scroll behavior with smooth transitions
        let lastScroll = 0;
        const header = document.querySelector('#main-header');
        let ticking = false;
        
        function updateHeader() {
            const currentScroll = window.pageYOffset;
            
            if (currentScroll > lastScroll && currentScroll > 100) {
                // Scrolling down
                gsap.to(header, {
                    y: -100,
                    duration: 0.3,
                    ease: "power2.out"
                });
            } else {
                // Scrolling up or at top
                gsap.to(header, {
                    y: 0,
                    duration: 0.3,
                    ease: "power2.out"
                });
            }
            
            // Add/remove backdrop blur based on scroll
            if (currentScroll > 50) {
                header.style.backdropFilter = 'blur(20px)';
                header.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
            } else {
                header.style.backdropFilter = 'blur(10px)';
                header.style.backgroundColor = 'rgba(255, 255, 255, 0.90)';
            }
            
            lastScroll = currentScroll;
            ticking = false;
        }
        
        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(updateHeader);
                ticking = true;
            }
        });
        
        // Enhanced image loading animations
        document.addEventListener('DOMContentLoaded', () => {
            const images = document.querySelectorAll('img[data-src], img:not([data-src])');
            
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        
                        // Skip mega menu and header images to avoid conflicts
                        if (img.closest('#categories-mega-menu, header, #mobile-menu')) {
                            observer.unobserve(img);
                            return;
