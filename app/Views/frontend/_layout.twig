<!DOCTYPE html>
<html lang="{{ lang|default('it')|e('html_attr') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title|e }}</title>

    {% if meta_description %}
    <meta name="description" content="{{ meta_description|e('html_attr') }}">
    {% endif %}

    <!-- Favicon & App Icons -->
    <link rel="icon" type="image/x-icon" href="{{ base_path }}/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ base_path }}/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ base_path }}/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ base_path }}/apple-touch-icon.png">
    <link rel="manifest" href="{{ base_path }}/site.webmanifest">
    <meta name="theme-color" content="#ffffff">

    <!-- Preconnect for External Resources (includes dns-prefetch in modern browsers) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ page_title|e('html_attr') }}">
    {% if meta_description %}
    <meta property="og:description" content="{{ meta_description|e('html_attr') }}">
    {% endif %}
    {% if meta_image %}
    <meta property="og:image" content="{{ meta_image|e('html_attr') }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:alt" content="{{ page_title|e('html_attr') }}">
    {% endif %}
    <meta property="og:type" content="{{ og_type|default('website')|e('html_attr') }}">
    <meta property="og:url" content="{{ canonical_url|default(current_url)|e('html_attr') }}">
    {% if og_locale %}<meta property="og:locale" content="{{ og_locale|e('html_attr') }}">{% endif %}
    <meta property="og:site_name" content="{{ og_site_name|default(site_title)|default('Portfolio')|e('html_attr') }}">

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="{{ twitter_card|default('summary_large_image')|e('html_attr') }}">
    <meta name="twitter:title" content="{{ page_title|e('html_attr') }}">
    {% if meta_description %}<meta name="twitter:description" content="{{ meta_description|e('html_attr') }}">{% endif %}
    {% if meta_image %}
    <meta name="twitter:image" content="{{ meta_image|e('html_attr') }}">
    <meta name="twitter:image:alt" content="{{ page_title|e('html_attr') }}">
    {% endif %}
    {% if twitter_site %}<meta name="twitter:site" content="{{ twitter_site|e('html_attr') }}">{% endif %}
    {% if twitter_creator %}<meta name="twitter:creator" content="{{ twitter_creator|e('html_attr') }}">{% endif %}

    <!-- Canonical & Robots -->
    {% if canonical_url %}<link rel="canonical" href="{{ canonical_url|e('html_attr') }}">{% endif %}
    <meta name="robots" content="{{ robots|default('index,follow')|e('html_attr') }}">

    {# Organization/Person JSON-LD from SEO settings (if provided) #}
    {% if schema is defined and (schema.author_name or schema.organization_name) %}
    <script type="application/ld+json" nonce="{{ csp_nonce() }}">
    {
      "@context": "https://schema.org",
      {% if schema.author_name %}
      "@type": "Person",
      "name": {{ schema.author_name|json_encode|raw }},
      {% if schema.author_url %}"url": {{ schema.author_url|json_encode|raw }},{% endif %}
      {% if meta_image %}"image": {{ meta_image|json_encode|raw }},{% endif %}
      "jobTitle": {{ (schema.photographer_job_title|default('Photographer'))|json_encode|raw }},
      "description": {{ (meta_description|default(''))|json_encode|raw }},
      {% set same_as_raw = schema.photographer_same_as|default('') %}
      {% set same_as_list = [] %}
      {% if same_as_raw %}
        {% for u in same_as_raw|split(',') %}
          {% set t = u|trim %}
          {% if t %}
            {% set same_as_list = same_as_list|merge([t]) %}
          {% endif %}
        {% endfor %}
        {% if same_as_list %}
        "sameAs": [
          {% for url in same_as_list %}
            {{ url|json_encode|raw }}{% if not loop.last %}, {% endif %}
          {% endfor %}
        ],
        {% endif %}
      {% endif %}
      {% else %}
      "@type": "Organization",
      "name": {{ schema.organization_name|json_encode|raw }},
      {% if schema.organization_url %}"url": {{ schema.organization_url|json_encode|raw }},{% endif %}
      {% if meta_image %}"logo": {{ meta_image|json_encode|raw }},{% endif %}
      {% endif %}
      "@id": {{ (canonical_url|default(current_url))|json_encode|raw }}
    }
    </script>
    {% endif %}

    {# BreadcrumbList Schema #}
    {% if breadcrumbs is defined and breadcrumbs|length > 0 and schema is defined and schema.breadcrumbs_enabled %}
    <script type="application/ld+json" nonce="{{ csp_nonce() }}">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {% for crumb in breadcrumbs %}
        {% set crumbUrl = crumb.url starts with '/' ? base_path ~ crumb.url : crumb.url %}
        {
          "@type": "ListItem",
          "position": {{ loop.index }},
          "name": {{ crumb.name|json_encode|raw }},
          "item": {{ crumbUrl|json_encode|raw }}
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
    </script>
    {% endif %}

    {# LocalBusiness Schema (if enabled) #}
    {% if schema is defined and schema.local_business_enabled %}
    <script type="application/ld+json" nonce="{{ csp_nonce() }}">
    {
      "@context": "https://schema.org",
      "@type": {{ schema.local_business_type|default('ProfessionalService')|json_encode|raw }},
      "name": {{ schema.local_business_name|json_encode|raw }},
      {% if schema.local_business_address %}
      "address": {
        "@type": "PostalAddress",
        "streetAddress": {{ schema.local_business_address|json_encode|raw }}
        {% if schema.local_business_city %},"addressLocality": {{ schema.local_business_city|json_encode|raw }}{% endif %}
        {% if schema.local_business_postal_code %},"postalCode": {{ schema.local_business_postal_code|json_encode|raw }}{% endif %}
        {% if schema.local_business_country %},"addressCountry": {{ schema.local_business_country|json_encode|raw }}{% endif %}
      },
      {% endif %}
      {% if schema.local_business_phone %}"telephone": {{ schema.local_business_phone|json_encode|raw }},{% endif %}
      {% if schema.local_business_geo_lat and schema.local_business_geo_lng %}
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": {{ schema.local_business_geo_lat|json_encode|raw }},
        "longitude": {{ schema.local_business_geo_lng|json_encode|raw }}
      },
      {% endif %}
      {% if schema.local_business_opening_hours %}"openingHours": {{ schema.local_business_opening_hours|json_encode|raw }},{% endif %}
      "url": {{ (canonical_url|default(current_url))|json_encode|raw }},
      {% if meta_image %}"image": {{ meta_image|json_encode|raw }},{% endif %}
      "priceRange": {{ (schema.local_business_price_range|default('$$'))|json_encode|raw }}
    }
    </script>
    {% endif %}
    
    <!-- Fonts: use system stack to comply with CSP -->
    
    <!-- Tailwind CSS - Local Build -->
    <link href="{{ base_path }}/assets/app.css" rel="stylesheet">
    <!-- Custom CSS for system fonts -->
    
    <!-- PhotoSwipe CSS (local) -->
    <link rel="stylesheet" href="{{ base_path }}/assets/photoswipe/photoswipe.css">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="{{ base_path }}/assets/vendor/swiper/swiper-bundle.min.css">

    <!-- Font Awesome (icons) -->
    <link rel="stylesheet" href="{{ base_path }}/assets/vendor/fontawesome/css/all.min.css">

    <!-- Google Fonts (Inter + Kalam) -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Kalam:wght@400&display=swap">
    
    <!-- JS flag class on <html> if needed elsewhere -->
    <script nonce="{{ csp_nonce() }}">(function(){ document.documentElement.classList.add('js'); window.__showExifInLightbox = {{ lightbox_show_exif ? 'true' : 'false' }}; })();</script>
    
    <!-- Custom styles -->
    <style nonce="{{ csp_nonce() }}">
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        /* GPU acceleration for smooth scrolling */
        .masonry-item,
        .masonry-fit-grid .masonry-item,
        .image-item,
        .album-card,
        #images-gallery {
            will-change: transform;
            transform: translateZ(0);
            backface-visibility: hidden;
        }

        /* Reduce paint complexity during scroll */
        img {
            content-visibility: auto;
        }

        /* Template-specific styles */
        .masonry-grid {
            column-gap: var(--grid-gap, 1rem);
        }
        .masonry-item {
            break-inside: avoid;
            margin-bottom: 1rem;
        }

        /* Prevent FOUC: hide gallery items (exclude Magazine template wrappers) */
        #images-gallery > .masonry-item,
        #images-gallery > .image-item,
        #images-gallery > .grid-minimal-item,
        #images-gallery > .polaroid-item,
        #images-gallery > .mosaic-item {
            opacity: 0;
            transform: scale(0.97);
        }
        /* Show when animated or fallback */
        #images-gallery.gsap-failed > *,
        #images-gallery > [data-animated] {
            opacity: 1;
            transform: scale(1);
        }
        /* Prevent FOUC: hide album cards initially for entrance animation */
        main .album-card:not([data-animated]) {
            opacity: 0;
            transform: translateY(20px);
        }
        main .album-card[data-animated] {
            opacity: 1;
            transform: translateY(0);
        }
        /* Reduced motion: show immediately */
        @media (prefers-reduced-motion: reduce) {
            #images-gallery > .masonry-item,
            #images-gallery > .image-item,
            #images-gallery > .grid-minimal-item,
            #images-gallery > .polaroid-item,
            #images-gallery > .mosaic-item,
            main .album-card {
                opacity: 1 !important;
                transform: none !important;
            }
        }

        /* Focus hover effect - fade other images when hovering one */
        #images-gallery.gallery-animate {
            pointer-events: none; /* Empty space doesn't trigger hover */
        }
        #images-gallery.gallery-animate > [data-animated] {
            pointer-events: auto; /* Only images receive hover */
        }
        #images-gallery > [data-animated] {
            transition: filter 0.5s ease-out, opacity 0.5s ease-out, transform 0.3s ease;
        }
        #images-gallery:has(> [data-animated]:hover) > [data-animated]:not(:hover) {
            filter: saturate(0.1) opacity(0.35);
        }

        
        /* Swiper custom styles */
        .gallery-swiper .swiper-button-next,
        .gallery-swiper .swiper-button-prev {
            color: #000;
        }
        .gallery-swiper .swiper-pagination-bullet-active {
            background: #000;
        }

        /* Simple tooltip for template buttons */
        .tpl-switch { position: relative; }
        .tpl-switch[data-tooltip]:hover::after {
            content: attr(data-tooltip);
            position: absolute; bottom: 125%; left: 50%; transform: translateX(-50%);
            background: rgba(17,17,17,.95); color: #fff; padding: 6px 8px; border-radius: 4px; white-space: nowrap;
            font-size: 12px; line-height: 1; z-index: 50;
            box-shadow: 0 6px 12px rgba(0,0,0,.2);
        }
        .tpl-switch[data-tooltip]:hover::before {
            content: ''; position: absolute; bottom: 115%; left: 50%; transform: translateX(-50%);
            width: 0; height: 0; border-left: 6px solid transparent; border-right: 6px solid transparent; border-top: 6px solid rgba(17,17,17,.95);
            z-index: 51;
        }

        /* Template switcher: show immediately for reduced motion */
        @media (prefers-reduced-motion: reduce) {
            #template-switcher {
                opacity: 1 !important;
                transform: none !important;
            }
        }

        /* NSFW content blur */
        .nsfw-blur {
            filter: blur(20px);
            transition: filter 0.3s ease;
        }

        /* Simple Lightbox fallback */
        #slb-overlay { position: fixed; inset: 0; background: rgba(0,0,0,.95); color:#fff; display:none; align-items:center; justify-content:center; z-index: 10000; }
        #slb-overlay.active { display:flex; }
        #slb-content { max-width: 96vw; max-height: 92vh; position: relative; display:flex; flex-direction:column; align-items:center; justify-content:center; }
        #slb-content .slb-media { width: min(60%, 1200px); }
        #slb-img { width: 100%; height: auto; max-height: 72vh; object-fit: contain; display:block; margin: 0 auto; }
        #slb-caption { margin-top: .9rem; text-align: center; color:#ddd; font-size: .9rem; }
        .slb-btn { position:absolute; top: 50%; transform: translateY(-50%); background: rgba(255,255,255,.12); border:1px solid rgba(255,255,255,.22); color:#fff; width: 44px; height: 44px; border-radius: 9999px; display:flex; align-items:center; justify-content:center; cursor:pointer; z-index: 10001; }
        .slb-prev { left: 2%; }
        .slb-next { right: 2%; }
        .slb-close { position: absolute; top: 10px; right: 10px; width: 40px; height: 40px; border-radius: 9999px; background: rgba(255,255,255,.12); border:1px solid rgba(255,255,255,.2); display:flex; align-items:center; justify-content:center; cursor:pointer; }
        @media (max-width: 1024px) { #slb-content .slb-media { width: min(80%, 1200px); } }
        @media (max-width: 640px)  { #slb-content .slb-media { width: 92%; } .slb-prev { left: 8px; } .slb-next { right: 8px; } }
        
        /* PhotoSwipe image sizing - no max constraints to allow proper zoom */
        .pswp__img {
            object-fit: contain !important;
            cursor: pointer !important;
        }
        
        /* Migliorate PhotoSwipe caption con responsive design */
        .pswp__custom-caption {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: 56px;
            max-width: 95vw;
            color: #fff;
            text-align: center;
            font-size: 14px;
            line-height: 1.3;
            z-index: 2;
            background: rgba(0,0,0,0.7);
            padding: 12px 20px;
            border-radius: 6px;
            transition: opacity 0.3s ease, transform 0.3s ease;
            /* Hidden by default, shown via toggle button */
            opacity: 0;
            pointer-events: none;
        }

        .pswp__custom-caption.visible {
            opacity: 1;
            pointer-events: auto;
        }

        /* EXIF toggle button - icon turns gray when active */
        .pswp__button--info-button.active .pswp__icn {
            color: #888 !important;
        }

        /* EXIF Panel - slides in from right */
        .pswp__exif-panel {
            position: absolute;
            top: 48px;
            right: 0;
            bottom: 0;
            width: 320px;
            max-width: 85vw;
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            color: #1a1a1a;
            z-index: 1000;
            transform: translateX(100%);
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            overflow-y: auto;
            border-left: 1px solid #e5e7eb;
            border-top: 1px solid #e5e7eb;
            border-radius: 10px;
        }
        .pswp__exif-panel.visible {
            transform: translateX(0);
        }
        .pswp__exif-panel-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px 20px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 0;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(8px);
            z-index: 2;
        }
        .pswp__exif-panel-header h3 {
            font-size: 15px;
            font-weight: 600;
            margin: 0;
            color: #1a1a1a;
        }
        .pswp__exif-panel-close {
            background: none;
            border: none;
            color: #666;
            cursor: pointer;
            padding: 6px;
            border-radius: 6px;
            transition: all 0.15s ease;
        }
        .pswp__exif-panel-close:hover {
            background: rgba(0, 0, 0, 0.06);
            color: #1a1a1a;
        }
        .pswp__exif-panel-content {
            padding: 16px 20px;
        }
        .pswp__exif-section {
            margin-bottom: 20px;
        }
        .pswp__exif-section:last-child {
            margin-bottom: 0;
        }
        .pswp__exif-section-title {
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #888;
            margin-bottom: 10px;
        }
        .pswp__exif-item {
            display: flex;
            align-items: flex-start;
            gap: 10px;
            padding: 8px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.04);
        }
        .pswp__exif-item:last-child {
            border-bottom: none;
        }
        .pswp__exif-icon {
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.04);
            border-radius: 6px;
            color: #555;
            flex-shrink: 0;
        }
        .pswp__exif-item-content {
            flex: 1;
            min-width: 0;
        }
        .pswp__exif-label {
            font-size: 11px;
            color: #888;
            margin-bottom: 2px;
        }
        .pswp__exif-value {
            font-size: 13px;
            color: #1a1a1a;
            font-weight: 500;
            word-break: break-word;
        }
        .pswp__exif-value a {
            color: #2563eb;
            text-decoration: none;
        }
        .pswp__exif-value a:hover {
            text-decoration: underline;
        }
        .pswp__exif-loading {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            color: #888;
        }
        .pswp__exif-loading i {
            font-size: 24px;
            margin-bottom: 12px;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        .pswp__exif-empty {
            text-align: center;
            padding: 40px 20px;
            color: #888;
        }
        .pswp__exif-empty i {
            font-size: 32px;
            margin-bottom: 12px;
            opacity: 0.5;
        }

        @media (max-width: 480px) {
            .pswp__exif-panel {
                width: 100%;
                max-width: 100%;
                top: 44px;
            }
        }

        /* Responsive adjustments per caption */
        @media (max-width: 640px) {
            .pswp__custom-caption {
                max-width: 98vw;
                bottom: 36px;
                padding: 8px 12px;
                font-size: 13px;
            }
        }
        
        .pswp__custom-caption .mb-2 {
            margin-bottom: 8px;
            font-weight: 500;
            font-size: 15px;
        }
        
        .pswp__custom-caption .flex {
            flex-wrap: wrap;
            gap: 8px 12px;
            justify-content: center;
            font-size: 13px;
            opacity: 0.9;
        }

        /* Keep zoomed image above UI (icons, title, metadata) */
        .pswp--zoomed-in .pswp__scroll-wrap,
        .pswp--zoomed-in .pswp__container,
        .pswp--zoomed-in .pswp__item,
        .pswp--zoomed-in .pswp__zoom-wrap,
        .pswp--zoomed-in .pswp__img,
        .pswp--zooming .pswp__scroll-wrap,
        .pswp--zooming .pswp__container,
        .pswp--zooming .pswp__item,
        .pswp--zooming .pswp__zoom-wrap,
        .pswp--zooming .pswp__img {
            z-index: 30;
        }

        .pswp--zoomed-in .pswp__custom-caption,
        .pswp--zoomed-in .pswp__counter,
        .pswp--zoomed-in .pswp__bullets-indicator,
        .pswp--zoomed-in .pswp__meta-panel,
        .pswp--zoomed-in .pswp__zoom-indicator-br,
        .pswp--zooming .pswp__custom-caption,
        .pswp--zooming .pswp__counter,
        .pswp--zooming .pswp__bullets-indicator,
        .pswp--zooming .pswp__meta-panel,
        .pswp--zooming .pswp__zoom-indicator-br {
            z-index: 1;
            pointer-events: none;
        }

        .pswp--zoomed-in .pswp__top-bar,
        .pswp--zooming .pswp__top-bar,
        .pswp--zoomed-in .pswp__button,
        .pswp--zooming .pswp__button {
            z-index: 40;
            pointer-events: auto;
        }

        .pswp__ui--idle .pswp__top-bar,
        .pswp__ui--idle .pswp__button {
            opacity: 1 !important;
            transform: none !important;
        }
        
        /* Position navigation arrows outside the image */
        .pswp__button--arrow--prev,
        .pswp__button--arrow--next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 46px;
            height: 46px;
            margin: 0;
            padding: 10px;
        }

        .pswp__button--arrow--prev {
            left: calc(env(safe-area-inset-left) + 8px);
        }

        .pswp__button--arrow--next {
            right: calc(env(safe-area-inset-right) + 8px);
        }

        @media (max-width: 640px) {
            .pswp__button--arrow--prev,
            .pswp__button--arrow--next {
                width: 38px;
                height: 38px;
                padding: 8px;
            }
        }
        
        /* MASONRY FIT - Preserva le proporzioni originali delle immagini con CSS columns */
        .masonry-fit-container {
            column-count: 1;
            column-gap: 16px;
        }

        .masonry-fit-item {
            break-inside: avoid;
            margin-bottom: 16px;
            width: 100%;
            overflow: hidden;
        }

        .masonry-fit-item img {
            display: block;
            width: 100%;
            height: auto;
            object-fit: contain;
        }

        @media (min-width: 768px) {
            .masonry-fit-container {
                column-count: 2;
                column-gap: 20px;
            }
            .masonry-fit-item {
                margin-bottom: 20px;
            }
        }

        @media (min-width: 1024px) {
            .masonry-fit-container {
                column-count: 3;
                column-gap: 24px;
            }
            .masonry-fit-item {
                margin-bottom: 24px;
            }
        }
        
        /* SLIDESHOW PRO - Controlli avanzati e thumbnails */
        .slideshow-pro {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }
        
        /* External navigation buttons for slideshow */
        .slideshow-navigation {
            z-index: 20;
        }
        
        .slideshow-prev,
        .slideshow-next {
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            z-index: 30;
        }
        
        .slideshow-prev:hover,
        .slideshow-next:hover {
            background: rgba(0, 0, 0, 0.95);
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-50%) scale(1.1);
        }
        
        .slideshow-prev:active,
        .slideshow-next:active {
            transform: translateY(-50%) scale(0.95);
        }
        
        /* Positioning adjustments for mobile */
        @media (max-width: 768px) {
            .slideshow-prev {
                left: 8px;
                width: 40px;
                height: 40px;
