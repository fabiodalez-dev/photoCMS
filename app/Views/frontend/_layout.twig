        #slb-img { width: 100%; height: auto; max-height: 72vh; object-fit: contain; display:block; margin: 0 auto; }
        #slb-caption { margin-top: .9rem; text-align: center; color:#ddd; font-size: .9rem; }
        .slb-btn { position:absolute; top: 50%; transform: translateY(-50%); background: rgba(255,255,255,.12); border:1px solid rgba(255,255,255,.22); color:#fff; width: 44px; height: 44px; border-radius: 9999px; display:flex; align-items:center; justify-content:center; cursor:pointer; z-index: 10001; }
        .slb-prev { left: 2%; }
        .slb-next { right: 2%; }
        .slb-close { position: absolute; top: 10px; right: 10px; width: 40px; height: 40px; border-radius: 9999px; background: rgba(255,255,255,.12); border:1px solid rgba(255,255,255,.2); display:flex; align-items:center; justify-content:center; cursor:pointer; }
        @media (max-width: 1024px) { #slb-content .slb-media { width: min(80%, 1200px); } }
        @media (max-width: 640px)  { #slb-content .slb-media { width: 92%; } .slb-prev { left: 8px; } .slb-next { right: 8px; } }
        
        /* PhotoSwipe image sizing fix - minimal approach that works */
        .pswp__img {
            object-fit: contain !important;
        }
        
        /* Ensure proper container support */
        .pswp__content {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        /* Migliorate PhotoSwipe caption con responsive design */
        .pswp__custom-caption {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: 56px;
            max-width: 95vw;
            color: #fff;
            text-align: center;
            font-size: 14px;
            line-height: 1.3;
            z-index: 2;
            background: rgba(0,0,0,0.7);
            padding: 12px 20px;
            border-radius: 6px;
            /* removed blur for clarity and performance */
        }
        
        /* Responsive adjustments per caption */
        @media (max-width: 640px) {
            .pswp__custom-caption {
                max-width: 98vw;
                bottom: 36px;
                padding: 8px 12px;
                font-size: 13px;
            }
        }
        
        .pswp__custom-caption .mb-2 {
            margin-bottom: 8px;
            font-weight: 500;
            font-size: 15px;
        }
        
        .pswp__custom-caption .flex {
            flex-wrap: wrap;
            gap: 8px 12px;
            justify-content: center;
            font-size: 13px;
            opacity: 0.9;
        }
        
        /* Position navigation arrows outside the image */
        .pswp__button--arrow--prev,
        .pswp__button--arrow--next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 60px;
            height: 60px;
            margin: 0;
            padding: 10px;
        }
        
        .pswp__button--arrow--prev {
            left: 20px;
        }
        
        .pswp__button--arrow--next {
            right: 20px;
        }
        
        /* MASONRY FIT - Preserva le proporzioni originali delle immagini */
        .masonry-fit-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 16px;
            align-items: start;
        }
        
        .masonry-fit-item {
            width: 100%;
            height: auto;
            overflow: hidden;
        }
        
        .masonry-fit-item img {
            display: block;
            width: 100%;
            height: auto;
            object-fit: contain;
        }
        
        @media (min-width: 768px) {
            .masonry-fit-container {
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 20px;
            }
        }
        
        @media (min-width: 1024px) {
            .masonry-fit-container {
                grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
                gap: 24px;
            }
        }
        
        /* SLIDESHOW PRO - Controlli avanzati e thumbnails */
        .slideshow-pro {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }
        
        /* External navigation buttons for slideshow */
        .slideshow-navigation {
            z-index: 20;
        }
        
        .slideshow-prev,
        .slideshow-next {
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            z-index: 30;
        }
        
        .slideshow-prev:hover,
        .slideshow-next:hover {
            background: rgba(0, 0, 0, 0.95);
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-50%) scale(1.1);
        }
        
        .slideshow-prev:active,
        .slideshow-next:active {
            transform: translateY(-50%) scale(0.95);
        }
        
        /* Positioning adjustments for mobile */
        @media (max-width: 768px) {
            .slideshow-prev {
                left: 8px;
                width: 40px;
                height: 40px;
            }
            
            .slideshow-next {
                right: 8px;
                width: 40px;
                height: 40px;
            }
        }
        
        .slideshow-thumbs {
            margin-top: 24px;
        }
        
        .slideshow-thumbs .swiper-slide {
            border-radius: 8px;
            overflow: hidden;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }
        
        .slideshow-thumbs .swiper-slide-thumb-active {
            border-color: #000;
            transform: scale(1.1);
        }
        
        .slideshow-thumbs .swiper-slide:hover {
            border-color: rgba(0, 0, 0, 0.3);
            transform: scale(1.05);
        }
        
        /* Custom pagination styling */
        .slideshow-pro .swiper-pagination {
            position: absolute;
            bottom: 16px;
            left: 50%;
            transform: translateX(-50%);
        }
        
        .slideshow-pro .swiper-pagination-bullet {
            background: rgba(255, 255, 255, 0.5);
            border: 1px solid rgba(0, 0, 0, 0.2);
            opacity: 1;
            transition: all 0.3s ease;
        }
        
        .slideshow-pro .swiper-pagination-bullet-active {
            background: rgba(0, 0, 0, 0.8);
            border-color: rgba(255, 255, 255, 0.3);
            transform: scale(1.2);
        }
        
        /* GRID MINIMAL - Hover eleganti e spacing aumentato */
        .grid-minimal-item {
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .grid-minimal-item:hover {
            transform: translateY(-8px) scale(1.02);
        }
        
        /* MOSAIC PRO - Layout irregolare con elementi in evidenza */
        .mosaic-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-auto-rows: 200px;
            gap: 12px;
            grid-auto-flow: row dense;
        }
        
        .mosaic-item {
            border-radius: 12px;
            overflow: hidden;
            position: relative;
        }
        
        .mosaic-featured {
            grid-column: span 2;
            grid-row: span 2;
        }
        
        .mosaic-normal {
            grid-column: span 1;
            grid-row: span 1;
        }
        
        /* Variazioni dinamiche per gli elementi mosaic */
        .mosaic-item[data-index="1"], .mosaic-item[data-index="7"], .mosaic-item[data-index="13"] {
            grid-row: span 1.5;
        }
        
        .mosaic-item[data-index="4"], .mosaic-item[data-index="10"], .mosaic-item[data-index="16"] {
            grid-column: span 1.5;
        }
        
        @media (max-width: 1024px) {
            .mosaic-container {
                grid-template-columns: repeat(3, 1fr);
            }
        }
        
        @media (max-width: 768px) {
            .mosaic-container {
                grid-template-columns: repeat(2, 1fr);
                grid-auto-rows: 150px;
            }
            
            .mosaic-featured {
                grid-column: span 2;
                grid-row: span 1;
            }
        }
        
        /* CAROUSEL FLOW - Scroll orizzontale fluido */
        .carousel-flow-container {
            margin: 0 -1rem;
            padding: 0 1rem;
        }
        
        .carousel-flow {
            cursor: grab;
        }
        
        .carousel-flow:active {
            cursor: grabbing;
        }
        
        .carousel-flow .swiper-slide {
            transition: all 0.3s ease;
            border-radius: 16px;
            overflow: hidden;
        }
        
        .carousel-flow .swiper-slide:hover {
            transform: scale(1.05) translateY(-10px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
            z-index: 10;
        }
        
        /* POLAROID VINTAGE - Effetto fotografico retrò */
        .polaroid-container {
            position: relative;
            min-height: 70vh;
            background: radial-gradient(circle at 30% 70%, #8b4513, #a0522d, #cd853f);
            background-size: 200% 200%;
            animation: polaroidBg 20s ease infinite;
        }
        
        @keyframes polaroidBg {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        
        .polaroid-item {
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 1;
        }
        
        .polaroid-item:hover {
            transform: rotate(0deg) !important;
            scale: 1.2;
            z-index: 100;
            filter: none !important;
        }
        
        .polaroid-item a {
            display: block;
            background: #ffffff;
            border-radius: 2px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3),
                        0 0 0 1px rgba(255, 255, 255, 0.8) inset;
            transform-origin: center center;
            transition: all 0.3s ease;
        }
        
        .polaroid-item:hover a {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5),
                        0 0 0 1px rgba(255, 255, 255, 0.9) inset;
        }
        
        .polaroid-item img {
            filter: sepia(0.3) contrast(1.2) brightness(1.1) saturate(0.8);
            transition: filter 0.3s ease;
        }
        
        .polaroid-item:hover img {
            filter: sepia(0.1) contrast(1.1) brightness(1.05) saturate(1);
        }
        
        /* Font handwriting personalizzato */
        .font-handwriting {
            font-family: 'Kalam', cursive;
        }
        
        /* Responsive adjustments per polaroid */
        @media (max-width: 768px) {
            .polaroid-container {
                min-height: 50vh;
                padding: 1rem;
            }
            
            .polaroid-item {
