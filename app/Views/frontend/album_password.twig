{% extends "frontend/_layout.twig" %}

{% block content %}
<div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
  <h1 class="text-2xl md:text-3xl font-semibold">{{ album.title|e }}</h1>
  <p class="mt-2 text-neutral-600">Questo album Ã¨ protetto da password.</p>
  {% if error %}
  <div class="mt-4 bg-red-50 border border-red-200 text-red-800 px-4 py-2 rounded">Password non corretta</div>
  {% endif %}
  <form method="post" action="{{ base_path }}/album/{{ album.slug }}/unlock" class="mt-6 max-w-sm mx-auto text-left">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <label for="album-password" class="block text-sm mb-1">Password</label>
    <input type="password" id="album-password" name="password" autocomplete="current-password" class="w-full border border-neutral-300 rounded px-3 py-2" required>
    <button type="submit" class="mt-4 w-full bg-black text-white px-4 py-2 rounded hover:bg-neutral-800">Sblocca</button>
  </form>
</div>
{% endblock %}

