    {% set cols = template_settings.columns is defined ? template_settings.columns : 3 %}
    {% if cols is iterable %}
        {% set desktop_cols = cols.desktop is defined ? cols.desktop : 3 %}
        {% set tablet_cols = cols.tablet is defined ? cols.tablet : (desktop_cols > 2 ? 2 : desktop_cols) %}
        {% set mobile_cols = cols.mobile is defined ? cols.mobile : (desktop_cols > 2 ? 1 : desktop_cols) %}
    {% else %}
        {% set desktop_cols = cols %}
        {% set tablet_cols = desktop_cols > 2 ? 2 : desktop_cols %}
