{% extends "frontend/_layout.twig" %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Album header -->
    <div class="max-w-4xl mx-auto text-center pb-12">
        <div class="mb-4">
            <a href="/category/{{ album.category_slug }}" class="text-sm text-neutral-600 hover:text-black transition-colors">
                {{ album.category_name|e }}
            </a>
        </div>
        
        <h1 class="text-3xl md:text-4xl font-light text-black mb-6">
            {{ album.title|e }}
        </h1>
        
        {% if album.excerpt %}
        <p class="text-lg text-neutral-600 leading-relaxed mb-6">
            {{ album.excerpt|e }}
        </p>
        {% endif %}
        
        <div class="flex flex-wrap justify-center gap-4 text-sm text-neutral-500 mb-6">
            {% if album.shoot_date %}
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime="{{ album.shoot_date }}">{{ album.shoot_date|date('F Y') }}</time>
            </div>
            {% endif %}
            
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {{ album.images_count }} {{ album.images_count == 1 ? 'image' : 'images' }}
            </div>
        </div>
        
        {% if album.tags %}
        <div class="flex flex-wrap justify-center gap-2">
            {% for tag in album.tags %}
            <a href="/tag/{{ tag.slug }}" class="text-xs text-neutral-500 hover:text-black border border-neutral-200 rounded px-2 py-1 transition-colors">
                #{{ tag.name|e }}
            </a>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    
    <!-- Album body -->
    {% if album.body %}
    <div class="max-w-3xl mx-auto prose prose-neutral mb-12">
        {{ album.body|raw }}
    </div>
    {% endif %}
    
    <!-- Images gallery -->
    {% set layout = template_settings.layout|default('grid') %}
    {% set masonry = template_settings.masonry|default(false) %}
    
    {# Handle both old integer format and new responsive object format #}
    {% if template_settings.columns.desktop is defined %}
        {% set desktop_cols = template_settings.columns.desktop %}
        {% set tablet_cols = template_settings.columns.tablet %}
        {% set mobile_cols = template_settings.columns.mobile %}
    {% else %}
        {% set desktop_cols = template_settings.columns|default(3) %}
        {% set tablet_cols = (desktop_cols > 2) ? 2 : desktop_cols %}
        {% set mobile_cols = (desktop_cols > 2) ? 1 : desktop_cols %}
    {% endif %}
    
    {% if layout == 'slideshow' %}
        <div id="images-gallery" class="max-w-4xl mx-auto">
            <div class="swiper gallery-swiper">
                <div class="swiper-wrapper">
                    {% for image in images %}
                        <div class="swiper-slide">
                            {% include "frontend/_image_item.twig" %}
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    {% elseif layout == 'fullscreen' %}
        <div id="images-gallery" class="grid grid-cols-1 lg:grid-cols-2 gap-2">
            {% for image in images %}
                {% include "frontend/_image_item.twig" %}
            {% endfor %}
        </div>
    {% elseif masonry %}
        <div id="images-gallery" class="masonry-grid" style="column-count: {{ desktop_cols }};">
            {% for image in images %}
                <div class="masonry-item">
                    {% include "frontend/_image_item.twig" %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        {# Generate responsive grid classes #}
        {% set mobile_class = 'grid-cols-' ~ mobile_cols %}
        {% set tablet_class = 'md:grid-cols-' ~ tablet_cols %}  
        {% set desktop_class = 'lg:grid-cols-' ~ desktop_cols %}
        
        <div id="images-gallery" class="grid {{ mobile_class }} {{ tablet_class }} {{ desktop_class }} gap-4">
            {% for image in images %}
                {% include "frontend/_image_item.twig" %}
            {% endfor %}
        </div>
    {% endif %}
    
    {% if images|length == 0 %}
    <div class="text-center py-20">
        <h2 class="text-2xl font-light text-neutral-600 mb-4">No images in this album yet</h2>
        <p class="text-neutral-500">Images will appear here once uploaded.</p>
    </div>
    {% endif %}
    
    <!-- Image filters (if multiple formats/processes) -->
    {% set processes = images|map(i => i.process)|unique|filter %}
    {% set cameras = images|map(i => i.custom_camera ?: (i.exif_display.camera ?? null))|unique|filter %}
    {% if processes|length > 1 or cameras|length > 1 %}
    <div class="mt-8 p-4 bg-neutral-50 rounded">
        <h3 class="text-sm font-medium mb-3">Filter images:</h3>
        <div class="flex flex-wrap gap-4 text-sm">
            {% if processes|length > 1 %}
            <div class="flex items-center space-x-2">
                <label>Process:</label>
                <select id="image-filter-process" class="border border-neutral-300 rounded px-2 py-1 text-xs">
                    <option value="">All</option>
                    {% for process in processes %}
                    <option value="{{ process }}">{{ process|title }}</option>
                    {% endfor %}
                </select>
            </div>
            {% endif %}
            
            {% if cameras|length > 1 %}
            <div class="flex items-center space-x-2">
                <label>Camera:</label>
                <select id="image-filter-camera" class="border border-neutral-300 rounded px-2 py-1 text-xs">
                    <option value="">All</option>
                    {% for camera in cameras %}
                    <option value="{{ camera }}">{{ camera }}</option>
                    {% endfor %}
                </select>
            </div>
            {% endif %}
            
            <button id="apply-image-filters" class="bg-black text-white px-3 py-1 text-xs rounded hover:bg-neutral-800">
                Apply
            </button>
        </div>
    </div>
    {% endif %}

</div>

<!-- Related albums -->
{% if related_albums|length > 0 %}
<section class="border-t border-neutral-200 mt-16 pt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-light text-center mb-12">More from {{ album.category_name|e }}</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for related in related_albums %}
                {% include "frontend/_album_card.twig" with {'album': related} %}
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}
{% endblock %}

{% block scripts %}
<script>
// Template settings
const templateSettings = {{ template_settings ? template_settings|json_encode|raw : '{}' }};
const layout = templateSettings.layout || 'grid';
const masonry = templateSettings.masonry || false;

// Initialize layout-specific features
if (layout === 'slideshow') {
    // Initialize Swiper if available
    if (typeof Swiper !== 'undefined') {
        new Swiper('.gallery-swiper', {
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            loop: templateSettings.photoswipe?.loop || true,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            effect: 'fade',
            fadeEffect: {
                crossFade: true
            },
        });
    }
}
// Note: Masonry is handled with pure CSS columns now

// Image filtering
document.getElementById('apply-image-filters')?.addEventListener('click', async function() {
    const albumId = {{ album.id }};
    const process = document.getElementById('image-filter-process')?.value || '';
    const camera = document.getElementById('image-filter-camera')?.value || '';
    
    const params = new URLSearchParams();
    if (process) params.set('process', process);
    if (camera) params.set('camera', camera);
    
    try {
        const response = await fetch(`/api/album/${albumId}/images?${params}`);
        const data = await response.json();
        
        const gallery = document.getElementById('images-gallery');
        gallery.innerHTML = data.itemsHtml;
        
        // Masonry is handled with CSS, no need to reinitialize
        
        // Animate filtered results
        if (typeof gsap !== 'undefined') {
            gsap.from('.image-item', {
                opacity: 0,
                y: 20,
                duration: 0.6,
                stagger: 0.03
            });
        }
        
    } catch (error) {
        console.error('Failed to filter images:', error);
    }
});

// Enhanced lightbox with metadata and template settings
function openLightbox(imageId) {
    const imageItem = document.querySelector(`[data-image-id="${imageId}"]`);
    if (!imageItem) return;
    
    const dataScript = imageItem.querySelector('.image-data');
    if (!dataScript) return;
    
    const imageData = JSON.parse(dataScript.textContent);
    
    // Build caption with metadata
    let caption = '';
    if (imageData.caption) {
        caption += `<div class="mb-2">${imageData.caption}</div>`;
    }
    
    if (imageData.metadata && Object.keys(imageData.metadata).length > 0) {
        const metadata = [];
        if (imageData.metadata.camera) metadata.push(imageData.metadata.camera);
        if (imageData.metadata.lens) metadata.push(imageData.metadata.lens);
        if (imageData.metadata.aperture) metadata.push(imageData.metadata.aperture);
        if (imageData.metadata.shutter) metadata.push(imageData.metadata.shutter);
        if (imageData.metadata.iso) metadata.push(imageData.metadata.iso);
        if (imageData.metadata.film) metadata.push(imageData.metadata.film);
        
        if (metadata.length > 0) {
            caption += `<div class="text-xs text-neutral-400 mt-2">${metadata.join(' â€¢ ')}</div>`;
        }
    }
    
    const items = [{
        src: imageData.src,
        width: imageData.width,
        height: imageData.height,
        alt: imageData.alt,
        caption: caption
    }];
    
    // Use template-specific PhotoSwipe settings
    const photoswipeSettings = templateSettings.photoswipe || {};
    const lightboxOptions = {
        dataSource: items,
        index: 0,
        showHideAnimationType: 'fade',
        loop: photoswipeSettings.loop !== false,
        zoom: photoswipeSettings.zoom !== false,
        counter: photoswipeSettings.counter !== false,
        arrowKeys: photoswipeSettings.arrowKeys !== false,
        escKey: photoswipeSettings.escKey !== false,
        bgOpacity: photoswipeSettings.bgOpacity || 0.8,
        spacing: photoswipeSettings.spacing || 0.12,
        allowPanToNext: photoswipeSettings.allowPanToNext || false
    };
    
    if (typeof PhotoSwipe !== 'undefined') {
        const lightbox = new PhotoSwipe(lightboxOptions);
        lightbox.init();
    }
}
</script>

{% if masonry %}
<style>
/* Masonry responsive adjustments */
.masonry-grid {
    column-count: {{ desktop_cols }};
}
@media (max-width: 1023px) {
    .masonry-grid {
        column-count: {{ tablet_cols }} !important;
    }
}
@media (max-width: 767px) {
    .masonry-grid {
        column-count: {{ mobile_cols }} !important;
    }
}
</style>
{% endif %}
{% endblock %}