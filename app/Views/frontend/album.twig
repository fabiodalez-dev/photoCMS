{% block scripts %}
<script nonce="{{ csp_nonce() }}">
// Global base path for API calls
window.basePath = '{{ base_path }}';

// Reusable masonry_fit initialization helper - Balanced Flexbox Columns approach
// Distributes items across columns to minimize height differences while filling left-to-right
window.initAlbumMasonryFit = function(container, options) {
    if (!container) return null;

    // Cleanup existing instance if present
    if (container._masonryFitInstance && container._masonryFitInstance.destroy) {
        container._masonryFitInstance.destroy();
    }

    const gap = options.gap || 16;
    const colsDesktop = options.colsDesktop || 5;
    const colsTablet = options.colsTablet || 3;
    const colsMobile = options.colsMobile || 2;

    let columnWrappers = [];
    const originalItems = Array.from(container.querySelectorAll('.masonry-item'));

    function getColumnCount() {
        const width = window.innerWidth;
        if (width >= 1024) return colsDesktop;
        if (width >= 768) return colsTablet;
        return colsMobile;
    }

    function createColumnStructure(numCols) {
        // Clear existing column wrappers
        columnWrappers.forEach(w => w.remove());
        columnWrappers = [];

        // Create flex container
        container.style.display = 'flex';
        container.style.flexWrap = 'nowrap';
        container.style.gap = gap + 'px';
        container.style.alignItems = 'flex-start';

        // Create column wrappers
        for (let i = 0; i < numCols; i++) {
            const col = document.createElement('div');
            col.className = 'masonry-column';
            col.style.flex = '1';
            col.style.display = 'flex';
            col.style.flexDirection = 'column';
            col.style.gap = gap + 'px';
            col.style.minWidth = '0'; // Allow flex shrink
            columnWrappers.push(col);
            container.appendChild(col);
        }
    }

    function distributeItems() {
        const numCols = getColumnCount();
        createColumnStructure(numCols);

        // Track column heights
        const columnHeights = new Array(numCols).fill(0);

        // Pre-calculate all item heights for smarter distribution
        const colWidth = container.offsetWidth / numCols - gap * (numCols - 1) / numCols;
        const itemHeights = originalItems.map(item => {
            const img = item.querySelector('img');
            if (img && img.dataset.aspectRatio) {
                return colWidth * parseFloat(img.dataset.aspectRatio);
            }
            return item.offsetHeight || colWidth * 0.75;
        });

        // Distribute items using balanced greedy algorithm
        // Prefers leftmost column among those within threshold of shortest
        const heightThreshold = colWidth * 0.15; // Allow 15% tolerance

        originalItems.forEach((item, idx) => {
            // Find shortest column height
            const shortestHeight = Math.min(...columnHeights);

            // Find leftmost column within threshold of shortest
            let targetIdx = 0;
            for (let i = 0; i < numCols; i++) {
                if (columnHeights[i] <= shortestHeight + heightThreshold) {
                    targetIdx = i;
                    break;
                }
            }

            // Move item to target column
            item.style.width = '100%';
            item.style.marginBottom = '0'; // Gap handled by flex container
            columnWrappers[targetIdx].appendChild(item);

            // Update column height
            columnHeights[targetIdx] += itemHeights[idx] + gap;
        });
    }

    // Setup IntersectionObserver for viewport visibility
    const preloadedItems = new WeakSet();
    let viewportObserver = null;

    if ('IntersectionObserver' in window) {
        viewportObserver = new IntersectionObserver(function(entries) {
            entries.forEach(function(entry) {
                if (entry.isIntersecting) {
                    entry.target.classList.add('in-viewport');
                    const img = entry.target.querySelector('img');
                    if (img && !preloadedItems.has(entry.target)) {
                        preloadedItems.add(entry.target);
                        img.loading = 'eager';
                    }
                } else {
                    entry.target.classList.remove('in-viewport');
                }
            });
        }, { rootMargin: '200% 0px 200% 0px', threshold: 0 });
    }

    distributeItems();

    // Observe all items
    if (viewportObserver) {
        originalItems.forEach(function(item) {
            viewportObserver.observe(item);
        });
    }

    // Cleanup function to prevent memory leaks
    function destroy() {
        if (viewportObserver) {
            viewportObserver.disconnect();
            viewportObserver = null;
        }
        columnWrappers.forEach(w => w.remove());
        columnWrappers = [];
    }

    // Return object with update function for resize handling
    const instance = {
        distributeItems,
        viewportObserver,
        destroy,
        // Compatibility with existing code expecting msnry
        msnry: { layout: distributeItems },
        updateItemWidths: distributeItems
    };

    // Store reference on container for cleanup
    container._masonryFitInstance = instance;

    return instance;
};

// Template settings
const templateSettings = JSON.parse('{{ template_settings ? template_settings|json_encode|e('js') : '{}' }}');
const layout = templateSettings.layout || 'grid';
const masonry = templateSettings.masonry || false;

// Initialize layout-specific features
if (layout === 'slideshow') {
    // Initialize Swiper if available
    if (typeof Swiper !== 'undefined') {
        new Swiper('.gallery-swiper', {
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            loop: templateSettings.photoswipe?.loop || true,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            effect: 'fade',
            fadeEffect: {
                crossFade: true
            },
        });
    }
}
// Masonry.js initialization - only for old masonry layout (masonry_fit uses Masonry.js with horizontalOrder)
if (masonry && layout !== 'masonry_fit' && typeof Masonry !== 'undefined') {
    const container = document.getElementById('images-gallery');
    if (container) {
        const gap = parseInt(container.dataset.masonryGap) || 16;
        const masonryOptions = {
            itemSelector: '.masonry-item',
            percentPosition: true,
            gutter: gap,
            transitionDuration: '0.3s'
        };

        const initMasonry = () => {
            if (typeof imagesLoaded !== 'undefined') {
                imagesLoaded(container, function(){
                    new Masonry(container, masonryOptions);
                    if (window.lenisResize) window.lenisResize();
                });
            } else {
                new Masonry(container, masonryOptions);
                if (window.lenisResize) window.lenisResize();
            }
        };
        if (document.readyState === 'complete') {
            initMasonry();
        } else {
            window.addEventListener('load', initMasonry);
        }
    }
}

// masonry_fit uses a custom flexbox column approach for balanced distribution
if (layout === 'masonry_fit') {
    const container = document.getElementById('images-gallery');
    if (container) {
        const options = {
            gap: parseInt(container.dataset.gap) || 16,
            colsDesktop: parseInt(container.dataset.colsDesktop) || 5,
            colsTablet: parseInt(container.dataset.colsTablet) || 3,
            colsMobile: parseInt(container.dataset.colsMobile) || 2
        };

        // Single resize handler that always uses container._masonryFitInstance
        // This ensures it works correctly even after filter re-initialization
        let resizeTimer = null;
        const resizeHandler = function() {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(function() {
                const instance = container._masonryFitInstance;
                if (instance) {
                    instance.updateItemWidths();
                    instance.msnry.layout();
                }
            }, 150);
        };

        // Store handler reference on container for cleanup
        if (container._masonryFitResizeHandler) {
            window.removeEventListener('resize', container._masonryFitResizeHandler);
        }
        container._masonryFitResizeHandler = resizeHandler;
        window.addEventListener('resize', resizeHandler);

        const initMasonryFit = () => {
            window.initAlbumMasonryFit(container, options);
            if (window.lenisResize) window.lenisResize();
        };

        if (typeof imagesLoaded !== 'undefined') {
            imagesLoaded(container, initMasonryFit);
        } else {
            initMasonryFit();
        }
    }
}

// Magazine Split autoscroll initializer
function initMagazineAutoscroll() {
    try {
        var container = document.getElementById('images-gallery') || document;
        var isMobile = window.matchMedia('(max-width: 767px)').matches;
        var isTablet = window.matchMedia('(min-width: 768px) and (max-width: 1199px)').matches;
        var isDesktop = window.matchMedia('(min-width: 1200px)').matches;

        var mob = container.querySelector('.m-mobile-wrap');
        var tablet = container.querySelector('.m-tablet-wrap');
        var desk = container.querySelector('.m-desktop-wrap');

        if (mob) mob.style.display = isMobile ? 'block' : 'none';
        if (tablet) tablet.style.display = isTablet ? 'flex' : 'none';
        if (desk) desk.style.display = isDesktop ? 'flex' : 'none';

        container.querySelectorAll('.m-col').forEach(function(col) {
            var track = col.querySelector('.m-track'); if (!track) return;
            track.style.animation = 'none';
            track.offsetHeight;
            var dir = (col.getAttribute('data-direction') || 'down').toLowerCase();
            var dur = (getComputedStyle(col).getPropertyValue('--m-duration') || '60s').trim() || '60s';
            var anim = (dir === 'up' ? 'mScrollUp' : 'mScrollDown') + ' ' + dur + ' linear infinite';
            track.style.animation = anim;
            track.style.animationPlayState = 'running';
        });
    } catch(e) {
        console.error('initMagazineAutoscroll error:', e);
    }
}

// Initialize magazine if active
if (layout === 'magazine') {
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(initMagazineAutoscroll, 100);
    });
}

// Image filtering
document.getElementById('apply-image-filters')?.addEventListener('click', async function() {
    const albumId = {{ album.id }};
    const process = document.getElementById('image-filter-process')?.value || '';
    const camera = document.getElementById('image-filter-camera')?.value || '';
    
    const params = new URLSearchParams();
    if (process) params.set('process', process);
    if (camera) params.set('camera', camera);
    
    try {
        const response = await fetch(`${window.basePath}/api/album/${albumId}/images?${params}`);
        const data = await response.json();
        
        const gallery = document.getElementById('images-gallery');
        gallery.innerHTML = data.itemsHtml;

        // Re-initialize layout after filter
        if (layout === 'masonry_fit') {
            // masonry_fit: use reusable helper (doesn't require Masonry library)
            const options = {
                gap: parseInt(gallery.dataset.gap) || 16,
                colsDesktop: parseInt(gallery.dataset.colsDesktop) || 5,
                colsTablet: parseInt(gallery.dataset.colsTablet) || 3,
                colsMobile: parseInt(gallery.dataset.colsMobile) || 2
            };

            const initFiltered = () => {
                window.initAlbumMasonryFit(gallery, options);
                if (window.lenisResize) window.lenisResize();
            };

            if (typeof imagesLoaded !== 'undefined') {
                imagesLoaded(gallery, initFiltered);
            } else {
                initFiltered();
            }
        } else if (masonry && typeof Masonry !== 'undefined') {
            // Regular masonry layout - requires Masonry library
            // Destroy existing instance before reinit
            if (gallery._masonryInstance) {
                gallery._masonryInstance.destroy();
                gallery._masonryInstance = null;
            }

            const initMasonry = function() {
                const msnry = new Masonry(gallery, { itemSelector: '.masonry-item', percentPosition: true });
                gallery._masonryInstance = msnry;
            };

            if (typeof imagesLoaded !== 'undefined') {
                imagesLoaded(gallery, initMasonry);
            } else {
                initMasonry();
            }
        }
        
        // Animate filtered results - use direct children only
        if (typeof gsap !== 'undefined') {
            const newItems = Array.from(gallery.children).filter(n => !n.hasAttribute('data-animated'));
            if (newItems.length > 0) {
                // Use fromTo with explicit values - set data-animated in onComplete
                gsap.fromTo(newItems,
                    { opacity: 0, scale: 0.9 },
                    {
                        opacity: 1,
                        scale: 1,
                        duration: 0.35,
                        stagger: { amount: Math.min(0.25, newItems.length * 0.02), from: 'start' },
                        ease: 'power3.out',
                        onComplete: () => newItems.forEach(n => n.setAttribute('data-animated', '1'))
                    }
                );
            }
        }
        
    } catch (error) {
        console.error('Failed to filter images:', error);
    }
});

// Initialize PhotoSwipe lightbox (handled by main layout)

// GSAP Animations for album header/meta elements - runs ONCE on load
document.addEventListener('DOMContentLoaded', function() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReducedMotion || typeof gsap === 'undefined') return;

    if (typeof ScrollTrigger !== 'undefined') {
        gsap.registerPlugin(ScrollTrigger);
    }

    // All animatable header elements - animate once with stagger
    const allHeaderElements = document.querySelectorAll('[data-gsap="breadcrumb"], [data-gsap="category"], [data-gsap="hero-title"], [data-gsap="title"], [data-gsap="hero-excerpt"], [data-gsap="excerpt"], [data-gsap="hero-meta"], [data-gsap="meta"], [data-gsap="hero-tags"], [data-gsap="tags"], [data-gsap="body"]');

    // Filter to only existing elements not yet animated
    const elements = Array.from(allHeaderElements).filter(el => !el.hasAttribute('data-animated'));
    if (elements.length === 0) return;

    // Mark as animated immediately to prevent re-animation
    elements.forEach(el => el.setAttribute('data-animated', '1'));

    // Use fromTo for guaranteed initial state
    gsap.fromTo(elements,
        { opacity: 0, y: 15 },
        {
            opacity: 1,
            y: 0,
            duration: 0.5,
            stagger: 0.08,
            ease: 'power2.out'
        }
    );

    // Fallback: show elements if animation doesn't complete in 3 seconds
    setTimeout(() => {
        elements.forEach(el => {
            if (getComputedStyle(el).opacity === '0') {
                el.style.opacity = '1';
                el.style.transform = 'none';
            }
        });
    }, 3000);

    // NOTE: #images-gallery animation is handled by _layout.twig animateGalleryOnce()

    // Related albums section with scroll trigger
    const relatedTitle = document.querySelector('[data-gsap="related-title"]');
    if (relatedTitle && typeof ScrollTrigger !== 'undefined') {
        gsap.from(relatedTitle, {
            opacity: 0,
            y: 20,
            duration: 0.6,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: relatedTitle,
                start: 'top 90%',
                once: true
            }
        });
    }

    // Related album cards with stagger
    const relatedGrid = document.querySelector('[data-gsap="related-grid"]');
    if (relatedGrid && typeof ScrollTrigger !== 'undefined') {
        const cards = relatedGrid.querySelectorAll('.album-card');
        if (cards.length > 0) {
            gsap.from(cards, {
                opacity: 0,
                y: 30,
                duration: 0.7,
                stagger: 0.1,
                ease: 'power2.out',
                scrollTrigger: {
                    trigger: relatedGrid,
                    start: 'top 85%',
                    once: true
                }
            });
        }
    }

    // Subtle hover enhancement for image items (optional, GPU-accelerated)
    const allImageItems = document.querySelectorAll('.image-item');
    allImageItems.forEach(item => {
        item.addEventListener('mouseenter', function() {
            gsap.to(this, {
                scale: 1.02,
                duration: 0.3,
                ease: 'power2.out'
            });
        });

        item.addEventListener('mouseleave', function() {
            gsap.to(this, {
                scale: 1,
                duration: 0.3,
                ease: 'power2.out'
            });
        });
    });
});
