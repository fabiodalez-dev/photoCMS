<section class="pt-8 pb-16">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-light text-black mb-4">{{ home_settings.albums_title|default('Latest Albums')|e }}</h2>
    <p class="text-lg text-neutral-600 max-w-xl mx-auto">{{ home_settings.albums_subtitle|default('Discover my recent photographic work, from analog experiments to digital explorations.')|e }}</p>
  </div>

  {% if albums|length > 0 %}
  <div class="albums-carousel-container relative overflow-hidden">
    <div class="albums-carousel-track cursor-grab active:cursor-grabbing" id="albums-carousel">
      {% set repeats = 6 %}
      {% for r in 1..repeats %}
        {% for album in albums %}
          <div class="album-carousel-item flex-shrink-0 w-80 md:w-96">
            {% include "frontend/_album_card.twig" %}
          </div>
        {% endfor %}
      {% endfor %}
      <div class="album-carousel-item flex-shrink-0 w-16 md:w-24"></div>
    </div>
    <div class="albums-edge-left"></div>
    <div class="albums-edge-right"></div>
    <button class="albums-arrow albums-arrow-left" aria-label="{{ trans('general.previous') }}" type="button">&#10094;</button>
    <button class="albums-arrow albums-arrow-right" aria-label="{{ trans('general.next') }}" type="button">&#10095;</button>
  </div>
  {% else %}
  <div class="text-center py-20">
    <h2 class="text-2xl font-light text-neutral-600 mb-4">{{ home_settings.empty_title|default('No albums yet')|e }}</h2>
    <p class="text-neutral-500">{{ home_settings.empty_text|default('Check back soon for new work.')|e }}</p>
  </div>
  {% endif %}
</section>
