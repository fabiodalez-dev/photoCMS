    // Image modal logic (moved into init function to support SPA)
    function initImageModal() {
      const modal = document.getElementById('image-modal');
      if (!modal || modal._initialized) return;
      const closeBtn = document.getElementById('image-modal-close');
      const cancelBtn = document.getElementById('image-cancel');
      const form = document.getElementById('image-form');
      let currentId = null;
      
      function openModal(){ modal.classList.remove('hidden'); modal.classList.add('flex'); }
      function closeModal(){ modal.classList.add('hidden'); modal.classList.remove('flex'); currentId=null; }
      
      function fillForm(data, imageBox){
        document.getElementById('f-alt').value = data.alt_text || '';
        document.getElementById('f-caption').value = data.caption || '';
        document.getElementById('f-camera').value = data.camera_id || '';
        document.getElementById('f-lens').value = data.lens_id || '';
        document.getElementById('f-film').value = data.film_id || '';
        document.getElementById('f-developer').value = data.developer_id || '';
        document.getElementById('f-lab').value = data.lab_id || '';
        document.getElementById('f-custom-camera').value = data.custom_camera || '';
        document.getElementById('f-custom-lens').value = data.custom_lens || '';
        document.getElementById('f-custom-film').value = data.custom_film || '';
        document.getElementById('f-iso').value = data.iso || '';
        document.getElementById('f-shutter').value = data.shutter_speed || '';
        document.getElementById('f-aperture').value = data.aperture || '';
        document.getElementById('f-location').value = data.location_id || '';
        
        // Update modal preview image
        const preview = document.getElementById('modal-preview');
        const imgElement = imageBox?.querySelector('img');
        if (preview && imgElement) {
          // Use the preview image src instead of original_path
          preview.src = imgElement.src;
          preview.alt = data.alt_text || imgElement.alt || '';
        }
        
        // Update cover button state
        const coverBtn = document.getElementById('modal-cover-btn');
        if (coverBtn && imageBox) {
          const isCover = imageBox.querySelector('[data-cover-id].bg-green-600');
          coverBtn.className = isCover 
            ? 'flex-1 px-3 py-2 text-xs rounded border bg-green-600 text-white border-green-600'
            : 'flex-1 px-3 py-2 text-xs rounded border border-gray-300 text-gray-700 hover:bg-gray-50';
          coverBtn.innerHTML = isCover
            ? '<i class="fas fa-check mr-1"></i>{{ trans('admin.albums.current_cover') }}'
            : '<i class="fas fa-image mr-1"></i>{{ trans('admin.albums.set_as_cover') }}';
        }
      }
      
      // Expose global function for modal opening (used by refreshGalleryArea)
      window.openImageModal = function(imageId, data, imageBox) {
        currentId = imageId;
        fillForm(data, imageBox);
        openModal();
        if (form) form.action = `{{ base_path }}/admin/albums/{{ item.id }}/images/${imageId}/update`;
      };
      
      // Initial image click handler for opening modal (will be replaced after refresh)
      const grid = document.getElementById('images-grid');
      if (grid && !grid._modalClickHandler) {
        const handler = (e)=>{
          // Don't interfere with button clicks
          if (e.target.closest('[data-select-id]') || e.target.closest('[data-delete-id]') || e.target.closest('[data-cover-id]')) return;
          
          // Find the clicked image box
          const box = e.target.closest('[data-id]');
          if (!box) return;
          
          // Check if we clicked on the image area (not just anywhere in the card)
          const imageArea = e.target.closest('.aspect-square');
          if (!imageArea) return;
          
          const imageId = box.getAttribute('data-id');
          const data = {
            alt_text: box.getAttribute('data-alt_text'),
            caption: box.getAttribute('data-caption'),
            camera_id: box.getAttribute('data-camera_id'),
            lens_id: box.getAttribute('data-lens_id'),
            film_id: box.getAttribute('data-film_id'),
            developer_id: box.getAttribute('data-developer_id'),
            lab_id: box.getAttribute('data-lab_id'),
            location_id: box.getAttribute('data-location_id'),
            custom_camera: box.getAttribute('data-custom_camera'),
            custom_lens: box.getAttribute('data-custom_lens'),
            custom_film: box.getAttribute('data-custom_film'),
            iso: box.getAttribute('data-iso'),
            shutter_speed: box.getAttribute('data-shutter_speed'),
            aperture: box.getAttribute('data-aperture'),
          };
          window.openImageModal(imageId, data, box);
        };
        grid._modalClickHandler = handler;
        grid.addEventListener('click', handler);
      }
      
      // Modal action buttons
      const modalCoverBtn = document.getElementById('modal-cover-btn');
      const modalDeleteBtn = document.getElementById('modal-delete-btn');
      
      modalCoverBtn?.addEventListener('click', async () => {
        if (!currentId) return;
        try {
          const res = await fetch(`{{ base_path }}/admin/albums/{{ item.id }}/cover/${currentId}`, { 
            method:'POST', 
            headers: { 'X-CSRF-Token':'{{ csrf }}', 'Accept':'application/json' }
          });
          if (res.ok) {
            closeModal();
            // Use refreshGalleryArea instead of full page reload
            if (window.refreshGalleryArea) {
              window.refreshGalleryArea();
            } else {
              location.reload();
            }
            if (window.showToast) showToast('{{ trans('admin.albums.cover_set') }}', 'success');
          } else {
            if (window.showToast) showToast('{{ trans('admin.albums.error_cover') }}', 'error');
          }
        } catch (error) {
          console.error('Error setting cover:', error);
          if (window.showToast) showToast('{{ trans('admin.albums.error_cover') }}', 'error');
        }
      });

      modalDeleteBtn?.addEventListener('click', async () => {
        if (!currentId) return;
        if (!confirm('{{ trans('admin.albums.delete_image_confirm')|e('js') }}')) return;
        try {
          const res = await fetch(`{{ base_path }}/admin/albums/{{ item.id }}/images/${currentId}/delete`, { 
            method:'POST', 
            headers: { 'X-CSRF-Token':'{{ csrf }}', 'Accept':'application/json' }
          });
          if (res.ok) {
            closeModal();
            // Use refreshGalleryArea instead of manual DOM removal
            if (window.refreshGalleryArea) {
              window.refreshGalleryArea();
            } else {
              const card = document.querySelector(`[data-id="${currentId}"]`);
              card?.parentNode?.removeChild(card);
            }
            if (window.showToast) showToast('{{ trans('admin.albums.image_deleted') }}', 'success');
          } else {
            if (window.showToast) showToast('{{ trans('admin.albums.error_delete') }}', 'error');
          }
        } catch (error) {
          console.error('Error deleting image:', error);
          if (window.showToast) showToast('{{ trans('admin.albums.error_delete') }}', 'error');
        }
      });
      
      // Form submit handler
      form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!currentId) return;

        const formData = new FormData(form);
        try {
          const response = await fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          if (response.ok) {
            // Update the grid item's data attributes to reflect saved values
            const card = document.querySelector(`[data-id="${currentId}"]`);
            if (card) {
              card.setAttribute('data-alt_text', formData.get('alt_text') || '');
              card.setAttribute('data-caption', formData.get('caption') || '');
              card.setAttribute('data-camera_id', formData.get('camera_id') || '');
              card.setAttribute('data-lens_id', formData.get('lens_id') || '');
              card.setAttribute('data-film_id', formData.get('film_id') || '');
              card.setAttribute('data-developer_id', formData.get('developer_id') || '');
              card.setAttribute('data-lab_id', formData.get('lab_id') || '');
              card.setAttribute('data-location_id', formData.get('location_id') || '');
              card.setAttribute('data-iso', formData.get('iso') || '');
              card.setAttribute('data-shutter_speed', formData.get('shutter_speed') || '');
              card.setAttribute('data-aperture', formData.get('aperture') || '');
              card.setAttribute('data-custom_camera', formData.get('custom_camera') || '');
              card.setAttribute('data-custom_lens', formData.get('custom_lens') || '');
              card.setAttribute('data-custom_film', formData.get('custom_film') || '');
            }
            closeModal();
            if (window.showToast) showToast('{{ trans('admin.albums.changes_saved') }}', 'success');
          } else {
            if (window.showToast) showToast('{{ trans('admin.albums.error_save') }}', 'error');
          }
        } catch (error) {
          console.error('Error saving image:', error);
          if (window.showToast) showToast('{{ trans('admin.albums.error_save') }}', 'error');
        }
      });
      
      closeBtn?.addEventListener('click', closeModal);
      cancelBtn?.addEventListener('click', closeModal);
      
      // Close modal with ESC key (ensure single handler across SPA nav)
      if (document._imageModalEscHandler) {
        document.removeEventListener('keydown', document._imageModalEscHandler);
      }
      document._imageModalEscHandler = function(e) {
        if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
          closeModal();
        }
      };
      document.addEventListener('keydown', document._imageModalEscHandler);

      modal._initialized = true;
    }
  </script>
  
  <script nonce="{{ csp_nonce() }}">
    // Album page initialization - Compatible with SPA
    function initializeAlbumPage() {
      console.log('Initializing Album edit page...');
      
      // Initialize bulk selection functionality
      initBulkSelection();
      
      // Initialize password workflow
      initPasswordWorkflow();
      
      // Initialize image modal handlers
      initImageModal();
      
      // Initialize SEO preview updates
      initSeoPreview();
      
      // Initialize SEO accordion
      initSeoAccordion();
      
      // Initialize grid buttons (Cover/Delete)
      if (typeof bindGridButtons === 'function') {
        bindGridButtons();
