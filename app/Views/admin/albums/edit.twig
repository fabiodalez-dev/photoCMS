  <script>
    // Album page initialization - Compatible with SPA
    function initializeAlbumPage() {
      console.log('Initializing Album edit page...');
      
      // Initialize bulk selection functionality
      initBulkSelection();
      
      // Initialize password workflow
      initPasswordWorkflow();
      
      // Initialize image modal handlers
      initImageModal();
      
      // Initialize SEO preview updates
      initSeoPreview();
      
      // Initialize SEO accordion
      initSeoAccordion();
      
      // Initialize grid buttons (Cover/Delete)
      if (typeof bindGridButtons === 'function') {
        bindGridButtons();
      }
      
      console.log('Album edit page initialization completed');
    }
    
    function initBulkSelection() {
      const selectAll = document.getElementById('select-all');
      const bulkBtn = document.getElementById('bulk-delete');
      
      function getSelectedIds(){
        return Array.from(document.querySelectorAll('[data-select-id]:checked')).map(cb=>cb.getAttribute('data-select-id'));
      }
      
      function updateBulk(){ 
        const any = getSelectedIds().length>0; 
        if (bulkBtn) bulkBtn.disabled = !any; 
      }
      
      // Remove existing listeners to prevent duplicates
      selectAll?.removeEventListener('change', handleSelectAll);
      selectAll?.addEventListener('change', handleSelectAll);
      
      function handleSelectAll() {
        document.querySelectorAll('[data-select-id]').forEach(cb=>{ cb.checked = selectAll.checked; });
        updateBulk();
      }
      
      // Re-bind individual checkbox listeners
      document.querySelectorAll('[data-select-id]').forEach(cb => {
        cb.removeEventListener('change', updateBulk);
        cb.addEventListener('change', updateBulk);
      });
      
      // Bulk delete handler
      bulkBtn?.removeEventListener('click', handleBulkDelete);
      bulkBtn?.addEventListener('click', handleBulkDelete);
      
      async function handleBulkDelete() {
        const ids = getSelectedIds(); 
        if (!ids.length) return; 
        if (!confirm('Delete selected images?')) return;
        
        const res = await fetch(`{{ base_path }}/admin/albums/{{ item.id }}/images/bulk-delete`, { 
          method:'POST', 
          headers:{ 
            'Content-Type':'application/json',
            'X-CSRF-Token':'{{ csrf }}',
            'Accept':'application/json' 
          }, 
          body: JSON.stringify({ ids })
        });
        
        if (res.ok) {
          ids.forEach(id=>{ 
            const el = document.querySelector(`[data-id="${id}"]`); 
            el?.parentNode?.removeChild(el); 
          });
          if (window.showToast) showToast('Images deleted', 'success');
        } else {
          if (window.showToast) showToast('Deletion error', 'error');
        }
      }
    }
    
    function initPasswordWorkflow() {
      const removeBtn = document.getElementById('remove-password-btn');
      const changeBtn = document.getElementById('change-password-btn');
      const addBtn = document.getElementById('add-password-btn');
      
      const changeForm = document.getElementById('change-password-form');
      const addForm = document.getElementById('add-password-form');
      
      const cancelChangeBtn = document.getElementById('cancel-change-btn');
      const cancelAddBtn = document.getElementById('cancel-add-btn');
      
      const passwordClearInput = document.getElementById('password-clear-input');
      
      // Remove existing listeners to prevent duplicates
      removeBtn?.removeEventListener('click', handleRemovePassword);
      changeBtn?.removeEventListener('click', handleChangePassword);
      addBtn?.removeEventListener('click', handleAddPassword);
      cancelChangeBtn?.removeEventListener('click', handleCancelChange);
      cancelAddBtn?.removeEventListener('click', handleCancelAdd);
      
      // Add event listeners
      removeBtn?.addEventListener('click', handleRemovePassword);
      changeBtn?.addEventListener('click', handleChangePassword);
      addBtn?.addEventListener('click', handleAddPassword);
      cancelChangeBtn?.addEventListener('click', handleCancelChange);
      cancelAddBtn?.addEventListener('click', handleCancelAdd);
      
      function handleRemovePassword() {
        if (confirm('Remove password from album?')) {
          if (passwordClearInput) passwordClearInput.value = '1';
          document.getElementById('album-form')?.submit();
        }
      }
      
      function handleChangePassword() {
        changeBtn?.classList.add('hidden');
        changeForm?.classList.remove('hidden');
        document.getElementById('password-input')?.focus();
      }
      
      function handleCancelChange() {
        changeForm?.classList.add('hidden');
        changeBtn?.classList.remove('hidden');
        const input = document.getElementById('password-input');
        if (input) input.value = '';
      }
      
      function handleAddPassword() {
        addBtn?.classList.add('hidden');
        addForm?.classList.remove('hidden');
        document.getElementById('new-password-input')?.focus();
      }
      
      function handleCancelAdd() {
        addForm?.classList.add('hidden');
        addBtn?.classList.remove('hidden');
        const input = document.getElementById('new-password-input');
        if (input) input.value = '';
      }
    }
    
    // initImageModal is defined above and binds all modal handlers
    
    function initSeoPreview() {
      const updateSeoPreview = () => {
        const title = document.querySelector('input[name="title"]')?.value || '';
        const seoTitle = document.querySelector('input[name="seo_title"]')?.value || '';
        const excerpt = document.querySelector('textarea[name="excerpt"]')?.value || '';
        const seoDescription = document.querySelector('textarea[name="seo_description"]')?.value || '';
        const slug = document.querySelector('input[name="slug"]')?.value || '';
        
        const previewTitle = document.getElementById('seo-preview-title');
        const previewUrl = document.getElementById('seo-preview-url');
        const previewDescription = document.getElementById('seo-preview-description');
        
        if (previewTitle) previewTitle.textContent = seoTitle || title || 'Album Title';
        if (previewUrl) previewUrl.textContent = `{{ base_path }}/album/${slug || '{{ item.slug }}' || 'album-slug'}`;
        if (previewDescription) previewDescription.textContent = seoDescription || excerpt || 'Professional photo gallery.';
      };
      
      // Remove existing listeners to prevent duplicates
      const titleInput = document.querySelector('input[name="title"]');
      const seoTitleInput = document.querySelector('input[name="seo_title"]');
      const excerptTextarea = document.querySelector('textarea[name="excerpt"]');
      const seoDescTextarea = document.querySelector('textarea[name="seo_description"]');
      const slugInput = document.querySelector('input[name="slug"]');
      
      titleInput?.removeEventListener('input', updateSeoPreview);
      seoTitleInput?.removeEventListener('input', updateSeoPreview);
      excerptTextarea?.removeEventListener('input', updateSeoPreview);
      seoDescTextarea?.removeEventListener('input', updateSeoPreview);
      slugInput?.removeEventListener('input', updateSeoPreview);
      
      // Add listeners
      titleInput?.addEventListener('input', updateSeoPreview);
      seoTitleInput?.addEventListener('input', updateSeoPreview);
      excerptTextarea?.addEventListener('input', updateSeoPreview);
      seoDescTextarea?.addEventListener('input', updateSeoPreview);
      slugInput?.addEventListener('input', updateSeoPreview);
    }
    
    function initSeoAccordion() {
      const toggle = document.getElementById('seo-accordion-toggle');
      const content = document.getElementById('seo-accordion-content');
      const icon = document.getElementById('seo-accordion-icon');
      
      if (!toggle || !content || !icon) return;
      
      // Remove existing listeners to prevent duplicates
      toggle.removeEventListener('click', handleSeoToggle);
      
      function handleSeoToggle() {
        const isHidden = content.classList.contains('hidden');
        
        if (isHidden) {
          content.classList.remove('hidden');
          icon.classList.add('rotate-180');
          // Re-initialize form components after showing SEO section
          setTimeout(() => {
            if (window.initTomSelects) {
              window.initTomSelects();
            }
          }, 100);
        } else {
          content.classList.add('hidden');
          icon.classList.remove('rotate-180');
        }
      }
      
      toggle.addEventListener('click', handleSeoToggle);
    }
    
    // SPA will call initializeAlbumPage via window.pageInitializers.albums
    
    // Make initialization function globally available for SPA re-initialization
    if (!window.pageInitializers) {
      window.pageInitializers = {};
    }
    window.pageInitializers.albums = initializeAlbumPage;
    
    // Do not auto-call here to avoid double init; SPA orchestrator calls the initializer.
  </script>
