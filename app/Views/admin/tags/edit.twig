{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.tags.edit') }} â€” Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.tags.edit') }}</h1>
  </div>
  <div class="card p-6">
    <form method="post" action="{{ base_path }}/admin/tags/{{ item.id }}" class="space-y-4">
      <input type="hidden" name="csrf" value="{{ csrf }}">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.tags.name') }}</label>
        <input class="form-input" type="text" name="name" value="{{ item.name }}" required>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.tags.slug') }}</label>
        <input class="form-input" type="text" name="slug" value="{{ item.slug }}">
      </div>
      <div class="flex gap-3 pt-2">
        <button class="btn-primary" type="submit">{{ trans('admin.tags.update') }}</button>
        <a class="btn-secondary" href="{{ base_path }}/admin/tags">{{ trans('admin.tags.cancel') }}</a>
        <form method="post" action="{{ base_path }}/admin/tags/{{ item.id }}/delete" class="inline ml-auto" data-confirm="{{ trans('admin.tags.delete_confirm')|e('html_attr') }}">
          <input type="hidden" name="csrf" value="{{ csrf }}">
          <button class="btn-secondary text-red-700" type="submit">{{ trans('admin.tags.delete') }}</button>
        </form>
      </div>
    </form>
  </div>
{% endblock %}
