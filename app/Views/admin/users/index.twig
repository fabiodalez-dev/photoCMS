{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.users.title') }} â€” Cimaise{% endblock %}

{% block content %}
<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.users.title') }}</h1>
    <p class="text-gray-600 mt-1">{{ total }} {{ trans('admin.users.total_users') }}</p>
  </div>
  <a href="{{ base_path }}/admin/users/create" class="btn-primary">
    <i class="fas fa-plus mr-2"></i>{{ trans('admin.users.new_user') }}
  </a>
</div>

<div class="card">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.users.col_user') }}</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.users.col_role') }}</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.users.col_status') }}</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.users.col_last_login') }}</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.users.col_registered') }}</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.users.col_actions') }}</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {% for user in users %}
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-4 whitespace-nowrap">
            <div>
              <div class="text-sm font-medium text-gray-900">
                {{ user.first_name }} {{ user.last_name }}
              </div>
              <div class="text-sm text-gray-500">{{ user.email }}</div>
            </div>
          </td>
          <td class="px-4 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{ user.role == 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' }}">
              {{ user.role == 'admin' ? trans('admin.users.role_admin') : trans('admin.users.role_user') }}
            </span>
          </td>
          <td class="px-4 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{ user.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
              {{ user.is_active ? trans('admin.users.status_active') : trans('admin.users.status_inactive') }}
            </span>
          </td>
          <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
            {% if user.last_login %}
              {{ user.last_login|datetime_format }}
            {% else %}
              <span class="text-gray-400">{{ trans('admin.users.never') }}</span>
            {% endif %}
          </td>
          <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
            {{ user.created_at|date_format }}
          </td>
          <td class="px-4 py-4 whitespace-nowrap text-sm font-medium space-x-2">
            <a href="{{ base_path }}/admin/users/{{ user.id }}/edit" class="text-indigo-600 hover:text-indigo-900">
              <i class="fas fa-edit"></i>
            </a>
            {% if user.id != session.admin_id %}
              <form method="post" action="{{ base_path }}/admin/users/{{ user.id }}/toggle" class="inline">
                <input type="hidden" name="csrf" value="{{ csrf }}">
                <button type="submit" class="text-yellow-600 hover:text-yellow-900" title="{{ user.is_active ? trans('admin.users.deactivate') : trans('admin.users.activate') }}">
                  <i class="fas fa-{{ user.is_active ? 'pause' : 'play' }}"></i>
                </button>
              </form>
              <form method="post" action="{{ base_path }}/admin/users/{{ user.id }}/delete" class="inline"
                    onsubmit="return confirm('{{ trans('admin.users.delete_confirm') }}');">
                <input type="hidden" name="csrf" value="{{ csrf }}">
                <button type="submit" class="text-red-600 hover:text-red-900">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            {% else %}
              <span class="text-gray-400" title="{{ trans('admin.users.cannot_edit_self') }}">
                <i class="fas fa-lock"></i>
              </span>
            {% endif %}
          </td>
        </tr>
        {% else %}
        <tr>
          <td colspan="6" class="px-4 py-8 text-center text-gray-500">
            <i class="fas fa-users text-4xl mb-2 block text-gray-300"></i>
            {{ trans('admin.users.no_users') }}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {% if pages > 1 %}
  <div class="bg-gray-50 px-4 py-3 border-t border-gray-200 sm:px-6">
    <div class="flex items-center justify-between">
      <div class="text-sm text-gray-700">
        {{ trans('admin.users.page_of', {page: page, pages: pages}) }}
      </div>
      <div class="flex space-x-2">
        {% if page > 1 %}
          <a href="{{ base_path }}/admin/users?page={{ page - 1 }}" class="btn-secondary">{{ trans('admin.users.previous') }}</a>
        {% endif %}
        {% if page < pages %}
          <a href="{{ base_path }}/admin/users?page={{ page + 1 }}" class="btn-secondary">{{ trans('admin.users.next') }}</a>
        {% endif %}
      </div>
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}