{% extends 'admin/_layout.twig' %}
{% block title %}Cameras â€” Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Cameras</h1>
      <p class="text-gray-600 mt-1">Manage your camera collection and equipment</p>
    </div>
    <a href="{{ base_path }}/admin/cameras/create" class="btn-primary">
      <i class="fas fa-plus mr-2"></i>New Camera
    </a>
  </div>

  <div class="card">
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Make</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Model</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Camera Type</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for c in items %}
          <tr class="table-row">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">{{ c.make }}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">{{ c.model }}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {% set camera_type = c.make|lower %}
              {% if 'leica' in camera_type or 'contax' in camera_type or 'hasselblad' in camera_type %}
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                  Premium
                </span>
              {% elseif 'canon' in camera_type or 'nikon' in camera_type or 'pentax' in camera_type %}
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  SLR
                </span>
              {% elseif 'olympus' in camera_type or 'fuji' in camera_type %}
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Compact
                </span>
              {% else %}
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  Camera
                </span>
              {% endif %}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex items-center justify-end space-x-3">
                <a href="{{ base_path }}/admin/cameras/{{ c.id }}/edit" class="text-gray-600 hover:text-black transition-colors">
                  <i class="fas fa-edit"></i>
                </a>
                <form method="post" action="{{ base_path }}/admin/cameras/{{ c.id }}/delete" class="inline" onsubmit="return confirm('Delete this camera?')">
                  <input type="hidden" name="csrf" value="{{ csrf }}">
                  <button type="submit" class="text-red-600 hover:text-red-800 transition-colors">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    {% if items|length == 0 %}
      <div class="text-center py-12">
        <i class="fas fa-camera text-4xl text-gray-300 mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No cameras yet</h3>
        <p class="text-gray-600 mb-6">Add cameras to track your photography equipment.</p>
        <a href="{{ base_path }}/admin/cameras/create" class="btn-primary">
          <i class="fas fa-plus mr-2"></i>Add Camera
        </a>
      </div>
    {% endif %}
  </div>
{% endblock %}

