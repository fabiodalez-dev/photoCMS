{% extends 'admin/_layout.twig' %}
{% block title %}Modifica camera â€” Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Modifica camera</h1>
  </div>
  <div class="card p-6">
    <form method="post" action="{{ base_path }}/admin/cameras/{{ item.id }}" class="space-y-4">
      <input type="hidden" name="csrf" value="{{ csrf }}">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Make</label>
        <input class="form-input" type="text" name="make" value="{{ item.make }}" required>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Model</label>
        <input class="form-input" type="text" name="model" value="{{ item.model }}" required>
      </div>
      <div class="flex gap-3 pt-2">
        <button class="btn-primary" type="submit">Aggiorna</button>
        <a class="btn-secondary" href="{{ base_path }}/admin/cameras">Annulla</a>
        <form method="post" action="{{ base_path }}/admin/cameras/{{ item.id }}/delete" class="inline ml-auto" onsubmit="return confirm('Eliminare?');">
          <input type="hidden" name="csrf" value="{{ csrf }}">
          <button class="btn-secondary text-red-700">Elimina</button>
        </form>
      </div>
    </form>
  </div>
{% endblock %}
