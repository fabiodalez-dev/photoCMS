                  <label class="flex items-center gap-2">
                    <input type="radio" name="grid_gap" value="small" class="w-4 h-4 text-black border-gray-300 focus:ring-black" 
                           {% if settings.grid.grid_gap == 'small' %}checked{% endif %}>
                    <span class="text-sm text-gray-700">Small (1rem)</span>
                  </label>
                  <label class="flex items-center gap-2">
                    <input type="radio" name="grid_gap" value="normal" class="w-4 h-4 text-black border-gray-300 focus:ring-black" 
