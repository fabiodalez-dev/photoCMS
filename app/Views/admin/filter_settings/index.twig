<script>
// Live preview functionality
document.addEventListener('DOMContentLoaded', function() {
    updateGridPreview();
    
    // Update preview when grid settings change
    document.querySelectorAll('select[name^="grid_"], input[name="grid_gap"]').forEach(element => {
        element.addEventListener('change', updateGridPreview);
    });
    
    // Preview button functionality
    document.getElementById('preview-settings').addEventListener('click', function() {
        // Open galleries page in new tab with current settings (for real preview)
        window.open('/galleries', '_blank');
    });
});

function updateGridPreview() {
    const desktopCols = document.querySelector('select[name="grid_columns_desktop"]').value;
    const gap = document.querySelector('input[name="grid_gap"]:checked').value;
    
    let gapSize;
    switch(gap) {
        case 'small': gapSize = '0.5rem'; break;
        case 'large': gapSize = '1rem'; break;
        default: gapSize = '0.75rem';
    }
    
    const previewGrid = document.getElementById('preview-grid');
    previewGrid.style.gridTemplateColumns = `repeat(${Math.min(desktopCols, 3)}, 1fr)`;
    previewGrid.style.gap = gapSize;
}
</script>
