                  <label class="block text-sm font-medium text-black mb-2">Mobile Columns</label>
                  <select name="grid_columns_mobile" class="form-input w-full">
                    <option value="1" {% if settings.grid.grid_columns_mobile == '1' %}selected{% endif %}>1 Column</option>
                    <option value="2" {% if settings.grid.grid_columns_mobile == '2' %}selected{% endif %}>2 Columns</option>
                  </select>
