        <button type="submit" form="filter-settings-form" class="btn-primary">
          <i class="fas fa-save mr-2"></i>
          Save Settings
        </button>
        <button type="button" id="preview-settings" class="btn-secondary">
          <i class="fas fa-eye mr-2"></i>
          Preview Changes
        </button>
      </div>
      
      <div class="text-sm text-gray-500">
        <i class="fas fa-info-circle mr-1"></i>
        Changes will be applied immediately to the galleries page
      </div>
    </div>
  </div>
