{% extends 'admin/_layout.twig' %}
{% block title %}Nuovo sviluppo â€” photoCMS{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-4"><h1 class="text-2xl font-bold text-gray-900">Nuovo sviluppo</h1></div>
  <form method="post" action="{{ base_path }}/admin/developers">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div><label for="developer-name" class="block text-sm font-medium text-gray-700 mb-1">Nome</label><input class="form-input" type="text" id="developer-name" name="name" autocomplete="name" required></div>
      <div><label for="developer-process" class="block text-sm font-medium text-gray-700 mb-1">Processo</label>
        <select id="developer-process" name="process" class="form-input">
          {% for p in ['BW','C-41','E-6','Hybrid','Other'] %}<option value="{{ p }}">{{ p }}</option>{% endfor %}
        </select>
      </div>
      <div class="md:col-span-2"><label for="developer-notes" class="block text-sm font-medium text-gray-700 mb-1">Note</label><input class="form-input" type="text" id="developer-notes" name="notes"></div>
    </div>
    <div class="mt-3 flex gap-3"><button class="btn-primary">Salva</button> <a class="btn-secondary" href="{{ base_path }}/admin/developers">Annulla</a></div>
  </form>
{% endblock %}
