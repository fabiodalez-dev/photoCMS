        } else if (type === 'lens') {
          endpoint = '{{ base_path }}/admin/api/lensfun/lenses';
          // Use lens maker as filter if set
          const lensMaker = document.getElementById('exif-lens-maker')?.value?.trim();
          if (lensMaker) {
            params += `&maker=${encodeURIComponent(lensMaker)}`;
          }
        }

        try {
          const response = await fetch(`${endpoint}?${params}`);
          const data = await response.json();

          if (data.success && data.results && data.results.length > 0) {
            const total = data.total || null;
            renderAutocompleteDropdown(data.results, type, dropdown, input, total);
          } else {
            dropdown.innerHTML = '<div class="px-3 py-2 text-xs text-gray-500 italic">{{ trans('admin.exif.no_results')|default('No results found')|e('js') }}</div>';
            dropdown.classList.remove('hidden');
          }
        } catch (error) {
          console.error('Autocomplete fetch error:', error);
          dropdown.classList.add('hidden');
        }
      }

      function renderAutocompleteDropdown(results, type, dropdown, input, total = null) {
        dropdown.innerHTML = '';

        results.forEach(item => {
          const div = document.createElement('div');
          div.className = 'autocomplete-item px-3 py-2 text-sm cursor-pointer hover:bg-gray-100';

          if (type === 'camera-make' || type === 'lens-maker') {
            div.textContent = item.maker;
            div.dataset.value = item.maker;
          } else if (type === 'camera-model') {
            div.innerHTML = `<span class="font-medium">${escapeHtml(item.model)}</span> <span class="text-xs text-gray-500">(${escapeHtml(item.maker)})</span>`;
            div.dataset.value = item.model;
            div.dataset.maker = item.maker;
          } else if (type === 'lens') {
            div.innerHTML = `<span class="font-medium">${escapeHtml(item.model)}</span> <span class="text-xs text-gray-500">(${escapeHtml(item.maker)})</span>`;
            div.dataset.value = item.model;
            div.dataset.maker = item.maker;
          }

          div.addEventListener('click', () => selectAutocompleteItem(div, input, dropdown));
          dropdown.appendChild(div);
        });

        // Show results hint if there are more results than shown
        if (total !== null && total > results.length) {
          const hint = document.createElement('div');
          hint.className = 'px-3 py-2 text-xs text-gray-500 bg-gray-50 border-t border-gray-200 italic';
          hint.textContent = '{{ trans('admin.exif.results_hint')|default('Showing {shown} of {total} - refine your search')|e('js') }}'
            .replace('{shown}', results.length)
            .replace('{total}', total);
          dropdown.appendChild(hint);
        }

        dropdown.classList.remove('hidden');
      }

      function selectAutocompleteItem(item, input, dropdown) {
        const value = item.dataset.value;
        input.value = value;
        dropdown.classList.add('hidden');

        // If camera model selected, also fill the maker
        const type = input.dataset.autocomplete;
        if (type === 'camera-model' && item.dataset.maker) {
          const makeInput = document.getElementById('exif-make');
          if (makeInput && !makeInput.value) {
            makeInput.value = item.dataset.maker;
          }
        }

        // If lens selected, also fill the lens maker
        if (type === 'lens' && item.dataset.maker) {
          const lensMakerInput = document.getElementById('exif-lens-maker');
          if (lensMakerInput && !lensMakerInput.value) {
            lensMakerInput.value = item.dataset.maker;
          }
        }

        // Trigger change event
        input.dispatchEvent(new Event('change', { bubbles: true }));
      }

      function escapeHtml(str) {
        if (!str) return '';
        const div = document.createElement('div');
        div.textContent = str;
        return div.innerHTML;
      }

    })();
  </script>
