{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.media.title') }} — Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-black">{{ trans('admin.media.title') }}</h1>
    <form method="get" class="flex items-center gap-2">
      <input type="text" name="q" value="{{ app.request.getQueryParams.q|default('') }}" class="form-input w-64" placeholder="{{ trans('admin.media.search') }}">
      <button class="btn-secondary">
        <i class="fas fa-search mr-2"></i>{{ trans('admin.media.search_button') }}
      </button>
    </form>
  </div>

  <div class="flex gap-6 min-h-screen flex-col lg:flex-row">
    <!-- Main content area - larger on desktop -->
    <div class="flex-1 lg:flex-[3]">
      <!-- Toolbar -->
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-4 bg-white rounded-lg border border-gray-200 px-4 py-3">
        <div class="flex items-center gap-4">
          <label class="inline-flex items-center gap-2 text-sm font-medium">
            <input type="checkbox" id="media-select-all" class="rounded border-gray-300 text-black focus:ring-black">
            <span id="selection-count">{{ trans('admin.media.select_all') }}</span>
          </label>
          <div class="text-sm text-gray-500" id="total-count">{{ items|length }} {{ trans('admin.media.items') }}</div>
        </div>
        <div class="flex flex-col sm:flex-row sm:flex-wrap items-start sm:items-center gap-2 w-full sm:w-auto">
          <select id="media-attach-album" class="form-input text-sm min-w-0 sm:min-w-[200px] w-full sm:w-auto">
            <option value="">{{ trans('admin.media.add_to_album') }}</option>
            {% for a in albums %}
              <option value="{{ a.id }}">{{ a.title }}</option>
            {% endfor %}
          </select>
          <div class="flex gap-2 w-full sm:w-auto">
            <button id="media-attach-btn" class="btn-primary text-sm flex-1 sm:flex-none" disabled>
              <i class="fas fa-plus mr-1"></i>{{ trans('admin.media.add') }}
            </button>
            <button id="media-delete-btn" class="btn-outline-danger text-sm flex-1 sm:flex-none" disabled>
              <i class="fas fa-trash mr-1"></i>{{ trans('admin.media.delete') }}
            </button>
          </div>
        </div>
      </div>

      <!-- Media Grid -->
      {% include 'admin/media/_grid.twig' %}
    </div>

    <!-- Sidebar for image details -->
    <div id="media-sidebar" class="w-full lg:w-96 bg-white rounded-lg border border-gray-200 hidden flex-shrink-0 max-w-full flex-col">
      <div class="p-4 border-b border-gray-200 relative">
        <h3 class="font-semibold text-gray-900 mb-4">{{ trans('admin.media.image_details') }}</h3>
        <button id="sidebar-close" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 w-8 h-8 flex items-center justify-center rounded-full hover:bg-gray-100" type="button">
          <i class="fas fa-times"></i>
        </button>
      </div>
      
      <div class="p-4 space-y-6">
        <!-- Image preview -->
        <div class="text-center">
          <img id="sidebar-preview" src="" alt="Media preview" class="max-w-full rounded-lg shadow-sm">
          <div class="mt-2 text-xs text-gray-500" id="sidebar-dimensions"></div>
        </div>

        <!-- Image details form -->
        <form id="sidebar-form" class="space-y-4">
          <input type="hidden" name="csrf" value="{{ csrf }}">
          <input type="hidden" id="sidebar-image-id" name="image_id">
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.media.filename') }}</label>
            <div class="form-input bg-gray-50 text-gray-600 text-sm" id="sidebar-filename">—</div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.media.alt_text') }}</label>
            <input type="text" name="alt_text" id="sidebar-alt" class="form-input text-sm" maxlength="200" required placeholder="{{ trans('admin.media.alt_placeholder')|default('Describe the subject for accessibility') }}" aria-describedby="sidebar-alt-help">
            <p id="sidebar-alt-help" class="text-xs text-gray-500 mt-1">{{ trans('admin.media.alt_help')|default('Use a short, descriptive sentence; avoid “image of”.') }}</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.media.caption') }}</label>
            <textarea name="caption" id="sidebar-caption" rows="3" class="form-input text-sm" placeholder="{{ trans('admin.media.caption_placeholder') }}"></textarea>
          </div>

          <div class="border-t pt-4">
            <h4 class="font-medium text-gray-900 mb-3">{{ trans('admin.media.photo_metadata') }}</h4>

            <div class="space-y-3">
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.camera') }}</label>
                <select name="camera_id" id="sidebar-camera" class="form-input text-sm w-full">
                  <option value="">—</option>
                  {% for camera in cameras %}
                    <option value="{{ camera.id }}">{{ camera.make }} {{ camera.model }}</option>
                  {% endfor %}
                </select>
              </div>

              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.lens') }}</label>
                <select name="lens_id" id="sidebar-lens" class="form-input text-sm w-full">
                  <option value="">—</option>
                  {% for lens in lenses %}
                    <option value="{{ lens.id }}">{{ lens.brand }} {{ lens.model }}</option>
                  {% endfor %}
                </select>
              </div>

              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.film') }}</label>
                <select name="film_id" id="sidebar-film" class="form-input text-sm w-full">
                  <option value="">—</option>
                  {% for film in films %}
                    <option value="{{ film.id }}">{{ film.brand }} {{ film.name }}</option>
                  {% endfor %}
                </select>
              </div>

              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.developer') }}</label>
                <select name="developer_id" id="sidebar-developer" class="form-input text-sm w-full">
                  <option value="">—</option>
                  {% for dev in developers %}
                    <option value="{{ dev.id }}">{{ dev.name }}</option>
                  {% endfor %}
                </select>
              </div>

              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.lab') }}</label>
                <select name="lab_id" id="sidebar-lab" class="form-input text-sm w-full">
                  <option value="">—</option>
                  {% for lab in labs %}
                    <option value="{{ lab.id }}">{{ lab.name }}</option>
                  {% endfor %}
                </select>
              </div>

              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.location') }}</label>
                <select name="location_id" id="sidebar-location" class="form-input text-sm w-full">
                  <option value="">—</option>
                  {% for loc in locations %}
                    <option value="{{ loc.id }}">{{ loc.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <!-- Custom Fields -->
            <div class="space-y-3 mt-3 pt-3 border-t border-gray-200">
              <h5 class="text-xs font-medium text-gray-500 uppercase tracking-wide">{{ trans('admin.media.custom_fields')|default('Custom Fields') }}</h5>
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.custom_camera')|default('Custom camera') }}</label>
                <input type="text" name="custom_camera" id="sidebar-custom-camera" class="form-input text-sm w-full" placeholder="{{ trans('admin.media.custom_camera_placeholder')|default('Custom camera name...') }}">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.custom_lens')|default('Custom lens') }}</label>
                <input type="text" name="custom_lens" id="sidebar-custom-lens" class="form-input text-sm w-full" placeholder="{{ trans('admin.media.custom_lens_placeholder')|default('Custom lens name...') }}">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.custom_film')|default('Custom film') }}</label>
                <input type="text" name="custom_film" id="sidebar-custom-film" class="form-input text-sm w-full" placeholder="{{ trans('admin.media.custom_film_placeholder')|default('Custom film name...') }}">
              </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 mt-3">
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.iso') }}</label>
                <input type="number" step="any" name="iso" id="sidebar-iso" class="form-input text-sm w-full">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.shutter') }}</label>
                <input type="text" name="shutter_speed" id="sidebar-shutter" class="form-input text-sm w-full" placeholder="1/125">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">{{ trans('admin.media.aperture') }}</label>
                <input type="number" step="any" name="aperture" id="sidebar-aperture" class="form-input text-sm w-full" placeholder="2.8">
              </div>
            </div>
          </div>

          <div class="flex gap-2 pt-4 border-t">
            <button type="submit" class="btn-primary flex-1 text-sm">
              <i class="fas fa-save mr-1"></i>{{ trans('admin.media.save') }}
            </button>
            <button type="button" id="sidebar-delete" class="btn-outline-danger text-sm">
              <i class="fas fa-trash mr-1"></i>{{ trans('admin.media.delete') }}
            </button>
          </div>
        </form>

        <!-- EXIF Editor Section -->
        <div class="border-t pt-4 mt-4">
          <button type="button" id="exif-toggle" class="flex items-center justify-between w-full text-left font-medium text-gray-900 hover:text-black">
            <span><i class="fas fa-camera-retro mr-2"></i>{{ trans('admin.exif.title')|default('EXIF Editor') }}</span>
            <i class="fas fa-chevron-down text-gray-400 transition-transform" id="exif-toggle-icon"></i>
          </button>

          <div id="exif-editor" class="hidden mt-4 space-y-4">
            <div id="exif-loading" class="text-center text-gray-500 py-4">
              <i class="fas fa-spinner fa-spin mr-2"></i>{{ trans('admin.exif.loading')|default('Loading EXIF data...') }}
            </div>

            <form id="exif-form" class="hidden space-y-4">
              <input type="hidden" name="csrf" value="{{ csrf }}">

              <!-- Equipment Section -->
              <div class="exif-section">
                <button type="button" class="exif-section-toggle flex items-center justify-between w-full text-left text-sm font-medium text-gray-700 hover:text-black py-2 border-b">
                  <span><i class="fas fa-camera mr-2"></i>{{ trans('admin.exif.equipment')|default('Equipment') }}</span>
                  <i class="fas fa-chevron-down text-gray-400 text-xs transition-transform"></i>
                </button>
                <div class="exif-section-content space-y-3 pt-3">
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.make')|default('Make') }}</label>
                    <div class="autocomplete-wrapper relative">
                      <input type="text" name="exif_make" id="exif-make" class="form-input text-sm w-full" autocomplete="off" data-autocomplete="camera-make">
                      <div class="autocomplete-dropdown hidden absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-md shadow-lg max-h-48 overflow-y-auto"></div>
                    </div>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.model')|default('Model') }}</label>
                    <div class="autocomplete-wrapper relative">
                      <input type="text" name="exif_model" id="exif-model" class="form-input text-sm w-full" autocomplete="off" data-autocomplete="camera-model">
                      <div class="autocomplete-dropdown hidden absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-md shadow-lg max-h-48 overflow-y-auto"></div>
                    </div>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.lens_maker')|default('Lens Maker') }}</label>
                    <div class="autocomplete-wrapper relative">
                      <input type="text" name="exif_lens_maker" id="exif-lens-maker" class="form-input text-sm w-full" autocomplete="off" data-autocomplete="lens-maker">
                      <div class="autocomplete-dropdown hidden absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-md shadow-lg max-h-48 overflow-y-auto"></div>
                    </div>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.lens')|default('Lens') }}</label>
                    <div class="autocomplete-wrapper relative">
                      <input type="text" name="exif_lens_model" id="exif-lens-model" class="form-input text-sm w-full" autocomplete="off" data-autocomplete="lens">
                      <div class="autocomplete-dropdown hidden absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-md shadow-lg max-h-48 overflow-y-auto"></div>
                    </div>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.software')|default('Software') }}</label>
                    <input type="text" name="software" id="exif-software" class="form-input text-sm w-full">
                  </div>
                </div>
              </div>

              <!-- Exposure Section -->
              <div class="exif-section">
                <button type="button" class="exif-section-toggle flex items-center justify-between w-full text-left text-sm font-medium text-gray-700 hover:text-black py-2 border-b">
                  <span><i class="fas fa-sun mr-2"></i>{{ trans('admin.exif.exposure')|default('Exposure') }}</span>
                  <i class="fas fa-chevron-down text-gray-400 text-xs transition-transform"></i>
                </button>
                <div class="exif-section-content space-y-3 pt-3">
                  <div class="grid grid-cols-2 gap-3">
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.focal_length')|default('Focal Length') }}</label>
                      <div class="flex">
                        <input type="number" step="any" name="focal_length" id="exif-focal-length" class="form-input text-sm w-full rounded-r-none">
                        <span class="inline-flex items-center px-2 bg-gray-100 border border-l-0 border-gray-300 rounded-r text-xs text-gray-500">mm</span>
                      </div>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.exposure_bias')|default('Exp. Bias') }}</label>
                      <div class="flex">
                        <input type="number" step="any" name="exposure_bias" id="exif-exposure-bias" class="form-input text-sm w-full rounded-r-none">
                        <span class="inline-flex items-center px-2 bg-gray-100 border border-l-0 border-gray-300 rounded-r text-xs text-gray-500">EV</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Mode Section -->
              <div class="exif-section">
                <button type="button" class="exif-section-toggle flex items-center justify-between w-full text-left text-sm font-medium text-gray-700 hover:text-black py-2 border-b">
                  <span><i class="fas fa-sliders mr-2"></i>{{ trans('admin.exif.mode')|default('Mode') }}</span>
                  <i class="fas fa-chevron-down text-gray-400 text-xs transition-transform"></i>
                </button>
                <div class="exif-section-content space-y-3 pt-3">
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.flash')|default('Flash') }}</label>
                    <select name="flash" id="exif-flash" class="form-input text-sm w-full"></select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.white_balance')|default('White Balance') }}</label>
                    <select name="white_balance" id="exif-white-balance" class="form-input text-sm w-full"></select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.exposure_program')|default('Exposure Program') }}</label>
                    <select name="exposure_program" id="exif-exposure-program" class="form-input text-sm w-full"></select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.metering_mode')|default('Metering Mode') }}</label>
                    <select name="metering_mode" id="exif-metering-mode" class="form-input text-sm w-full"></select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.exposure_mode')|default('Exposure Mode') }}</label>
                    <select name="exposure_mode" id="exif-exposure-mode" class="form-input text-sm w-full"></select>
                  </div>
                </div>
              </div>

              <!-- Details Section -->
              <div class="exif-section">
                <button type="button" class="exif-section-toggle flex items-center justify-between w-full text-left text-sm font-medium text-gray-700 hover:text-black py-2 border-b">
                  <span><i class="fas fa-info-circle mr-2"></i>{{ trans('admin.exif.details')|default('Details') }}</span>
                  <i class="fas fa-chevron-down text-gray-400 text-xs transition-transform"></i>
                </button>
                <div class="exif-section-content space-y-3 pt-3 hidden">
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.date_original')|default('Date Taken') }}</label>
                    <input type="text" name="date_original" id="exif-date-original" class="form-input text-sm w-full" placeholder="YYYY:MM:DD HH:MM:SS">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.color_space')|default('Color Space') }}</label>
                    <select name="color_space" id="exif-color-space" class="form-input text-sm w-full"></select>
                  </div>
                  <div class="grid grid-cols-3 gap-2">
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.contrast')|default('Contrast') }}</label>
                      <select name="contrast" id="exif-contrast" class="form-input text-sm w-full"></select>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.saturation')|default('Saturation') }}</label>
                      <select name="saturation" id="exif-saturation" class="form-input text-sm w-full"></select>
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.sharpness')|default('Sharpness') }}</label>
                      <select name="sharpness" id="exif-sharpness" class="form-input text-sm w-full"></select>
                    </div>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.scene_type')|default('Scene Type') }}</label>
                    <select name="scene_capture_type" id="exif-scene-type" class="form-input text-sm w-full"></select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.light_source')|default('Light Source') }}</label>
                    <select name="light_source" id="exif-light-source" class="form-input text-sm w-full"></select>
                  </div>
                </div>
              </div>

              <!-- Location Section -->
              <div class="exif-section">
                <button type="button" class="exif-section-toggle flex items-center justify-between w-full text-left text-sm font-medium text-gray-700 hover:text-black py-2 border-b">
                  <span><i class="fas fa-map-marker-alt mr-2"></i>{{ trans('admin.exif.location')|default('Location') }}</span>
                  <i class="fas fa-chevron-down text-gray-400 text-xs transition-transform"></i>
                </button>
                <div class="exif-section-content space-y-3 pt-3 hidden">
                  <div class="grid grid-cols-2 gap-3">
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.latitude')|default('Latitude') }}</label>
                      <input type="number" step="0.000001" name="gps_lat" id="exif-gps-lat" class="form-input text-sm w-full" placeholder="-90 to 90">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.longitude')|default('Longitude') }}</label>
                      <input type="number" step="0.000001" name="gps_lng" id="exif-gps-lng" class="form-input text-sm w-full" placeholder="-180 to 180">
                    </div>
                  </div>
                  <button type="button" id="exif-show-map" class="btn-secondary text-xs w-full">
                    <i class="fas fa-map mr-1"></i>{{ trans('admin.exif.show_map')|default('Show/Edit on Map') }}
                  </button>
                  <div id="exif-map" class="hidden h-48 rounded-lg border border-gray-200"></div>
                </div>
              </div>

              <!-- Info Section -->
              <div class="exif-section">
                <button type="button" class="exif-section-toggle flex items-center justify-between w-full text-left text-sm font-medium text-gray-700 hover:text-black py-2 border-b">
                  <span><i class="fas fa-user mr-2"></i>{{ trans('admin.exif.info')|default('Info') }}</span>
                  <i class="fas fa-chevron-down text-gray-400 text-xs transition-transform"></i>
                </button>
                <div class="exif-section-content space-y-3 pt-3">
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.artist')|default('Artist') }}</label>
                    <input type="text" name="artist" id="exif-artist" class="form-input text-sm w-full">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">{{ trans('admin.exif.copyright')|default('Copyright') }}</label>
                    <input type="text" name="copyright" id="exif-copyright" class="form-input text-sm w-full">
                  </div>
                </div>
              </div>

              <!-- Write to files checkbox -->
              <div class="border-t pt-3 mt-3">
                <label class="inline-flex items-start gap-2 text-sm cursor-pointer">
                  <input type="checkbox" name="write_exif_to_file" id="exif-write-to-file" class="rounded border-gray-300 text-black focus:ring-black mt-0.5">
                  <span class="text-gray-700">
                    {{ trans('admin.exif.write_to_file')|default('Write EXIF to JPEG files') }}
                    <span class="block text-xs text-gray-500">{{ trans('admin.exif.write_to_file_hint')|default('Updates original and all JPEG variants. WebP/AVIF not modified.') }}</span>
                  </span>
                </label>
              </div>

              <!-- Save button -->
              <div class="pt-3">
                <button type="submit" class="btn-primary w-full text-sm">
                  <i class="fas fa-save mr-1"></i>{{ trans('admin.exif.save')|default('Save EXIF Data') }}
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script nonce="{{ csp_nonce() }}">
    (function(){
      const grid = document.getElementById('media-grid');
      const sidebar = document.getElementById('media-sidebar');
      const sidebarForm = document.getElementById('sidebar-form');
      const sidebarClose = document.getElementById('sidebar-close');
      const attachBtn = document.getElementById('media-attach-btn');
      const deleteBtn = document.getElementById('media-delete-btn');
      const selectAll = document.getElementById('media-select-all');
      const selectionCount = document.getElementById('selection-count');
      
      if (!grid) return;
      
      let currentImageId = null;

      // Add checkboxes to grid items
      grid.querySelectorAll('[data-media-id]')?.forEach(card => {
        const id = card.getAttribute('data-media-id');
        const cb = document.createElement('input'); 
        cb.type='checkbox'; 
        cb.className='absolute top-2 left-2 w-4 h-4 bg-white rounded border z-10'; 
        cb.setAttribute('data-select-id', id);
        const wrap = card.querySelector('.aspect-square');
        if (wrap) { 
          // Make the existing wrap relative to position checkbox
          wrap.style.position = 'relative';
          wrap.appendChild(cb);
        }

