{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.categories.new') }} â€” Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">{{ trans('admin.categories.create_title') }}</h1>
      <p class="text-gray-600 mt-2">{{ trans('admin.categories.create_description') }}</p>
    </div>
    <a href="{{ base_path }}/admin/categories" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-2 rounded-lg transition-colors inline-flex items-center">
      <i class="fas fa-arrow-left mr-2"></i>{{ trans('admin.categories.back_to_list') }}
    </a>
  </div>
  
  <div class="max-w-2xl">
    <div class="card p-8">
      <form method="post" action="{{ base_path }}/admin/categories" enctype="multipart/form-data" class="space-y-6">
        <input type="hidden" name="csrf" value="{{ csrf }}">
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-tag text-gray-600 mr-2"></i>{{ trans('admin.categories.category_name') }}
            </label>
            <input class="form-input" type="text" name="name" placeholder="{{ trans('admin.categories.enter_name') }}" required>
            <small class="text-gray-500 text-xs mt-1">{{ trans('admin.categories.name_hint') }}</small>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-link text-gray-600 mr-2"></i>{{ trans('admin.categories.url_slug') }}
            </label>
            <input class="form-input" type="text" name="slug" placeholder="{{ trans('admin.categories.auto_generated') }}">
            <small class="text-gray-500 text-xs mt-1">{{ trans('admin.categories.slug_hint') }}</small>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-sitemap text-gray-600 mr-2"></i>{{ trans('admin.categories.parent') }}
            </label>
            <select class="form-input" name="parent_id">
              <option value="">{{ trans('admin.categories.none_main') }}</option>
              {% for parent in parents|default([]) %}
                <option value="{{ parent.id }}">{{ parent.name }}</option>
              {% endfor %}
            </select>
            <small class="text-gray-500 text-xs mt-1">{{ trans('admin.categories.parent_hint') }}</small>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-sort-numeric-up text-gray-600 mr-2"></i>{{ trans('admin.categories.sort_order') }}
            </label>
            <input class="form-input" type="number" name="sort_order" value="0" min="0">
            <small class="text-gray-500 text-xs mt-1">{{ trans('admin.categories.sort_hint') }}</small>
          </div>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-3">
            <i class="fas fa-image text-gray-600 mr-2"></i>{{ trans('admin.categories.category_image') }}
          </label>
          <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-blue-400 transition-colors">
            <div class="space-y-3">
              <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
                <i class="fas fa-cloud-upload-alt text-2xl text-gray-400"></i>
              </div>
              <div>
                <input class="form-input" type="file" name="image" accept="image/*" id="category-image">
                <p class="text-sm text-gray-600 mt-2">
                  {{ trans('admin.categories.image_hint') }}
                </p>
                <p class="text-xs text-gray-500">
                  {{ trans('admin.categories.image_use_hint') }}
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
          <a href="{{ base_path }}/admin/categories" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-2 rounded-lg transition-colors inline-flex items-center">
            <i class="fas fa-times mr-2"></i>{{ trans('admin.categories.cancel') }}
          </a>
          <button class="bg-black hover:bg-gray-800 text-white px-8 py-2 rounded-lg transition-colors inline-flex items-center" type="submit">
            <i class="fas fa-save mr-2"></i>{{ trans('admin.categories.create') }}
          </button>
        </div>
      </form>
    </div>
  </div>
  
  <script nonce="{{ csp_nonce() }}">
    // Image preview functionality
    document.getElementById('category-image').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const preview = document.createElement('img');
          preview.src = e.target.result;
          preview.className = 'w-32 h-32 object-cover rounded-lg border mx-auto mt-3';
          
          // Remove existing preview if any
          const existingPreview = document.querySelector('.image-preview');
          if (existingPreview) {
            existingPreview.remove();
          }
          
          // Add new preview
          preview.classList.add('image-preview');
          document.querySelector('.border-dashed').appendChild(preview);
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
{% endblock %}
