{% extends 'admin/_layout.twig' %}
{% block title %}Modifica categoria â€” photoCMS{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Modifica categoria</h1>
  </div>
  <div class="card p-6">
    <form method="post" action="/admin/categories/{{ item.id }}" enctype="multipart/form-data" class="space-y-4">
      <input type="hidden" name="csrf" value="{{ csrf }}">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nome</label>
        <input class="form-input" type="text" name="name" value="{{ item.name }}" required>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Slug</label>
        <input class="form-input" type="text" name="slug" value="{{ item.slug }}">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Categoria genitore</label>
        <select class="form-input" name="parent_id">
          <option value="">Nessuna (categoria principale)</option>
          {% for parent in parents|default([]) %}
            <option value="{{ parent.id }}" {{ item.parent_id == parent.id ? 'selected' : '' }}>{{ parent.name }}</option>
          {% endfor %}
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Immagine categoria</label>
        {% if item.image_path %}
          <div class="mb-2">
            <img src="{{ item.image_path }}" alt="{{ item.name }}" class="w-32 h-20 object-cover rounded border">
            <small class="block text-gray-500">Immagine corrente</small>
          </div>
        {% endif %}
        <input class="form-input" type="file" name="image" accept="image/*">
        <small class="text-gray-500">Solo per categorie principali (usata nel mega menu)</small>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Ordine</label>
        <input class="form-input" type="number" name="sort_order" value="{{ item.sort_order }}">
      </div>
      <div class="flex gap-3 pt-2">
        <button class="btn-primary" type="submit">Aggiorna</button>
        <a class="btn-secondary" href="/admin/categories">Annulla</a>
        <form method="post" action="/admin/categories/{{ item.id }}/delete" class="inline ml-auto" onsubmit="return confirm('Eliminare questa categoria?');">
          <input type="hidden" name="csrf" value="{{ csrf }}">
          <button class="btn-secondary text-red-700" type="submit">Elimina</button>
        </form>
      </div>
    </form>
  </div>
{% endblock %}
