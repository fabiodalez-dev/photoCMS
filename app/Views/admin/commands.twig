{% extends 'admin/_layout.twig' %}
{% block title %}Commands — photoCMS{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">System Commands</h1>
      <p class="text-gray-600 mt-1">Execute system commands and maintenance tasks</p>
    </div>
    <a href="{{ base_path }}/CLI_GUIDE.md" target="_blank" class="btn-secondary">
      <i class="fas fa-book mr-2"></i>CLI Guide
    </a>
  </div>

  <!-- Quick Actions Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    
    <!-- Database Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-database mr-3 text-blue-600"></i>
          Database
        </h3>
        <p class="text-gray-600 text-sm mb-4">Manage database migrations and seeding</p>
        
        <div class="space-y-2">
          <button onclick="runCommand('db:migrate')" class="w-full btn-primary text-sm">
            <i class="fas fa-arrow-up mr-2"></i>Run Migrations
          </button>
          <button onclick="runCommand('db:seed')" class="w-full btn-secondary text-sm">
            <i class="fas fa-seedling mr-2"></i>Seed Data
          </button>
          <button onclick="runCommand('db:test')" class="w-full btn-secondary text-sm">
            <i class="fas fa-stethoscope mr-2"></i>Test Connection
          </button>
        </div>
      </div>
    </div>

    <!-- Images Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-images mr-3 text-green-600"></i>
          Images
        </h3>
        <p class="text-gray-600 text-sm mb-4">Generate variants and optimize images</p>
        
        <div class="space-y-2">
          <button onclick="runCommand('images:generate', {'missing': true})" class="w-full btn-primary text-sm">
            <i class="fas fa-images mr-2"></i>Generate Missing Variants
          </button>
          <button onclick="runCommand('media:normalize-paths')" class="w-full btn-secondary text-sm">
            <i class="fas fa-link mr-2"></i>Normalize Media Paths
          </button>
        </div>
        
        <div class="mt-3 text-xs text-gray-500">
          <div><strong>Generate Missing:</strong> Crea solo le varianti mancanti per i nuovi breakpoint</div>
          <div><strong>Normalize:</strong> Correggi i path legacy /public/media</div>
          <p class="mt-2 text-xs"><strong>Nota:</strong> Usa il bottone in Settings per generare le immagini dopo aver modificato i breakpoint</p>
        </div>
      </div>
    </div>

    <!-- SEO Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-sitemap mr-3 text-purple-600"></i>
          SEO
        </h3>
        <p class="text-gray-600 text-sm mb-4">Sitemap and SEO optimization</p>
        
        <div class="mb-4">
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
            <div class="flex items-center">
              <i class="fas fa-info-circle text-blue-600 mr-2"></i>
              <div class="text-sm">
                <div class="font-medium text-blue-800">Auto-detected Base URL:</div>
                <div class="text-blue-700" id="detected-base-url">{{ detected_base_url }}</div>
              </div>
            </div>
          </div>
        </div>
        
        <button onclick="runSitemapCommand()" class="w-full btn-primary text-sm">
          <i class="fas fa-map mr-2"></i>Build Sitemap
        </button>
      </div>
    </div>

    <!-- System Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-cogs mr-3 text-orange-600"></i>
          System
        </h3>
        <p class="text-gray-600 text-sm mb-4">Diagnostics and maintenance</p>
        
        <div class="space-y-2">
          <button onclick="runCommand('diagnostics:report')" class="w-full btn-primary text-sm">
            <i class="fas fa-stethoscope mr-2"></i>Run Diagnostics
          </button>
          <a href="{{ base_path }}/admin/diagnostics" class="w-full btn-secondary text-sm text-center block">
            <i class="fas fa-eye mr-2"></i>View Diagnostics
          </a>
        </div>
      </div>
    </div>



    <!-- Additional System Tools -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-tools mr-3 text-red-600"></i>
          Tools
        </h3>
        <p class="text-gray-600 text-sm mb-4">Additional system utilities</p>
        
        <div class="space-y-2">
          <button onclick="runCommand('init')" class="w-full btn-secondary text-sm">
            <i class="fas fa-sync mr-2"></i>Initialize System
          </button>
          <a href="{{ base_path }}/admin/diagnostics" class="w-full btn-secondary text-sm text-center block">
            <i class="fas fa-chart-line mr-2"></i>View System Status
          </a>
        </div>
      </div>
    </div>
    
    <!-- Analytics Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-chart-bar mr-3 text-teal-600"></i>
          Analytics
        </h3>
        <p class="text-gray-600 text-sm mb-4">Analytics data management and optimization</p>
        
        <div class="space-y-2">
          <button onclick="runCommand('analytics:cleanup', {'dry-run': true})" class="w-full btn-secondary text-sm">
            <i class="fas fa-preview mr-2"></i>Preview Cleanup
          </button>
          <button onclick="runAnalyticsCleanup()" class="w-full btn-primary text-sm">
            <i class="fas fa-trash-alt mr-2"></i>Clean Old Data
          </button>
          <button onclick="runCommand('analytics:summarize')" class="w-full btn-secondary text-sm">
            <i class="fas fa-chart-pie mr-2"></i>Generate Summaries
          </button>
        </div>
        
        <div class="mt-3 text-xs text-gray-500">
          <div><strong>Preview:</strong> Shows what would be deleted without deleting</div>
          <div><strong>Clean:</strong> Removes data older than retention period</div>
          <div><strong>Summarize:</strong> Generates daily stats for faster dashboards</div>
        </div>
      </div>
    </div>

  </div>

  <!-- Command Output -->
  <div class="card">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Command Output</h3>
        <button onclick="clearOutput()" class="btn-secondary text-sm">
          <i class="fas fa-trash mr-2"></i>Clear
        </button>
      </div>
      
      <div id="command-output" class="bg-gray-900 text-green-400 p-4 rounded font-mono text-sm whitespace-pre-wrap min-h-48 max-h-96 overflow-y-auto">Ready to execute commands...</div>
      
      <div id="command-status" class="hidden mt-4 flex items-center justify-between text-sm">
        <div class="text-gray-600">
          <span id="status-command" class="font-medium"></span>
          <span id="status-duration" class="ml-2 px-2 py-1 bg-gray-100 rounded text-xs"></span>
        </div>
        <span id="status-result" class="px-2 py-1 rounded text-xs font-medium"></span>
      </div>
    </div>
  </div>

  <!-- CLI Quick Reference -->
  <div class="card mt-8">
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">CLI Quick Reference</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Database Commands</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console db:migrate</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console db:seed</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console db:test</div>
          </div>
          
          <h4 class="font-medium text-gray-900 mb-2 mt-4">Image Commands</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console images:generate --missing</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console media:normalize-paths</div>
          </div>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-900 mb-2">SEO Commands</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console sitemap:build --base-url=https://example.com</div>
          </div>
          
          <h4 class="font-medium text-gray-900 mb-2 mt-4">System Commands</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console init</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console diagnostics:report</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console user:create admin@example.com</div>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
// Commands page - functions are directly on window to work with onclick handlers
// Use var to allow redeclaration during SPA navigation
var _commandsIsRunning = _commandsIsRunning || false;

function updateOutput(text, clear) {
  const output = document.getElementById('command-output');
  if (!output) return;
  if (clear) {
    output.textContent = text;
  } else {
    output.textContent += text;
  }
  output.scrollTop = output.scrollHeight;
}

function updateStatus(command, status, duration) {
  const statusDiv = document.getElementById('command-status');
  const commandSpan = document.getElementById('status-command');
  const durationSpan = document.getElementById('status-duration');
  const resultSpan = document.getElementById('status-result');

  if (!statusDiv || !commandSpan || !durationSpan || !resultSpan) return;

  commandSpan.textContent = command;
  durationSpan.textContent = duration ? `${duration}s` : 'Running...';

  resultSpan.className = 'px-2 py-1 rounded text-xs font-medium ';
  if (status === 'success') {
    resultSpan.className += 'bg-green-100 text-green-800';
    resultSpan.textContent = 'Success';
  } else if (status === 'error') {
    resultSpan.className += 'bg-red-100 text-red-800';
    resultSpan.textContent = 'Failed';
  } else {
    resultSpan.className += 'bg-blue-100 text-blue-800';
    resultSpan.textContent = 'Running...';
  }

  statusDiv.classList.remove('hidden');
}

function runCommand(command, args) {
  args = args || {};
  if (_commandsIsRunning) {
    alert('A command is already running. Please wait.');
    return;
  }

  _commandsIsRunning = true;

  // Immediate visual feedback
  if (window.showToast) {
    window.showToast('Executing: ' + command + '...', 'info');
  }

  updateOutput('> Running: ' + command + '\n', true);
  updateStatus(command, 'running', 0);

  const buttons = document.querySelectorAll('button');
  buttons.forEach(function(btn) {
    btn.disabled = true;
    btn.style.opacity = '0.6';
  });

  const startTime = Date.now();

  fetch(window.basePath + '/admin/commands/execute', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-Requested-With': 'XMLHttpRequest',
      'X-CSRF-Token': '{{ csrf }}'
    },
    body: JSON.stringify({ command: command, args: args })
  })
  .then(function(response) { return response.json(); })
  .then(function(data) {
    const duration = ((Date.now() - startTime) / 1000).toFixed(2);

    if (data.success) {
      updateOutput('✅ Success (' + duration + 's)\n\n' + data.output + '\n\n==================================================\n\n');
      updateStatus(command, 'success', duration);
      if (window.showToast) window.showToast('Command completed successfully!', 'success');
    } else {
      updateOutput('❌ Failed (' + duration + 's)\n\n' + data.output + '\n\nError: ' + (data.error || 'Unknown error') + '\n\n==================================================\n\n');
      updateStatus(command, 'error', duration);
      if (window.showToast) window.showToast('Command failed: ' + (data.error || 'Unknown error'), 'error');
    }
  })
  .catch(function(error) {
    const duration = ((Date.now() - startTime) / 1000).toFixed(2);
    updateOutput('❌ Network Error (' + duration + 's)\n\n' + error.message + '\n\n==================================================\n\n');
    updateStatus(command, 'error', duration);
    if (window.showToast) window.showToast('Network error: ' + error.message, 'error');
  })
  .finally(function() {
    _commandsIsRunning = false;
    buttons.forEach(function(btn) {
      btn.disabled = false;
      btn.style.opacity = '1';
    });
  });
}

function runSitemapCommand() {
  const baseUrl = document.getElementById('detected-base-url').textContent;
  runCommand('sitemap:build', { 'base-url': baseUrl });
}

function runAnalyticsCleanup() {
  if (!confirm('Are you sure you want to clean up old analytics data? This will permanently delete data older than your retention period. This action cannot be undone.')) {
    return;
  }
  runCommand('analytics:cleanup', { 'force': true });
}

function clearOutput() {
  document.getElementById('command-output').textContent = 'Ready to execute commands...';
  document.getElementById('command-status').classList.add('hidden');
}
</script>
{% endblock %}
