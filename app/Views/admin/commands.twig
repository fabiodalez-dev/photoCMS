{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.commands.title') }} — Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.commands.title') }}</h1>
      <p class="text-gray-600 mt-1">{{ trans('admin.commands.description') }}</p>
    </div>
    <a href="{{ base_path }}/CLI_GUIDE.md" target="_blank" class="btn-secondary">
      <i class="fas fa-book mr-2"></i>{{ trans('admin.commands.cli_guide') }}
    </a>
  </div>

  <!-- Quick Actions Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    
    <!-- Database Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-database mr-3 text-blue-600"></i>
          {{ trans('admin.commands.database') }}
        </h3>
        <p class="text-gray-600 text-sm mb-4">{{ trans('admin.commands.database_desc') }}</p>

        <div class="space-y-2">
          <button data-command="db:migrate" class="w-full btn-primary text-sm">
            <i class="fas fa-arrow-up mr-2"></i>{{ trans('admin.commands.run_migrations') }}
          </button>
          <button data-command="db:seed" class="w-full btn-secondary text-sm">
            <i class="fas fa-seedling mr-2"></i>{{ trans('admin.commands.seed_data') }}
          </button>
          <button data-command="db:test" class="w-full btn-secondary text-sm">
            <i class="fas fa-stethoscope mr-2"></i>{{ trans('admin.commands.test_connection') }}
          </button>
        </div>
      </div>
    </div>

    <!-- Images Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-images mr-3 text-green-600"></i>
          {{ trans('admin.commands.images') }}
        </h3>
        <p class="text-gray-600 text-sm mb-4">{{ trans('admin.commands.images_desc') }}</p>

        <div class="space-y-2">
          <button data-command="images:generate" data-payload='{"missing":true}' class="w-full btn-primary text-sm">
            <i class="fas fa-images mr-2"></i>{{ trans('admin.commands.generate_missing') }}
          </button>
          <button data-command="media:normalize-paths" class="w-full btn-secondary text-sm">
            <i class="fas fa-link mr-2"></i>{{ trans('admin.commands.normalize_paths') }}
          </button>
        </div>

        <div class="mt-3 text-xs text-gray-500">
          <div><strong>{{ trans('admin.commands.generate_missing') }}:</strong> {{ trans('admin.commands.generate_missing_note') }}</div>
          <div><strong>{{ trans('admin.commands.normalize_paths') }}:</strong> {{ trans('admin.commands.normalize_note') }}</div>
          <p class="mt-2 text-xs"><strong>{{ trans('admin.common.note') }}:</strong> {{ trans('admin.commands.settings_note') }}</p>
        </div>
      </div>
    </div>

    <!-- SEO Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-sitemap mr-3 text-purple-600"></i>
          {{ trans('admin.commands.seo') }}
        </h3>
        <p class="text-gray-600 text-sm mb-4">{{ trans('admin.commands.seo_desc') }}</p>

        <div class="mb-4">
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
            <div class="flex items-center">
              <i class="fas fa-info-circle text-blue-600 mr-2"></i>
              <div class="text-sm">
                <div class="font-medium text-blue-800">{{ trans('admin.commands.detected_base_url') }}:</div>
                <div class="text-blue-700" id="detected-base-url">{{ detected_base_url }}</div>
              </div>
            </div>
          </div>
        </div>

        <button data-action="run-sitemap" class="w-full btn-primary text-sm">
          <i class="fas fa-map mr-2"></i>{{ trans('admin.commands.build_sitemap') }}
        </button>
      </div>
    </div>

    <!-- System Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-cogs mr-3 text-orange-600"></i>
          {{ trans('admin.commands.system') }}
        </h3>
        <p class="text-gray-600 text-sm mb-4">{{ trans('admin.commands.system_desc') }}</p>

        <div class="space-y-2">
          <button data-command="diagnostics:report" class="w-full btn-primary text-sm">
            <i class="fas fa-stethoscope mr-2"></i>{{ trans('admin.commands.run_diagnostics') }}
          </button>
          <a href="{{ base_path }}/admin/diagnostics" class="w-full btn-secondary text-sm text-center block">
            <i class="fas fa-eye mr-2"></i>{{ trans('admin.commands.view_diagnostics') }}
          </a>
        </div>
      </div>
    </div>



    <!-- Additional System Tools -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-tools mr-3 text-red-600"></i>
          {{ trans('admin.commands.tools') }}
        </h3>
        <p class="text-gray-600 text-sm mb-4">{{ trans('admin.commands.tools_desc') }}</p>

        <div class="space-y-2">
          <button data-command="init" class="w-full btn-secondary text-sm">
            <i class="fas fa-sync mr-2"></i>{{ trans('admin.commands.initialize_system') }}
          </button>
          <a href="{{ base_path }}/admin/diagnostics" class="w-full btn-secondary text-sm text-center block">
            <i class="fas fa-chart-line mr-2"></i>{{ trans('admin.commands.view_system_status') }}
          </a>
        </div>
      </div>
    </div>
    
    <!-- Analytics Commands -->
    <div class="card">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2 flex items-center">
          <i class="fas fa-chart-bar mr-3 text-teal-600"></i>
          {{ trans('admin.commands.analytics') }}
        </h3>
        <p class="text-gray-600 text-sm mb-4">{{ trans('admin.commands.analytics_desc') }}</p>

        <div class="space-y-2">
          <button data-command="analytics:cleanup" data-payload='{"dry-run":true}' class="w-full btn-secondary text-sm">
            <i class="fas fa-preview mr-2"></i>{{ trans('admin.commands.preview_cleanup') }}
          </button>
          <button data-action="run-analytics-cleanup" class="w-full btn-primary text-sm">
            <i class="fas fa-trash-alt mr-2"></i>{{ trans('admin.commands.clean_old_data') }}
          </button>
          <button data-command="analytics:summarize" class="w-full btn-secondary text-sm">
            <i class="fas fa-chart-pie mr-2"></i>{{ trans('admin.commands.generate_summaries') }}
          </button>
        </div>

        <div class="mt-3 text-xs text-gray-500">
          <div><strong>{{ trans('admin.commands.preview_cleanup') }}:</strong> {{ trans('admin.commands.preview_note') }}</div>
          <div><strong>{{ trans('admin.commands.clean_old_data') }}:</strong> {{ trans('admin.commands.clean_note') }}</div>
          <div><strong>{{ trans('admin.commands.generate_summaries') }}:</strong> {{ trans('admin.commands.summarize_note') }}</div>
        </div>
      </div>
    </div>

  </div>

  <!-- Command Output -->
  <div class="card">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">{{ trans('admin.commands.command_output') }}</h3>
        <button data-action="clear-output" class="btn-secondary text-sm">
          <i class="fas fa-trash mr-2"></i>{{ trans('admin.commands.clear') }}
        </button>
      </div>

      <div id="command-output" class="bg-gray-900 text-green-400 p-4 rounded font-mono text-sm whitespace-pre-wrap min-h-48 max-h-96 overflow-y-auto">{{ trans('admin.commands.ready') }}</div>
      
      <div id="command-status" class="hidden mt-4 flex items-center justify-between text-sm">
        <div class="text-gray-600">
          <span id="status-command" class="font-medium"></span>
          <span id="status-duration" class="ml-2 px-2 py-1 bg-gray-100 rounded text-xs"></span>
        </div>
        <span id="status-result" class="px-2 py-1 rounded text-xs font-medium"></span>
      </div>
    </div>
  </div>

  <!-- CLI Quick Reference -->
  <div class="card mt-8">
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">{{ trans('admin.commands.cli_reference') }}</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="font-medium text-gray-900 mb-2">{{ trans('admin.commands.database_commands') }}</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console db:migrate</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console db:seed</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console db:test</div>
          </div>

          <h4 class="font-medium text-gray-900 mb-2 mt-4">{{ trans('admin.commands.image_commands') }}</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console images:generate --missing</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console media:normalize-paths</div>
          </div>
        </div>

        <div>
          <h4 class="font-medium text-gray-900 mb-2">{{ trans('admin.commands.seo_commands') }}</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console sitemap:build --base-url=https://example.com</div>
          </div>

          <h4 class="font-medium text-gray-900 mb-2 mt-4">{{ trans('admin.commands.system_commands') }}</h4>
          <div class="space-y-1 text-sm font-mono text-gray-600">
            <div class="bg-gray-100 p-2 rounded">php bin/console init</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console diagnostics:report</div>
            <div class="bg-gray-100 p-2 rounded">php bin/console user:create admin@example.com</div>
          </div>
        </div>
      </div>
    </div>
  </div>

<script nonce="{{ csp_nonce() }}">
// Commands page - keep functions on window but wire buttons via JS listeners
// Use var to allow redeclaration during SPA navigation
var _commandsIsRunning = _commandsIsRunning || false;
const t = (key) => (typeof window !== 'undefined' && typeof window.adminT === 'function' ? window.adminT(key) : key);
const tf = (key, params = {}) => {
  if (typeof window !== 'undefined' && typeof window.adminTf === 'function') {
    return window.adminTf(key, params);
  }
  let out = t(key);
  try {
    Object.keys(params || {}).forEach((param) => {
      out = String(out).replaceAll(`{${param}}`, String(params[param]));
    });
  } catch (e) {}
  return out;
};

function updateOutput(text, clear) {
  const output = document.getElementById('command-output');
  if (!output) return;
  if (clear) {
    output.textContent = text;
  } else {
    output.textContent += text;
  }
  output.scrollTop = output.scrollHeight;
}

function updateStatus(command, status, duration) {
  const statusDiv = document.getElementById('command-status');
  const commandSpan = document.getElementById('status-command');
  const durationSpan = document.getElementById('status-duration');
  const resultSpan = document.getElementById('status-result');

  if (!statusDiv || !commandSpan || !durationSpan || !resultSpan) return;

  commandSpan.textContent = command;
  durationSpan.textContent = duration ? `${duration}s` : `${t('admin.commands.running')}...`;

  resultSpan.className = 'px-2 py-1 rounded text-xs font-medium ';
  if (status === 'success') {
    resultSpan.className += 'bg-green-100 text-green-800';
    resultSpan.textContent = t('admin.commands.success');
  } else if (status === 'error') {
    resultSpan.className += 'bg-red-100 text-red-800';
    resultSpan.textContent = t('admin.commands.failed');
  } else {
    resultSpan.className += 'bg-blue-100 text-blue-800';
    resultSpan.textContent = `${t('admin.commands.running')}...`;
  }

  statusDiv.classList.remove('hidden');
}

function runCommand(command, args) {
  args = args || {};
  if (_commandsIsRunning) {
    alert(t('admin.commands.command_already_running'));
    return;
  }

  _commandsIsRunning = true;

  // Immediate visual feedback
  if (window.showToast) {
    window.showToast(tf('admin.commands.executing', { command }), 'info');
  }

  updateOutput(tf('admin.commands.output_running', { command }) + '\n', true);
  updateStatus(command, 'running', 0);

  const buttons = document.querySelectorAll('button');
  buttons.forEach(function(btn) {
    btn.disabled = true;
    btn.style.opacity = '0.6';
  });

  const startTime = Date.now();

  fetch(window.basePath + '/admin/commands/execute', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-Requested-With': 'XMLHttpRequest',
      'X-CSRF-Token': '{{ csrf }}'
    },
    body: JSON.stringify({ command: command, args: args })
  })
  .then(function(response) { return response.json(); })
  .then(function(data) {
    const duration = ((Date.now() - startTime) / 1000).toFixed(2);

    if (data.success) {
      updateOutput('✅ ' + t('admin.commands.success') + ' (' + duration + 's)\n\n' + data.output + '\n\n==================================================\n\n');
      updateStatus(command, 'success', duration);
      if (window.showToast) window.showToast(t('admin.commands.command_completed'), 'success');
    } else {
      const errMsg = data.error || t('admin.common.unknown_error');
      updateOutput('❌ ' + t('admin.commands.failed') + ' (' + duration + 's)\n\n' + data.output + '\n\n' + t('admin.common.error') + ': ' + errMsg + '\n\n==================================================\n\n');
      updateStatus(command, 'error', duration);
      if (window.showToast) window.showToast(tf('admin.commands.command_failed', { error: errMsg }), 'error');
    }
  })
  .catch(function(error) {
    const duration = ((Date.now() - startTime) / 1000).toFixed(2);
    updateOutput('❌ ' + t('admin.commands.network_error') + ' (' + duration + 's)\n\n' + error.message + '\n\n==================================================\n\n');
    updateStatus(command, 'error', duration);
    if (window.showToast) window.showToast(tf('admin.commands.network_error_with_message', { error: error.message }), 'error');
  })
  .finally(function() {
    _commandsIsRunning = false;
    buttons.forEach(function(btn) {
      btn.disabled = false;
      btn.style.opacity = '1';
    });
  });
}

function runSitemapCommand() {
  const baseUrl = document.getElementById('detected-base-url').textContent;
  runCommand('sitemap:build', { 'base-url': baseUrl });
}

function runAnalyticsCleanup() {
  if (!confirm(t('admin.commands.confirm_cleanup'))) return;
  runCommand('analytics:cleanup', { 'force': true });
}

function clearOutput() {
  document.getElementById('command-output').textContent = t('admin.commands.ready');
  document.getElementById('command-status').classList.add('hidden');
}

// Attach event listeners to buttons (no inline handlers)
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('[data-command]').forEach(btn => {
    btn.addEventListener('click', () => {
      const cmd = btn.getAttribute('data-command');
      const payloadRaw = btn.getAttribute('data-payload');
      let payload;
      if (payloadRaw) {
        try { payload = JSON.parse(payloadRaw); } catch (e) { payload = undefined; }
      }
      runCommand(cmd, payload);
    });
  });

  const actionMap = {
    'run-sitemap': runSitemapCommand,
    'run-analytics-cleanup': runAnalyticsCleanup,
    'clear-output': clearOutput
  };
  document.querySelectorAll('[data-action]').forEach(btn => {
    const action = btn.getAttribute('data-action');
    const fn = actionMap[action];
    if (fn) {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        fn();
      });
    }
  });
});
</script>
{% endblock %}
