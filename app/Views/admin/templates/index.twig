{% extends 'admin/_layout.twig' %}
{% block title %}Templates — photoCMS{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Templates</h1>
      <p class="text-gray-600 mt-1">Gestisci i template per la visualizzazione degli album</p>
    </div>
    <a href="/admin/templates/create" class="btn-primary">
      <i class="fas fa-plus mr-2"></i>Nuovo Template
    </a>
  </div>

  <div class="card">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Lista Template</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrizione</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Layout</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Librerie</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Azioni</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for template in templates %}
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">{{ template.name }}</div>
                <div class="text-sm text-gray-500">/{{ template.slug }}</div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">{{ template.description|default('—') }}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  {{ template.settings.layout|default('grid')|title }}
                  {% if template.settings.masonry %}<span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded ml-2">Masonry</span>{% endif %}
                </div>
                {% set cols = template.settings.columns is defined ? template.settings.columns : {'desktop': 3, 'tablet': 2, 'mobile': 1} %}
                {# Safely extract column values - handle any nesting #}
                {% set desktop_cols = 3 %}
                {% set tablet_cols = 2 %}  
                {% set mobile_cols = 1 %}
                
                {# Desktop: handle the specific triple-nested case #}
                {% if cols.desktop is defined %}
                  {% if cols.desktop.desktop is defined and cols.desktop.desktop.desktop is defined %}
                    {% set desktop_cols = cols.desktop.desktop.desktop %}
                  {% elseif cols.desktop.desktop is defined %}
                    {% if cols.desktop.desktop is iterable %}
                      {% set desktop_cols = 3 %} {# fallback if still nested #}
                    {% else %}
                      {% set desktop_cols = cols.desktop.desktop %}
                    {% endif %}
                  {% elseif cols.desktop is iterable %}
                    {% set desktop_cols = 3 %} {# fallback #}
                  {% else %}
                    {% set desktop_cols = cols.desktop %}
                  {% endif %}
                {% endif %}
                
                {# Tablet: handle nested case #}
                {% if cols.tablet is defined %}
                  {% if cols.tablet is iterable %}
                    {% set tablet_cols = 2 %} {# fallback for complex nested #}
                  {% else %}
                    {% set tablet_cols = cols.tablet %}
                  {% endif %}
                {% endif %}
                
                {# Mobile: handle nested case #}
                {% if cols.mobile is defined %}
                  {% if cols.mobile is iterable %}
                    {% set mobile_cols = 1 %} {# fallback for complex nested #}
                  {% else %}
                    {% set mobile_cols = cols.mobile %}
                  {% endif %}
                {% endif %}
                
                <div class="text-xs text-gray-500">
                  <i class="fas fa-desktop mr-1"></i>{{ desktop_cols|default(3) }}
                  <i class="fas fa-tablet-alt ml-2 mr-1"></i>{{ tablet_cols|default(2) }}
                  <i class="fas fa-mobile-alt ml-2 mr-1"></i>{{ mobile_cols|default(1) }}
                </div>
              </td>
              <td class="px-6 py-4">
                {% for lib in template.libs %}
                  <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded mr-1">{{ lib }}</span>
                {% endfor %}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <a href="/admin/templates/{{ template.id }}/edit" class="text-blue-600 hover:text-blue-900 mr-3">Modifica</a>
                <form method="post" action="/admin/templates/{{ template.id }}/delete" onsubmit="return confirm('Eliminare questo template?');" class="inline">
                  <input type="hidden" name="csrf" value="{{ csrf }}">
                  <button class="text-red-600 hover:text-red-900">Elimina</button>
                </form>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                Nessun template trovato. <a href="/admin/templates/create" class="text-blue-600 hover:text-blue-900">Creane uno</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
