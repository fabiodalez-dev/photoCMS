{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.templates.title') }} — Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8 flex-wrap gap-3">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.templates.title') }}</h1>
      <p class="text-gray-600 mt-1">{{ trans('admin.templates.page_description') }}</p>
    </div>
  </div>

  <div class="card">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.templates.name') }}</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.templates.description_label') }}</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.templates.layout') }}</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.templates.libraries') }}</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">{{ trans('admin.templates.actions') }}</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for template in templates %}
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-lg bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                      <i class="fas fa-palette text-white text-sm"></i>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">{{ template.name }}</div>
                    <div class="text-sm text-gray-500">/{{ template.slug }}</div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">{{ template.description|default('—') }}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  {{ template.settings.layout|default('grid')|title }}
                  {% if template.settings.masonry %}<span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded ml-2">{{ trans('admin.templates.masonry') }}</span>{% endif %}
                </div>
                {% set cols = template.settings.columns is defined ? template.settings.columns : {'desktop': 3, 'tablet': 2, 'mobile': 1} %}
                {% set desktop_cols = cols.desktop %}
                {% set tablet_cols = cols.tablet %}
                {% set mobile_cols = cols.mobile %}

                <div class="text-xs text-gray-500">
                  <i class="fas fa-desktop mr-1"></i>{{ desktop_cols|default(3) }}
                  <i class="fas fa-tablet-alt ml-2 mr-1"></i>{{ tablet_cols|default(2) }}
                  <i class="fas fa-mobile-alt ml-2 mr-1"></i>{{ mobile_cols|default(1) }}
                </div>
              </td>
              <td class="px-6 py-4">
                {% for lib in template.libs %}
                  <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded mr-1">{{ lib }}</span>
                {% endfor %}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2">
                  <a href="{{ base_path }}/admin/templates/{{ template.id }}/edit"
                     class="inline-flex items-center px-3 py-1.5 rounded-md text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors">
                    <i class="fas fa-edit mr-1"></i>{{ trans('admin.templates.edit') }}
                  </a>
                </div>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="px-6 py-12 text-center">
                <div class="flex flex-col items-center">
                  <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mb-4">
                    <i class="fas fa-palette text-gray-400 text-xl"></i>
                  </div>
                  <h3 class="text-sm font-medium text-gray-900 mb-1">{{ trans('admin.templates.no_templates') }}</h3>
                  <p class="text-sm text-gray-500">{{ trans('admin.templates.no_templates_hint') }}</p>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
