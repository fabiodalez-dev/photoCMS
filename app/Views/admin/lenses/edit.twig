{% extends 'admin/_layout.twig' %}
{% block title %}Modifica lente â€” photoCMS{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-4"><h1 class="text-2xl font-bold text-gray-900">Modifica lente</h1></div>
  <form method="post" action="/admin/lenses/{{ item.id }}">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Brand</label><input class="form-input" type="text" name="brand" value="{{ item.brand }}" required></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Model</label><input class="form-input" type="text" name="model" value="{{ item.model }}" required></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Focale min (mm)</label><input class="form-input" type="number" step="0.01" name="focal_min" value="{{ item.focal_min }}"></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Focale max (mm)</label><input class="form-input" type="number" step="0.01" name="focal_max" value="{{ item.focal_max }}"></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Apertura min (f/)</label><input class="form-input" type="number" step="0.01" name="aperture_min" value="{{ item.aperture_min }}"></div>
    </div>
    <div class="mt-3 flex gap-3"><button class="btn-primary">Aggiorna</button> <a class="btn-secondary" href="/admin/lenses">Annulla</a></div>
  </form>
  <form method="post" action="/admin/lenses/{{ item.id }}/delete" class="mt-3" onsubmit="return confirm('Eliminare?');">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <button class="btn-secondary text-red-700">Elimina</button>
  </form>
{% endblock %}
