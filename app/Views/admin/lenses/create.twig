{% block content %}
  <div class="flex items-center justify-between mb-4"><h1 class="text-2xl font-bold text-gray-900">Nuova lente</h1></div>
  <form method="post" action="/admin/lenses">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Brand</label><input class="form-input" type="text" name="brand" required></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Model</label><input class="form-input" type="text" name="model" required></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Focale min (mm)</label><input class="form-input" type="number" step="0.01" name="focal_min"></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Focale max (mm)</label><input class="form-input" type="number" step="0.01" name="focal_max"></div>
      <div><label class="block text-sm font-medium text-gray-700 mb-1">Apertura min (f/)</label><input class="form-input" type="number" step="0.01" name="aperture_min"></div>
    </div>
    <div class="mt-3 flex gap-3"><button class="btn-primary">Salva</button> <a class="btn-secondary" href="/admin/lenses">Annulla</a></div>
  </form>
{% endblock %}
