<!doctype html>
<html lang="{{ admin_locale|default('en')|slice(0, 2) }}"{% if dark_mode|default(false) %} class="dark"{% endif %}>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ trans('admin.login.title') }} — Cimaise</title>
  <link href="{{ base_path }}/assets/app.css" rel="stylesheet">
  <link href="{{ base_path }}/assets/vendor/fontawesome/css/all.min.css" rel="stylesheet">
  <link href="{{ base_path }}/fonts/typography.css" rel="stylesheet">

  <!-- Custom CSS (Frontend Only) -->
  {% if custom_css|default('') is not empty %}
  <style nonce="{{ csp_nonce() }}">
    /* ===== Custom CSS ===== */
    {{ custom_css|raw }}
  </style>
  {% endif %}
</head>
<body class="bg-gray-50 min-h-screen flex items-center justify-center">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      {% if logo_type == 'image' and site_logo %}
        <img src="{% if site_logo starts with '/' %}{{ base_path }}{{ site_logo }}{% else %}{{ site_logo }}{% endif %}"
             alt="{{ site_title|default('Cimaise')|e }}" class="h-12 w-auto mx-auto mb-4">
      {% else %}
        <i class="fas fa-camera text-4xl text-black mb-4"></i>
      {% endif %}
      <h2 class="text-3xl font-bold text-gray-900">{{ site_title|default('Cimaise') }}</h2>
      <p class="mt-2 text-sm text-gray-600">{{ trans('admin.login.admin_panel') }}</p>
    </div>

    {% if error %}
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
        {{ error }}
      </div>
    {% endif %}

    <form method="post" action="{{ base_path }}/admin/login" class="mt-8 space-y-6">
      <input type="hidden" name="csrf" value="{{ csrf }}">
      
      <div class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">{{ trans('admin.login.email') }}</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-envelope text-gray-400"></i>
            </div>
            <input 
              id="email" 
              name="email" 
              type="email" 
              required 
              autofocus
              class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder:text-gray-400 dark:bg-white dark:text-black dark:placeholder:text-black/60 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
              placeholder="admin@cimaise.local"
            >
          </div>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">{{ trans('admin.login.password') }}</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-lock text-gray-400"></i>
            </div>
            <input
              id="password"
              name="password"
              type="password"
              required
              class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder:text-gray-400 dark:bg-white dark:text-black dark:placeholder:text-black/60 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
              placeholder="••••••••"
            >
          </div>
        </div>

        <div class="flex items-center">
          <input
            id="remember_me"
            name="remember_me"
            type="checkbox"
            value="1"
            class="h-4 w-4 text-black border-gray-300 rounded focus:ring-black"
          >
          <label for="remember_me" class="ml-2 block text-sm text-gray-700">
            {{ trans('admin.login.remember_me') }}
          </label>
        </div>
      </div>

      <button 
        type="submit"
        class="w-full bg-black hover:bg-gray-800 text-white font-medium py-3 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
      >
        <i class="fas fa-sign-in-alt mr-2"></i>
        {{ trans('admin.login.submit') }}
      </button>
    </form>

    <div class="text-center text-xs text-gray-500 mt-8">
      Cimaise Admin Panel
    </div>
  </div>
</body>
</html>
