{% extends 'admin/_layout.twig' %}
{% block title %}Nuovo lab — Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-4"><h1 class="text-2xl font-bold text-gray-900">Nuovo lab</h1></div>
  <form method="post" action="{{ base_path }}/admin/labs">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div><label for="lab-name" class="block text-sm font-medium text-gray-700 mb-1">Nome</label><input class="form-input" type="text" id="lab-name" name="name" autocomplete="organization" required></div>
      <div><label for="lab-city" class="block text-sm font-medium text-gray-700 mb-1">Città</label><input class="form-input" type="text" id="lab-city" name="city" autocomplete="address-level2"></div>
      <div><label for="lab-country" class="block text-sm font-medium text-gray-700 mb-1">Nazione</label><input class="form-input" type="text" id="lab-country" name="country" autocomplete="country-name"></div>
    </div>
    <div class="mt-3 flex gap-3"><button class="btn-primary">Salva</button> <a class="btn-secondary" href="{{ base_path }}/admin/labs">Annulla</a></div>
  </form>
{% endblock %}
