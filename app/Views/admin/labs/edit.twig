{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.labs.edit') }} â€” Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-4"><h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.labs.edit') }}</h1></div>
  <form method="post" action="{{ base_path }}/admin/labs/{{ item.id }}">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div><label for="lab-name-edit" class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.labs.name') }}</label><input class="form-input" type="text" id="lab-name-edit" name="name" autocomplete="organization" value="{{ item.name }}" required></div>
      <div><label for="lab-city-edit" class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.labs.city') }}</label><input class="form-input" type="text" id="lab-city-edit" name="city" autocomplete="address-level2" value="{{ item.city }}"></div>
      <div><label for="lab-country-edit" class="block text-sm font-medium text-gray-700 mb-1">{{ trans('admin.labs.country') }}</label><input class="form-input" type="text" id="lab-country-edit" name="country" autocomplete="country-name" value="{{ item.country }}"></div>
    </div>
    <div class="mt-3 flex gap-3"><button class="btn-primary">{{ trans('admin.labs.update') }}</button> <a class="btn-secondary" href="{{ base_path }}/admin/labs">{{ trans('admin.labs.cancel') }}</a></div>
  </form>
  <form method="post" action="{{ base_path }}/admin/labs/{{ item.id }}/delete" class="mt-3" data-confirm="{{ trans('admin.labs.delete_confirm')|e('html_attr') }}">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    <button class="btn-secondary text-red-700">{{ trans('admin.common.delete') }}</button>
  </form>
{% endblock %}
