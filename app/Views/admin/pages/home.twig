        <input type="hidden" name="csrf" value="{{ csrf }}">

        <!-- Template Selector -->
        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-palette mr-3 text-gray-600"></i>
              {{ trans('admin.pages.home.template_selection') }}
            </h3>
            <p class="text-sm text-gray-600 mb-4">{{ trans('admin.pages.home.template_selection_desc') }}</p>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <label class="relative flex flex-col cursor-pointer rounded-lg border-2 p-4 transition-all home-template-option {{ settings['home.template']|default('classic') == 'classic' ? 'border-black bg-gray-50' : 'border-gray-200 hover:border-gray-300' }}" data-template="classic">
                <input type="radio" name="home_template" value="classic" class="sr-only" {{ settings['home.template']|default('classic') == 'classic' ? 'checked' : '' }}>
                <div class="flex items-center gap-3 mb-2">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-gray-700 to-gray-900 flex items-center justify-center">
                    <i class="fas fa-images text-white text-sm"></i>
                  </div>
                  <div>
                    <span class="font-semibold text-gray-900">{{ trans('admin.pages.home.template_classic') }}</span>
                    <span class="block text-xs text-gray-500">{{ trans('admin.pages.home.template_classic_subtitle') }}</span>
                  </div>
                </div>
                <p class="text-xs text-gray-600">{{ trans('admin.pages.home.template_classic_desc') }}</p>
                <div class="absolute top-2 right-2 template-check {{ settings['home.template']|default('classic') == 'classic' ? '' : 'hidden' }}">
                  <i class="fas fa-check-circle text-black"></i>
                </div>
              </label>
              <label class="relative flex flex-col cursor-pointer rounded-lg border-2 p-4 transition-all home-template-option {{ settings['home.template']|default('classic') == 'modern' ? 'border-black bg-gray-50' : 'border-gray-200 hover:border-gray-300' }}" data-template="modern">
                <input type="radio" name="home_template" value="modern" class="sr-only" {{ settings['home.template']|default('classic') == 'modern' ? 'checked' : '' }}>
                <div class="flex items-center gap-3 mb-2">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                    <i class="fas fa-th-large text-white text-sm"></i>
                  </div>
                  <div>
                    <span class="font-semibold text-gray-900">{{ trans('admin.pages.home.template_modern') }}</span>
                    <span class="block text-xs text-gray-500">{{ trans('admin.pages.home.template_modern_subtitle') }}</span>
                  </div>
                </div>
                <p class="text-xs text-gray-600">{{ trans('admin.pages.home.template_modern_desc') }}</p>
                <div class="absolute top-2 right-2 template-check {{ settings['home.template']|default('classic') == 'modern' ? '' : 'hidden' }}">
                  <i class="fas fa-check-circle text-black"></i>
                </div>
              </label>
              <label class="relative flex flex-col cursor-pointer rounded-lg border-2 p-4 transition-all home-template-option {{ settings['home.template']|default('classic') == 'parallax' ? 'border-black bg-gray-50' : 'border-gray-200 hover:border-gray-300' }}" data-template="parallax">
                <input type="radio" name="home_template" value="parallax" class="sr-only" {{ settings['home.template']|default('classic') == 'parallax' ? 'checked' : '' }}>
