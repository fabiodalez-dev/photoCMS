      </div>
    </div>
  </div>

  <script src="{{ base_path }}/assets/vendor/tinymce/tinymce.min.js"></script>
  <script nonce="{{ csp_nonce() }}">
    // Run immediately (works with SPA navigation)
    (function initHomePageSettings() {
      // Template selector toggle
      const templateOptions = document.querySelectorAll('.home-template-option');
      const classicSettings = document.getElementById('classic-home-settings');
      const classicInfo = document.getElementById('classic-home-info');
      const modernInfo = document.getElementById('modern-home-info');
      const parallaxInfo = document.getElementById('parallax-home-info');

      if (!templateOptions.length) return; // Guard if elements not found

      templateOptions.forEach(option => {
        // Remove any existing listeners to avoid duplicates on SPA reload
        option.replaceWith(option.cloneNode(true));
      });

      // Re-query after cloning
      document.querySelectorAll('.home-template-option').forEach(option => {
        option.addEventListener('click', function(e) {
          e.preventDefault(); // Prevent default label behavior
          const template = this.dataset.template;
          const radio = this.querySelector('input[type="radio"]');
          if (radio) radio.checked = true;

          // Update visual states
          document.querySelectorAll('.home-template-option').forEach(opt => {
            opt.classList.remove('border-black', 'bg-gray-50');
            opt.classList.add('border-gray-200');
            const check = opt.querySelector('.template-check');
            if (check) check.classList.add('hidden');
          });
          this.classList.remove('border-gray-200');
          this.classList.add('border-black', 'bg-gray-50');
          const thisCheck = this.querySelector('.template-check');
          if (thisCheck) thisCheck.classList.remove('hidden');

          // Toggle settings and info visibility based on template
          if (classicSettings) classicSettings.classList.toggle('hidden', template !== 'classic');
          if (classicInfo) classicInfo.classList.toggle('hidden', template !== 'classic');
          if (modernInfo) modernInfo.classList.toggle('hidden', template !== 'modern');
          if (parallaxInfo) parallaxInfo.classList.toggle('hidden', template !== 'parallax');
        });
      });

      // TinyMCE init
      if (window.tinymce) {
        // Destroy existing instances first (for SPA)
        document.querySelectorAll('textarea.richtext').forEach(ta => {
          const existingEditor = tinymce.get(ta.id);
          if (existingEditor) existingEditor.remove();
        });

        tinymce.init({
          selector: 'textarea.richtext',
          base_url: (window.basePath || '') + '/assets/vendor/tinymce',
          menubar: false,
          statusbar: true,
          branding: false,
          plugins: 'link lists autoresize code fullscreen emoticons table charmap',
          toolbar: 'undo redo | styles | bold italic underline strikethrough | alignleft aligncenter alignright | bullist numlist | blockquote | link | table | charmap emoticons | code fullscreen | removeformat',
          block_formats: 'Paragraph=p; Heading 2=h2; Heading 3=h3; Heading 4=h4',
          default_link_target: '_blank',
          link_default_protocol: 'https',
          rel_list: [{title: 'noopener', value: 'noopener'},{title:'noreferrer', value:'noreferrer'}],
          content_css: false,
          content_style: 'body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif; color:#111; line-height:1.7; padding:1rem;} a{color:#000; text-decoration:underline} blockquote{border-left:3px solid #e5e7eb; margin:1rem 0; padding-left:.75rem; color:#444}',
          valid_elements: 'p,br,strong/b,em/i,u,s,ul,ol,li,blockquote,a[href|target|rel],h2,h3,h4,hr,table,thead,tbody,tr,th,td,span[style]',
          height: 350,
          autoresize_min_height: 250,
          autoresize_max_height: 600
        });
      }
    })();
  </script>
{% endblock %}
