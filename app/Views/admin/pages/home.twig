  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.pages.title') }}</h1>
      <p class="text-gray-600 mt-1">{{ trans('admin.pages.home.edit')|raw }}</p>
    </div>
    <a href="{{ base_path }}/" class="btn-secondary" target="_blank" rel="noopener noreferrer"><i class="fas fa-external-link-alt mr-2"></i>{{ trans('admin.pages.home.view_page') }}</a>
  </div>

