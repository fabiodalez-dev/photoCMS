          <h3 class="text-lg font-medium text-gray-900 mb-2">{{ trans('admin.pages.home.parallax_structure_title') }}</h3>
          <p class="text-sm text-gray-600 mb-4">{{ trans('admin.pages.home.parallax_structure_desc') }}</p>
          <ul class="text-sm text-gray-600 space-y-2">
