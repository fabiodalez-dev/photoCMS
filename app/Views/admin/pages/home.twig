          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-folder-open mr-3 text-gray-600"></i>
              {{ trans('admin.pages.home.empty_state') }}
            </h3>
            <p class="text-sm text-gray-600 mb-4">{{ trans('admin.pages.home.empty_state_desc') }}</p>
            <div class="space-y-4">
              <div>
                <label class="block text-sm text-gray-700 mb-1">{{ trans('admin.pages.home.empty_state_title') }}</label>
                <input type="text" name="empty_title" class="form-input" placeholder="{{ trans('admin.pages.home.empty_title_placeholder')|e('html_attr') }}" value="{{ settings['home.empty_title']|default(trans('admin.pages.home.empty_title_default'))|e('html_attr') }}">
              </div>
              <div>
                <label class="block text-sm text-gray-700 mb-1">{{ trans('admin.pages.home.empty_state_message') }}</label>
                <input type="text" name="empty_text" class="form-input" placeholder="{{ trans('admin.pages.home.empty_text_placeholder')|e('html_attr') }}" value="{{ settings['home.empty_text']|default(trans('admin.pages.home.empty_text_default'))|e('html_attr') }}">
              </div>
            </div>
          </div>
        </div>

      </form>
    </div>

    <!-- Info panel -->
    <div class="lg:col-span-1">
      <!-- Classic Home Info -->
      <div id="classic-home-info" class="card {{ settings['home.template']|default('classic') == 'modern' ? 'hidden' : '' }}">
        <div class="p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-2">{{ trans('admin.pages.home.structure_title') }}</h3>
          <p class="text-sm text-gray-600 mb-4">{{ trans('admin.pages.home.structure_desc') }}</p>
          <ul class="text-sm text-gray-600 space-y-2">
            <li class="flex items-start">
              <i class="fas fa-star text-gray-400 mr-2 mt-1"></i>
              <span><strong>Hero</strong> - {{ trans('admin.pages.home.hero_desc') }}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-th text-gray-400 mr-2 mt-1"></i>
              <span><strong>{{ trans('admin.pages.home.infinite_gallery') }}</strong> - {{ trans('admin.pages.home.infinite_gallery_info') }}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-align-left text-gray-400 mr-2 mt-1"></i>
              <span><strong>{{ trans('admin.pages.home.gallery_text_section') }}</strong> - {{ trans('admin.pages.home.gallery_text_info') }}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-images text-gray-400 mr-2 mt-1"></i>
              <span><strong>{{ trans('admin.pages.home.albums_carousel_section') }}</strong> - {{ trans('admin.pages.home.albums_carousel_info') }}</span>
            </li>
