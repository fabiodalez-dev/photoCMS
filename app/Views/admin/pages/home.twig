                    <i class="fas fa-layer-group text-white text-sm"></i>
                  </div>
                  <div>
                    <span class="font-semibold text-gray-900">{{ trans('admin.pages.home.template_parallax') }}</span>
                    <span class="block text-xs text-gray-500">{{ trans('admin.pages.home.template_parallax_subtitle') }}</span>
                  </div>
