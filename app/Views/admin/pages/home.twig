                <p class="text-xs text-gray-600">{{ trans('admin.pages.home.template_parallax_desc') }}</p>
                <div class="absolute top-2 right-2 template-check {{ settings['home.template']|default('classic') == 'parallax' ? '' : 'hidden' }}">
                  <i class="fas fa-check-circle text-black"></i>
                </div>
