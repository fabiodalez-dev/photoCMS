{% extends 'admin/_layout.twig' %}
{% block title %}Pages â€” Home{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Pages</h1>
      <p class="text-gray-600 mt-1">Edit <strong>Home</strong> page texts</p>
    </div>
    <a href="{{ base_path }}/" class="btn-secondary" target="_blank" rel="noopener noreferrer"><i class="fas fa-external-link-alt mr-2"></i>View page</a>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Editor -->
    <div class="lg:col-span-2">
      <form method="post" action="{{ base_path }}/admin/pages/home" class="space-y-6">
        <input type="hidden" name="csrf" value="{{ csrf }}">

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-star mr-3 text-gray-600"></i>
              Hero Section
            </h3>
            <div class="space-y-4">
              <div>
                <label class="block text-sm text-gray-700 mb-1">Title</label>
                <input type="text" name="hero_title" class="form-input" placeholder="Portfolio" value="{{ settings['home.hero_title']|default('Portfolio')|e('html_attr') }}">
                <p class="text-xs text-gray-500 mt-1">Main heading displayed at the top of the homepage</p>
              </div>
              <div>
                <label class="block text-sm text-gray-700 mb-1">Subtitle</label>
                <textarea name="hero_subtitle" rows="3" class="form-input" placeholder="A collection of analog and digital photography...">{{ settings['home.hero_subtitle']|default('') }}</textarea>
                <p class="text-xs text-gray-500 mt-1">Brief description shown below the main title</p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-th mr-3 text-gray-600"></i>
              Infinite Gallery
            </h3>
            <p class="text-sm text-gray-600 mb-4">Configure the auto-scrolling image gallery</p>
            <div class="space-y-4">
              <div>
                <label class="block text-sm text-gray-700 mb-2">Scroll Direction</label>
                <div class="flex gap-4">
                  <label class="flex items-center cursor-pointer">
                    <input type="radio" name="gallery_scroll_direction" value="vertical"
                           {{ settings['home.gallery_scroll_direction']|default('vertical') == 'vertical' ? 'checked' : '' }}
                           class="w-4 h-4 text-black border-gray-300 focus:ring-black">
                    <span class="ml-2 text-sm text-gray-700">
                      <i class="fas fa-arrows-alt-v mr-1"></i>Vertical
                    </span>
                  </label>
                  <label class="flex items-center cursor-pointer">
                    <input type="radio" name="gallery_scroll_direction" value="horizontal"
                           {{ settings['home.gallery_scroll_direction']|default('vertical') == 'horizontal' ? 'checked' : '' }}
                           class="w-4 h-4 text-black border-gray-300 focus:ring-black">
                    <span class="ml-2 text-sm text-gray-700">
                      <i class="fas fa-arrows-alt-h mr-1"></i>Horizontal
                    </span>
                  </label>
                </div>
                <p class="text-xs text-gray-500 mt-2">Choose how images scroll in the infinite gallery</p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-align-left mr-3 text-gray-600"></i>
              Gallery Text Section
            </h3>
            <p class="text-sm text-gray-600 mb-4">Optional text section displayed after the infinite gallery</p>
            <div class="space-y-4">
              <div>
                <label class="block text-sm text-gray-700 mb-1">Title</label>
                <input type="text" name="gallery_text_title" class="form-input" placeholder="About my work..." value="{{ settings['home.gallery_text_title']|default('')|e('html_attr') }}">
              </div>
              <div>
                <label class="block text-sm text-gray-700 mb-1">Content</label>
                <textarea name="gallery_text_content" rows="8" class="form-input richtext" placeholder="Write about your photography, your approach, or anything you want to share...">{{ settings['home.gallery_text_content']|default('') }}</textarea>
                <p class="text-xs text-gray-500 mt-1">Supports rich text formatting. Leave empty to hide this section.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-images mr-3 text-gray-600"></i>
              Albums Carousel Section
            </h3>
            <div class="space-y-4">
              <div>
                <label class="block text-sm text-gray-700 mb-1">Section Title</label>
                <input type="text" name="albums_title" class="form-input" placeholder="Latest Albums" value="{{ settings['home.albums_title']|default('Latest Albums')|e('html_attr') }}">
              </div>
              <div>
                <label class="block text-sm text-gray-700 mb-1">Section Subtitle</label>
                <textarea name="albums_subtitle" rows="2" class="form-input" placeholder="Discover my recent photographic work...">{{ settings['home.albums_subtitle']|default('') }}</textarea>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-folder-open mr-3 text-gray-600"></i>
              Empty State
            </h3>
            <p class="text-sm text-gray-600 mb-4">Text displayed when there are no albums to show</p>
            <div class="space-y-4">
              <div>
                <label class="block text-sm text-gray-700 mb-1">Empty State Title</label>
                <input type="text" name="empty_title" class="form-input" placeholder="No albums yet" value="{{ settings['home.empty_title']|default('No albums yet')|e('html_attr') }}">
              </div>
              <div>
                <label class="block text-sm text-gray-700 mb-1">Empty State Message</label>
                <input type="text" name="empty_text" class="form-input" placeholder="Check back soon for new work." value="{{ settings['home.empty_text']|default('Check back soon for new work.')|e('html_attr') }}">
              </div>
            </div>
          </div>
        </div>

        <div class="flex items-center justify-end gap-3">
          <a href="{{ base_path }}/admin/pages" class="btn-secondary">Cancel</a>
          <button type="submit" class="btn-primary"><i class="fas fa-save mr-2"></i>Save</button>
        </div>
      </form>
    </div>

    <!-- Info panel -->
    <div class="lg:col-span-1">
      <div class="card">
        <div class="p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-2">Homepage Structure</h3>
          <p class="text-sm text-gray-600 mb-4">The homepage consists of these main sections:</p>
          <ul class="text-sm text-gray-600 space-y-2">
            <li class="flex items-start">
              <i class="fas fa-star text-gray-400 mr-2 mt-1"></i>
              <span><strong>Hero</strong> - Title and subtitle introducing your portfolio</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-th text-gray-400 mr-2 mt-1"></i>
              <span><strong>Infinite Gallery</strong> - Auto-scrolling mosaic of images from your albums</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-align-left text-gray-400 mr-2 mt-1"></i>
              <span><strong>Gallery Text</strong> - Optional text section after the gallery</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-images text-gray-400 mr-2 mt-1"></i>
              <span><strong>Albums Carousel</strong> - Horizontal carousel featuring your latest albums</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <script src="{{ base_path }}/assets/vendor/tinymce/tinymce.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function(){
      if (window.tinymce) {
        tinymce.init({
          selector: 'textarea.richtext',
          base_url: (window.basePath || '') + '/assets/vendor/tinymce',
          menubar: false,
          statusbar: true,
          branding: false,
          plugins: 'link lists autoresize code fullscreen emoticons table charmap',
          toolbar: 'undo redo | styles | bold italic underline strikethrough | alignleft aligncenter alignright | bullist numlist | blockquote | link | table | charmap emoticons | code fullscreen | removeformat',
          block_formats: 'Paragraph=p; Heading 2=h2; Heading 3=h3; Heading 4=h4',
          default_link_target: '_blank',
          link_default_protocol: 'https',
          rel_list: [{title: 'noopener', value: 'noopener'},{title:'noreferrer', value:'noreferrer'}],
          content_css: false,
          content_style: 'body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif; color:#111; line-height:1.7; padding:1rem;} a{color:#000; text-decoration:underline} blockquote{border-left:3px solid #e5e7eb; margin:1rem 0; padding-left:.75rem; color:#444}',
          valid_elements: 'p,br,strong/b,em/i,u,s,ul,ol,li,blockquote,a[href|target|rel],h2,h3,h4,hr,table,thead,tbody,tr,th,td,span[style]',
          height: 350,
          autoresize_min_height: 250,
          autoresize_max_height: 600
        });
      }
    });
  </script>
{% endblock %}
