{% extends "admin/_layout.twig" %}

{% block title %}{{ trans('admin.locations.new') }} â€” Cimaise{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-black">{{ trans('admin.locations.new') }}</h1>
      <p class="text-gray-600 mt-1">{{ trans('admin.locations.new_description') }}</p>
    </div>
    <a href="{{ base_path }}/admin/locations" class="btn-secondary">
      <i class="fas fa-arrow-left mr-2"></i>
      {{ trans('admin.locations.back_to_list') }}
    </a>
  </div>

  {% if errors is defined and errors|length > 0 %}
  <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg" role="alert">
    <div class="flex items-start">
      <i class="fas fa-exclamation-circle mr-3 mt-0.5"></i>
      <div>
        <h3 class="font-medium mb-2">{{ trans('admin.common.fix_errors') }}</h3>
        <ul class="list-disc pl-5 space-y-1">
          {% for error in errors %}
          <li>{{ error }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  {% endif %}

  <form action="{{ base_path }}/admin/locations" method="post">
    <input type="hidden" name="csrf" value="{{ csrf }}">
    
    <div class="card p-6 space-y-6">
      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-lg font-semibold text-black flex items-center">
          <i class="fas fa-map-marker-alt mr-3 text-gray-600"></i>
          {{ trans('admin.locations.details') }}
        </h2>
        <p class="text-gray-600 text-sm mt-1">{{ trans('admin.locations.details_hint') }}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="name" class="block text-sm font-medium text-black mb-2">
            {{ trans('admin.locations.name') }} *
          </label>
          <input type="text"
                 name="name"
                 id="name"
                 class="form-input border-gray-300 focus:border-black focus:ring-black"
                 value="{{ old.name|default('') }}"
                 required
                 placeholder="{{ trans('admin.locations.name_placeholder') }}">
          <p class="text-xs text-gray-500 mt-1">{{ trans('admin.locations.name_hint') }}</p>
        </div>

        <div>
          <label for="slug" class="block text-sm font-medium text-black mb-2">
            {{ trans('admin.locations.slug') }} *
          </label>
          <input type="text"
                 name="slug"
                 id="slug"
                 class="form-input border-gray-300 focus:border-black focus:ring-black font-mono text-sm"
                 value="{{ old.slug|default('') }}"
                 required
                 placeholder="{{ trans('admin.locations.slug_placeholder') }}">
          <p class="text-xs text-gray-500 mt-1">{{ trans('admin.locations.slug_hint') }}</p>
        </div>
      </div>

      <div>
        <label for="description" class="block text-sm font-medium text-black mb-2">
          {{ trans('admin.common.description') }}
        </label>
        <textarea name="description"
                  id="description"
                  rows="4"
                  class="form-input border-gray-300 focus:border-black focus:ring-black"
                  placeholder="{{ trans('admin.locations.description_placeholder') }}">{{ old.description|default('') }}</textarea>
        <p class="text-xs text-gray-500 mt-1">{{ trans('admin.locations.description_hint') }}</p>
      </div>
    </div>

    <div class="flex items-center justify-between mt-8">
      <div class="flex items-center space-x-4">
        <button type="submit" class="btn-primary">
          <i class="fas fa-plus mr-2"></i>
          {{ trans('admin.locations.new') }}
        </button>
        <a href="{{ base_path }}/admin/locations" class="btn-secondary">
          {{ trans('admin.common.cancel') }}
        </a>
      </div>
    </div>
  </form>
</div>
{% endblock %}