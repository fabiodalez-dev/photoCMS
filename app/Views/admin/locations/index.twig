{% extends "admin/_layout.twig" %}

{% block title %}Locations{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Locations</h1>
    <a href="/admin/locations/create" class="bg-black text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-800 transition-colors">
      Add Location
    </a>
  </div>

  {% if flash.getMessage('success') %}
  <div class="mb-6 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline">{{ flash.getMessage('success')[0] }}</span>
  </div>
  {% endif %}

  {% if flash.getMessage('error') %}
  <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline">{{ flash.getMessage('error')[0] }}</span>
  </div>
  {% endif %}

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      {% for location in locations %}
      <li>
        <div class="px-4 py-4 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="text-sm font-medium text-gray-900 truncate">
              {{ location.name }}
            </div>
            <div class="ml-2 flex-shrink-0 flex">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                {{ location.slug }}
              </span>
            </div>
          </div>
          <div class="mt-2 sm:flex sm:justify-between">
            <div class="sm:flex">
              {% if location.description %}
              <p class="flex items-center text-sm text-gray-500">
                {{ location.description|slice(0, 100) }}{% if location.description|length > 100 %}...{% endif %}
              </p>
              {% endif %}
            </div>
            <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
              <span>Created {{ location.created_at|date("M d, Y") }}</span>
            </div>
          </div>
          <div class="mt-4 flex space-x-2">
            <a href="/admin/locations/{{ location.id }}/edit" class="text-sm font-medium text-black hover:text-gray-700">
              Edit
            </a>
            <form action="/admin/locations/{{ location.id }}/delete" method="post" onsubmit="return confirm('Are you sure you want to delete this location?')">
              <button type="submit" class="text-sm font-medium text-red-600 hover:text-red-900">
                Delete
              </button>
            </form>
          </div>
        </div>
      </li>
      {% else %}
      <li>
        <div class="px-4 py-8 sm:px-6 text-center">
          <p class="text-gray-500">No locations found.</p>
          <a href="/admin/locations/create" class="mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-black hover:bg-gray-800 focus:outline-none">
            Create your first location
          </a>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endblock %}