{% extends "admin/_layout.twig" %}

{% block title %}Locations{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-black">Locations</h1>
      <p class="text-gray-600 mt-1">Manage photo shooting locations</p>
    </div>
    <a href="{{ base_path }}/admin/locations/create" class="btn-primary">
      <i class="fas fa-plus mr-2"></i>
      Add Location
    </a>
  </div>

  {% if flash.getMessage('success') %}
  <div class="mb-6 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg" role="alert">
    <div class="flex items-center">
      <i class="fas fa-check-circle mr-2"></i>
      <span>{{ flash.getMessage('success')[0] }}</span>
    </div>
  </div>
  {% endif %}

  {% if flash.getMessage('error') %}
  <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg" role="alert">
    <div class="flex items-center">
      <i class="fas fa-exclamation-circle mr-2"></i>
      <span>{{ flash.getMessage('error')[0] }}</span>
    </div>
  </div>
  {% endif %}

  {% if locations|length > 0 %}
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for location in locations %}
    <div class="card p-6 hover:shadow-lg transition-shadow duration-200">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <h3 class="text-lg font-semibold text-black mb-2">{{ location.name }}</h3>
          <div class="flex items-center text-sm text-gray-500 mb-3">
            <i class="fas fa-link mr-2"></i>
            <code class="bg-gray-100 px-2 py-1 rounded text-xs">{{ location.slug }}</code>
          </div>
          {% if location.description %}
          <p class="text-gray-600 text-sm leading-relaxed">
            {{ location.description|slice(0, 120) }}{% if location.description|length > 120 %}...{% endif %}
          </p>
          {% else %}
          <p class="text-gray-400 text-sm italic">No description provided</p>
          {% endif %}
        </div>
      </div>
      
      <div class="flex items-center justify-between pt-4 border-t border-gray-100">
        <div class="text-xs text-gray-500">
          <i class="fas fa-calendar mr-1"></i>
          Created {{ location.created_at|date_format }}
        </div>
        <div class="flex items-center space-x-2">
          <a href="{{ base_path }}/admin/locations/{{ location.id }}/edit" 
             class="text-sm font-medium text-black hover:text-gray-600 transition-colors flex items-center">
            <i class="fas fa-edit mr-1"></i>
            Edit
          </a>
          <form action="{{ base_path }}/admin/locations/{{ location.id }}/delete" method="post" class="inline" 
                onsubmit="return confirm('Are you sure you want to delete this location?')">
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <button type="submit" 
                    class="text-sm font-medium text-red-600 hover:text-red-800 transition-colors flex items-center">
              <i class="fas fa-trash mr-1"></i>
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  {% else %}
  <div class="card p-12 text-center">
    <div class="mb-6">
      <i class="fas fa-map-marker-alt text-6xl text-gray-300"></i>
    </div>
    <h3 class="text-xl font-semibold text-gray-900 mb-2">No locations found</h3>
    <p class="text-gray-600 mb-6">Start by creating your first shooting location to organize your photo albums by place.</p>
    <a href="{{ base_path }}/admin/locations/create" class="btn-primary">
      <i class="fas fa-plus mr-2"></i>
      Create your first location
    </a>
  </div>
  {% endif %}
</div>
{% endblock %}