{% extends "admin/_layout.twig" %}

{% block title %}Analytics Dashboard â€” photoCMS{% endblock %}

{% block content %}
<div class="min-h-full bg-gray-50">
  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="px-6 py-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900">Analytics Dashboard</h1>
          <p class="mt-2 text-lg text-gray-600">Monitor your site's performance and visitor behavior</p>
        </div>
        <div class="mt-6 lg:mt-0 flex flex-wrap items-center gap-3">
          <a href="{{ base_path }}/admin/analytics/realtime" 
             class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black" 
             data-spa-link>
            <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            Real-time
          </a>
          <a href="{{ base_path }}/admin/analytics/export" 
             class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black">
            <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            Export Data
          </a>
          <a href="{{ base_path }}/admin/analytics/settings" 
             class="inline-flex items-center px-4 py-2 bg-black border border-transparent rounded-lg text-sm font-medium text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black" 
             data-spa-link>
            <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
            </svg>
            Settings
          </a>
        </div>
      </div>
    </div>
  </div>

  {% if not analytics_enabled %}
    <!-- Analytics Disabled Notice -->
    <div class="px-6 py-6">
      <div class="bg-amber-50 border border-amber-200 rounded-xl p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-amber-800">Analytics are currently disabled</h3>
            <p class="mt-1 text-amber-700">Enable analytics in <a href="{{ base_path }}/admin/analytics/settings" class="underline font-medium hover:text-amber-900" data-spa-link>settings</a> to start collecting visitor data.</p>
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Main Content -->
  <div class="px-6 py-6 space-y-8">
    <!-- Date Range Picker -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Date Range</h2>
      <form method="get" id="date-range-form" class="flex flex-wrap items-center gap-4">
        <div class="flex items-center gap-3">
          <label for="start_date" class="text-sm font-medium text-gray-700">From:</label>
          <input type="date" name="start_date" id="start_date" value="{{ start_date }}" 
                 class="block w-auto rounded-lg border-gray-300 shadow-sm focus:border-black focus:ring-black text-sm">
        </div>
        <div class="flex items-center gap-3">
          <label for="end_date" class="text-sm font-medium text-gray-700">To:</label>
          <input type="date" name="end_date" id="end_date" value="{{ end_date }}" 
                 class="block w-auto rounded-lg border-gray-300 shadow-sm focus:border-black focus:ring-black text-sm">
        </div>
        <button type="submit" class="inline-flex items-center px-4 py-2 bg-black border border-transparent rounded-lg text-sm font-medium text-white hover:bg-gray-800">
          <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
          </svg>
          Update
        </button>
        <div class="hidden sm:block w-px h-6 bg-gray-300"></div>
        <div class="flex flex-wrap gap-2">
          <button type="button" onclick="setDateRange('today')" class="px-3 py-2 text-xs font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Today</button>
          <button type="button" onclick="setDateRange('7days')" class="px-3 py-2 text-xs font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">7 Days</button>
          <button type="button" onclick="setDateRange('30days')" class="px-3 py-2 text-xs font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">30 Days</button>
        </div>
      </form>
    </div>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Active Sessions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">Active Sessions</p>
            <p class="text-3xl font-bold text-gray-900">{{ stats.realtime.active_sessions|default(0) }}</p>
            <p class="text-xs text-gray-500 mt-1">Last 24 hours</p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Page Views Today -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">Page Views Today</p>
            <p class="text-3xl font-bold text-gray-900">{{ stats.today.pageviews_today|default(0) }}</p>
            <p class="text-xs text-gray-500 mt-1">{{ stats.realtime.pageviews_24h|default(0) }} in 24h</p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Sessions Today -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">Sessions Today</p>
            <p class="text-3xl font-bold text-gray-900">{{ stats.today.sessions_today|default(0) }}</p>
            <p class="text-xs text-gray-500 mt-1">Unique visitors</p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Average Duration -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">Avg. Duration</p>
            <p class="text-3xl font-bold text-gray-900">
              {% set duration = stats.today.avg_duration|default(0) %}
              {% if duration > 60 %}
                {{ (duration / 60)|round(1) }}m
              {% else %}
                {{ duration|round }}s
              {% endif %}
            </p>
            <p class="text-xs text-gray-500 mt-1">Session duration</p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Sessions Chart -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">Sessions Over Time</h3>
          <div class="flex items-center space-x-1 text-sm text-gray-500">
            <div class="w-3 h-3 bg-black rounded-full"></div>
            <span>Sessions</span>
          </div>
        </div>
        <div class="h-80">
          <canvas id="sessionsChart"></canvas>
        </div>
      </div>

      <!-- Page Views Chart -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">Page Views Over Time</h3>
          <div class="flex items-center space-x-1 text-sm text-gray-500">
            <div class="w-3 h-3 bg-black rounded"></div>
            <span>Page Views</span>
          </div>
        </div>
        <div class="h-80">
          <canvas id="pageviewsChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Device & Browser Analytics -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Device Types -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">Device Types</h3>
        <div class="h-80">
          <canvas id="deviceChart"></canvas>
        </div>
      </div>

      <!-- Top Browsers -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">Top Browsers</h3>
        <div class="h-80">
          <canvas id="browserChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Top Content & Countries -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Top Pages -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">Top Pages Today</h3>
        <div class="space-y-4">
          {% for page in stats.top_pages %}
            <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">{{ page.page_title|default('Untitled')|e }}</p>
                <p class="text-xs text-gray-500 truncate mt-1">{{ page.page_url|e }}</p>
              </div>
              <div class="flex-shrink-0 ml-4">
                <div class="text-right">
                  <p class="text-sm font-semibold text-gray-900">{{ page.views }}</p>
                  <p class="text-xs text-gray-500">views</p>
                </div>
              </div>
            </div>
          {% else %}
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">No page views today</p>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Top Countries -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">Top Countries Today</h3>
        <div class="space-y-4">
          {% for country in stats.top_countries %}
            <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
              <div class="flex items-center">
                <span class="text-2xl mr-4">{{ country.country_code|country_flag }}</span>
                <div>
                  <p class="text-sm font-medium text-gray-900">{{ country.country_code|country_name }}</p>
                  <p class="text-xs text-gray-500 mt-1">{{ country.country_code|upper }}</p>
                </div>
              </div>
              <div class="flex-shrink-0">
                <div class="text-right">
                  <p class="text-sm font-semibold text-gray-900">{{ country.sessions }}</p>
                  <p class="text-xs text-gray-500">sessions</p>
                </div>
              </div>
            </div>
          {% else %}
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">No geographic data available</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>

<script>
// Chart.js default configuration for minimal black/white/silver theme
Chart.defaults.font.family = "'Inter', system-ui, sans-serif";
Chart.defaults.color = '#374151';
Chart.defaults.borderColor = '#e5e7eb';
Chart.defaults.backgroundColor = 'rgba(0, 0, 0, 0.05)';

// Color palette
const colors = {
  primary: '#000000',
  secondary: '#6b7280',
  success: '#10b981',
  info: '#3b82f6',
  warning: '#f59e0b',
  danger: '#ef4444',
  light: '#f8fafc',
  dark: '#1f2937'
};

// Get chart data from server
const chartsData = {{ charts_data|json_encode|raw }};

// Sessions Chart
const sessionsCtx = document.getElementById('sessionsChart').getContext('2d');
new Chart(sessionsCtx, {
  type: 'line',
  data: {
    labels: chartsData.sessions.map(item => item.date),
    datasets: [{
      label: 'Sessions',
      data: chartsData.sessions.map(item => item.sessions),
      borderColor: colors.primary,
      backgroundColor: 'rgba(0, 0, 0, 0.1)',
      borderWidth: 2,
      fill: true,
      tension: 0.4,
      pointBackgroundColor: colors.primary,
      pointBorderColor: '#ffffff',
      pointBorderWidth: 2,
      pointRadius: 4,
      pointHoverRadius: 6
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    interaction: {
      intersect: false,
      mode: 'index'
    },
    plugins: {
      legend: {
        display: false
      },
      tooltip: {
        backgroundColor: 'rgba(0, 0, 0, 0.8)',
        titleColor: '#ffffff',
        bodyColor: '#ffffff',
        borderColor: colors.primary,
        borderWidth: 1,
        cornerRadius: 6,
        padding: 12
      }
    },
    scales: {
      x: {
        border: {
          display: false
        },
        grid: {
          display: false
        },
        ticks: {
          maxTicksLimit: 7
        }
      },
      y: {
        border: {
          display: false
        },
        grid: {
          color: 'rgba(0, 0, 0, 0.1)'
        },
        beginAtZero: true
      }
    }
  }
});

// Page Views Chart
const pageviewsCtx = document.getElementById('pageviewsChart').getContext('2d');
new Chart(pageviewsCtx, {
  type: 'bar',
  data: {
    labels: chartsData.pageviews.map(item => item.date),
    datasets: [{
      label: 'Page Views',
      data: chartsData.pageviews.map(item => item.pageviews),
      backgroundColor: 'rgba(0, 0, 0, 0.1)',
      borderColor: colors.primary,
      borderWidth: 1,
      borderRadius: 4,
      borderSkipped: false
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        display: false
      },
      tooltip: {
        backgroundColor: 'rgba(0, 0, 0, 0.8)',
        titleColor: '#ffffff',
        bodyColor: '#ffffff',
        borderColor: colors.primary,
        borderWidth: 1,
        cornerRadius: 6,
        padding: 12
      }
    },
    scales: {
      x: {
        border: {
          display: false
        },
        grid: {
          display: false
        },
        ticks: {
          maxTicksLimit: 7
        }
      },
      y: {
        border: {
          display: false
        },
        grid: {
          color: 'rgba(0, 0, 0, 0.1)'
        },
        beginAtZero: true
      }
    }
  }
});

// Device Types Chart
const deviceCtx = document.getElementById('deviceChart').getContext('2d');
new Chart(deviceCtx, {
  type: 'doughnut',
  data: {
    labels: chartsData.devices.map(item => item.device_type),
    datasets: [{
      data: chartsData.devices.map(item => item.count),
      backgroundColor: [
        'rgba(0, 0, 0, 0.8)',
        'rgba(107, 114, 128, 0.8)',
        'rgba(156, 163, 175, 0.8)',
        'rgba(209, 213, 219, 0.8)'
      ],
      borderColor: '#ffffff',
      borderWidth: 2
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        position: 'bottom',
        labels: {
          padding: 20,
          usePointStyle: true,
          pointStyle: 'circle'
        }
      },
      tooltip: {
        backgroundColor: 'rgba(0, 0, 0, 0.8)',
        titleColor: '#ffffff',
        bodyColor: '#ffffff',
        borderColor: colors.primary,
        borderWidth: 1,
        cornerRadius: 6,
        padding: 12
      }
    }
  }
});

// Browser Chart
const browserCtx = document.getElementById('browserChart').getContext('2d');
new Chart(browserCtx, {
  type: 'horizontalBar',
  data: {
    labels: chartsData.browsers.map(item => item.browser),
    datasets: [{
      label: 'Users',
      data: chartsData.browsers.map(item => item.count),
      backgroundColor: 'rgba(0, 0, 0, 0.1)',
      borderColor: colors.primary,
      borderWidth: 1
    }]
  },
  options: {
    indexAxis: 'y',
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        display: false
      },
      tooltip: {
        backgroundColor: 'rgba(0, 0, 0, 0.8)',
        titleColor: '#ffffff',
        bodyColor: '#ffffff',
        borderColor: colors.primary,
        borderWidth: 1,
        cornerRadius: 6,
        padding: 12
      }
    },
    scales: {
      x: {
        border: {
          display: false
        },
        grid: {
          color: 'rgba(0, 0, 0, 0.1)'
        },
        beginAtZero: true
      },
      y: {
        border: {
          display: false
        },
        grid: {
          display: false
        }
      }
    }
  }
});

// Date range helpers
function setDateRange(range) {
  const today = new Date();
  const startInput = document.getElementById('start_date');
  const endInput = document.getElementById('end_date');
  
  endInput.value = today.toISOString().split('T')[0];
  
  let startDate = new Date();
  switch(range) {
    case 'today':
      startDate = today;
      break;
    case '7days':
      startDate.setDate(today.getDate() - 7);
      break;
    case '30days':
      startDate.setDate(today.getDate() - 30);
      break;
  }
  
  startInput.value = startDate.toISOString().split('T')[0];
  document.getElementById('date-range-form').submit();
}

// Auto-refresh data every 30 seconds if on current date
{% if end_date == 'now'|date('Y-m-d') %}
setInterval(function() {
  // Only refresh if user is actively viewing the page
  if (!document.hidden) {
    location.reload();
  }
}, 30000);
{% endif %}
