{% extends "admin/_layout.twig" %}

{% block title %}{{ trans('admin.analytics.title') }} â€” Cimaise{% endblock %}

{% block content %}
<div class="min-h-full bg-gray-50">
  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="px-6 py-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900">{{ trans('admin.analytics.title') }}</h1>
          <p class="mt-2 text-lg text-gray-600">{{ trans('admin.analytics.description') }}</p>
        </div>
        <div class="mt-6 lg:mt-0 flex flex-wrap items-center gap-3">
          <a href="{{ base_path }}/admin/analytics/realtime" 
             class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black" 
             data-spa-link>
            <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            {{ trans('admin.analytics.realtime') }}
          </a>
          <a href="{{ base_path }}/admin/analytics/export"
             class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black">
            <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            {{ trans('admin.analytics.export') }}
          </a>
          <a href="{{ base_path }}/admin/analytics/settings"
             class="inline-flex items-center px-4 py-2 bg-black border border-transparent rounded-lg text-sm font-medium text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black"
             data-spa-link>
            <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
            </svg>
            {{ trans('admin.common.settings') }}
          </a>
        </div>
      </div>
    </div>
  </div>

  {% if not analytics_enabled %}
    <!-- Analytics Disabled Notice -->
    <div class="px-6 py-6">
      <div class="bg-amber-50 border border-amber-200 rounded-xl p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-amber-800">{{ trans('admin.analytics.disabled') }}</h3>
            <p class="mt-1 text-amber-700">{{ trans('admin.analytics.disabled_hint')|raw }}</p>
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Main Content -->
  <div class="px-6 py-6 space-y-8">
    <!-- Date Range Picker -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">{{ trans('admin.analytics.date_range') }}</h2>
      <form method="get" id="date-range-form" class="flex flex-wrap items-center gap-4">
        <div class="flex items-center gap-3">
          <label for="start_date" class="text-sm font-medium text-gray-700">{{ trans('admin.analytics.from') }}:</label>
          <input type="date" name="start_date" id="start_date" value="{{ start_date }}" 
                 class="block w-auto rounded-lg border-gray-300 shadow-sm focus:border-black focus:ring-black text-sm">
        </div>
        <div class="flex items-center gap-3">
          <label for="end_date" class="text-sm font-medium text-gray-700">{{ trans('admin.analytics.to') }}:</label>
          <input type="date" name="end_date" id="end_date" value="{{ end_date }}"
                 class="block w-auto rounded-lg border-gray-300 shadow-sm focus:border-black focus:ring-black text-sm">
        </div>
        <button type="submit" class="inline-flex items-center px-4 py-2 bg-black border border-transparent rounded-lg text-sm font-medium text-white hover:bg-gray-800">
          <svg class="mr-2 -ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
          </svg>
          {{ trans('admin.analytics.update') }}
        </button>
        <div class="hidden sm:block w-px h-6 bg-gray-300"></div>
        <div class="flex flex-wrap gap-2">
          <button type="button" data-range="today" class="px-3 py-2 text-xs font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">{{ trans('admin.analytics.today') }}</button>
          <button type="button" data-range="7days" class="px-3 py-2 text-xs font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">{{ trans('admin.analytics.7days') }}</button>
          <button type="button" data-range="30days" class="px-3 py-2 text-xs font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">{{ trans('admin.analytics.30days') }}</button>
        </div>
      </form>
    </div>

    <!-- Key Metrics with Trend Indicators -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Active Sessions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">{{ trans('admin.analytics.sessions') }}</p>
            <p class="text-3xl font-bold text-gray-900">{{ trends.current.sessions|default(0) }}</p>
            {% set sessChange = trends.changes.sessions|default(0) %}
            <p class="text-xs mt-1 {% if sessChange > 0 %}text-emerald-600{% elseif sessChange < 0 %}text-red-600{% else %}text-gray-500{% endif %}">
              {% if sessChange > 0 %}+{% endif %}{{ sessChange }}% {{ trans('admin.analytics.vs_previous') }}
            </p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Page Views -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">{{ trans('admin.analytics.pageviews') }}</p>
            <p class="text-3xl font-bold text-gray-900">{{ trends.current.pageviews|default(0) }}</p>
            {% set pvChange = trends.changes.pageviews|default(0) %}
            <p class="text-xs mt-1 {% if pvChange > 0 %}text-emerald-600{% elseif pvChange < 0 %}text-red-600{% else %}text-gray-500{% endif %}">
              {% if pvChange > 0 %}+{% endif %}{{ pvChange }}% {{ trans('admin.analytics.vs_previous') }}
            </p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Lightbox Opens -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">{{ trans('admin.analytics.lightbox_opens') }}</p>
            <p class="text-3xl font-bold text-gray-900">{{ engagement.lightbox.total|default(0) }}</p>
            <p class="text-xs text-gray-500 mt-1">{{ engagement.lightbox.unique_users|default(0) }} {{ trans('admin.analytics.unique_users') }}</p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Downloads -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 mb-1">{{ trans('admin.analytics.downloads') }}</p>
            <p class="text-3xl font-bold text-gray-900">{{ engagement.downloads.total|default(0) }}</p>
            <p class="text-xs text-gray-500 mt-1">{{ engagement.downloads.unique_users|default(0) }} {{ trans('admin.analytics.unique_users') }}</p>
          </div>
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Sessions Chart -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">{{ trans('admin.analytics.sessions_over_time') }}</h3>
          <div class="flex items-center space-x-1 text-sm text-gray-500">
            <div class="w-3 h-3 bg-black rounded-full"></div>
            <span>{{ trans('admin.analytics.sessions') }}</span>
          </div>
        </div>
        <div class="h-80">
          <canvas id="sessionsChart"></canvas>
        </div>
      </div>

      <!-- Page Views Chart -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">{{ trans('admin.analytics.pageviews_over_time') }}</h3>
          <div class="flex items-center space-x-1 text-sm text-gray-500">
            <div class="w-3 h-3 bg-black rounded"></div>
            <span>{{ trans('admin.analytics.pageviews') }}</span>
          </div>
        </div>
        <div class="h-80">
          <canvas id="pageviewsChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Device & Browser Analytics -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Device Types -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">{{ trans('admin.analytics.device_types') }}</h3>
        <div class="h-80">
          <canvas id="deviceChart"></canvas>
        </div>
      </div>

      <!-- Top Browsers -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">{{ trans('admin.analytics.top_browsers') }}</h3>
        <div class="h-80">
          <canvas id="browserChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Peak Hours & 404 Errors -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Peak Hours Chart -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">{{ trans('admin.analytics.traffic_by_hour') }}</h3>
        <div class="h-80">
          <canvas id="peakHoursChart"></canvas>
        </div>
      </div>

      <!-- 404 Errors -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">{{ trans('admin.analytics.errors_404') }}</h3>
          <span class="px-2.5 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">{{ errors_404.total|default(0) }} hits</span>
        </div>
        <div class="space-y-3 max-h-72 overflow-y-auto">
          {% for page in errors_404.pages|slice(0, 10) %}
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex-1 min-w-0 mr-4">
                <p class="text-sm text-gray-900 truncate font-mono">{{ page.page_url|e }}</p>
              </div>
              <div class="flex-shrink-0 text-right">
                <p class="text-sm font-semibold text-gray-900">{{ page.hits }}</p>
                <p class="text-xs text-gray-500">{{ page.unique_visitors }} {{ trans('admin.analytics.visitors') }}</p>
              </div>
            </div>
          {% else %}
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-emerald-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">{{ trans('admin.analytics.no_404_errors') }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Engagement: Top Downloads & Lightbox Views -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Top Downloaded Images -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">{{ trans('admin.analytics.top_downloads') }}</h3>
        <div class="space-y-3">
          {% for item in engagement.top_downloads|slice(0, 8) %}
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">{{ item.image_title|default(item.filename|default('Image #' ~ item.image_id)) }}</p>
                <p class="text-xs text-gray-500 mt-0.5">{{ item.album_title|default(trans('admin.analytics.unknown_album')) }}</p>
              </div>
              <div class="flex-shrink-0 ml-4 text-right">
                <p class="text-sm font-semibold text-gray-900">{{ item.download_count }}</p>
                <p class="text-xs text-gray-500">{{ trans('admin.analytics.downloads') }}</p>
              </div>
            </div>
          {% else %}
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">{{ trans('admin.analytics.no_downloads') }}</p>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Top Lightbox Views -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">{{ trans('admin.analytics.most_viewed_lightbox') }}</h3>
        <div class="space-y-3">
          {% for item in engagement.top_lightbox_views|slice(0, 8) %}
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">{{ item.image_title|default(item.filename|default('Image #' ~ item.image_id)) }}</p>
                <p class="text-xs text-gray-500 mt-0.5">{{ item.album_title|default(trans('admin.analytics.unknown_album')) }}</p>
              </div>
              <div class="flex-shrink-0 ml-4 text-right">
                <p class="text-sm font-semibold text-gray-900">{{ item.view_count }}</p>
                <p class="text-xs text-gray-500">{{ trans('admin.analytics.views') }}</p>
              </div>
            </div>
          {% else %}
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">{{ trans('admin.analytics.no_lightbox_views') }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Album Access & Password Unlocks -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Album Access Stats -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">{{ trans('admin.analytics.album_access_title') }}</h3>
          <span class="text-xs text-gray-500">{{ trans('admin.analytics.albums.sorted_by', {start: start_date, end: end_date}) }}</span>
        </div>
        <div class="space-y-3">
          {% for item in album_access_stats %}
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">{{ item.album_title|default(trans('admin.analytics.unknown_album')) }}</p>
                <p class="text-xs text-gray-500 mt-0.5">
                  {% if item.album_slug %}/album/{{ item.album_slug }}{% else %}{{ trans('admin.analytics.albums.no_slug') }}{% endif %}
                </p>
              </div>
              <div class="flex-shrink-0 ml-4 text-right">
                <p class="text-sm font-semibold text-gray-900">{{ item.pageviews }}</p>
                <p class="text-xs text-gray-500">{{ trans('admin.analytics.pageviews') }}</p>
                <p class="text-xs text-gray-500">{{ item.unique_visitors }} {{ trans('admin.analytics.unique_visitors') }}</p>
              </div>
            </div>
          {% else %}
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">{{ trans('admin.analytics.no_data') }}</p>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Album Password Access Stats -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">{{ trans('admin.analytics.album_password_access_title') }}</h3>
          <span class="text-xs text-gray-500">{{ trans('admin.analytics.password_access_sorted_by', {start: start_date, end: end_date}) }}</span>
        </div>
        <div class="space-y-3">
          {% for item in album_password_access_stats %}
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">{{ item.album_title|default(trans('admin.analytics.unknown_album')) }}</p>
                <p class="text-xs text-gray-500 mt-0.5">
                  {% if item.album_slug %}/album/{{ item.album_slug }}{% else %}{{ trans('admin.analytics.albums.no_slug') }}{% endif %}
                </p>
              </div>
              <div class="flex-shrink-0 ml-4 text-right">
