{% extends "admin/_layout.twig" %}

{% block title %}{{ trans('admin.analytics.export.page_title') }} — Cimaise{% endblock %}

{% block content %}
<div class="p-6">
  <!-- Header -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">{{ trans('admin.analytics.export.page_title') }}</h1>
      <p class="text-gray-600">{{ trans('admin.analytics.export.description') }}</p>
    </div>
    <div class="flex gap-2 mt-4 md:mt-0">
      <a href="{{ base_path }}/admin/analytics" class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black transition-colors" data-spa-link>
        <i class="fas fa-arrow-left mr-1.5 text-xs"></i>{{ trans('admin.analytics.export.back_to_dashboard') }}
      </a>
    </div>
  </div>

  <!-- Export Options -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Quick Exports -->
    <div class="card p-6">
      <div class="border-b border-gray-200 pb-4 mb-6">
        <h2 class="text-lg font-semibold text-gray-900">{{ trans('admin.analytics.export.quick_exports') }}</h2>
        <p class="text-sm text-gray-600 mt-1">{{ trans('admin.analytics.export.quick_exports_desc') }}</p>
      </div>

      <div class="space-y-4">
        <!-- Sessions Export -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
          <div class="flex-1">
            <h3 class="font-medium text-gray-900">{{ trans('admin.analytics.export.sessions_data') }}</h3>
            <p class="text-sm text-gray-600">{{ trans('admin.analytics.export.sessions_data_desc') }}</p>
          </div>
          <div class="flex gap-2">
            <a href="{{ base_path }}/admin/analytics/export?type=sessions&format=csv"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-csv mr-1"></i>CSV
            </a>
            <a href="{{ base_path }}/admin/analytics/export?type=sessions&format=json"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-code mr-1"></i>JSON
            </a>
          </div>
        </div>

        <!-- Page Views Export -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
          <div class="flex-1">
            <h3 class="font-medium text-gray-900">{{ trans('admin.analytics.export.page_views') }}</h3>
            <p class="text-sm text-gray-600">{{ trans('admin.analytics.export.page_views_desc') }}</p>
          </div>
          <div class="flex gap-2">
            <a href="{{ base_path }}/admin/analytics/export?type=pageviews&format=csv"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-csv mr-1"></i>CSV
            </a>
            <a href="{{ base_path }}/admin/analytics/export?type=pageviews&format=json"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-code mr-1"></i>JSON
            </a>
          </div>
        </div>

        <!-- Events Export -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
          <div class="flex-1">
            <h3 class="font-medium text-gray-900">{{ trans('admin.analytics.export.events_data') }}</h3>
            <p class="text-sm text-gray-600">{{ trans('admin.analytics.export.events_data_desc') }}</p>
          </div>
          <div class="flex gap-2">
            <a href="{{ base_path }}/admin/analytics/export?type=events&format=csv"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-csv mr-1"></i>CSV
            </a>
            <a href="{{ base_path }}/admin/analytics/export?type=events&format=json"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-code mr-1"></i>JSON
            </a>
          </div>
        </div>

        <!-- Dashboard Summary -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
          <div class="flex-1">
            <h3 class="font-medium text-gray-900">{{ trans('admin.analytics.export.dashboard_summary') }}</h3>
            <p class="text-sm text-gray-600">{{ trans('admin.analytics.export.dashboard_summary_desc') }}</p>
          </div>
          <div class="flex gap-2">
            <a href="{{ base_path }}/admin/analytics/export?type=dashboard&format=json"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-code mr-1"></i>JSON
            </a>
          </div>
        </div>

        <!-- Charts Data -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
          <div class="flex-1">
            <h3 class="font-medium text-gray-900">{{ trans('admin.analytics.export.charts_data') }}</h3>
            <p class="text-sm text-gray-600">{{ trans('admin.analytics.export.charts_data_desc') }}</p>
          </div>
          <div class="flex gap-2">
            <a href="{{ base_path }}/admin/analytics/export?type=charts&format=json"
               class="btn-secondary btn-sm">
              <i class="fas fa-file-code mr-1"></i>JSON
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Custom Export -->
    <div class="card p-6">
      <div class="border-b border-gray-200 pb-4 mb-6">
        <h2 class="text-lg font-semibold text-gray-900">{{ trans('admin.analytics.export.custom_export') }}</h2>
        <p class="text-sm text-gray-600 mt-1">{{ trans('admin.analytics.export.custom_export_desc') }}</p>
      </div>

      <form id="custom-export-form" class="space-y-6">
        <!-- Data Type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">{{ trans('admin.analytics.export.data_type') }}</label>
          <select name="type" class="form-input" required>
            <option value="sessions">{{ trans('admin.analytics.export.sessions_data') }}</option>
            <option value="pageviews">{{ trans('admin.analytics.export.page_views') }}</option>
            <option value="events">{{ trans('admin.analytics.export.events_data') }}</option>
            <option value="albums">{{ trans('admin.analytics.export.album_analytics') }}</option>
            <option value="dashboard">{{ trans('admin.analytics.export.dashboard_summary') }}</option>
            <option value="charts">{{ trans('admin.analytics.export.charts_data') }}</option>
          </select>
        </div>

        <!-- Date Range -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">{{ trans('admin.analytics.export.start_date') }}</label>
            <input type="date" name="start_date" class="form-input"
                   value="{{ 'now'|date_modify('-30 days')|date('Y-m-d') }}" required>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">{{ trans('admin.analytics.export.end_date') }}</label>
            <input type="date" name="end_date" class="form-input"
                   value="{{ 'now'|date('Y-m-d') }}" required>
          </div>
        </div>

        <!-- Format -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">{{ trans('admin.analytics.export.export_format') }}</label>
          <div class="flex gap-4">
            <label class="flex items-center">
              <input type="radio" name="format" value="csv" class="mr-2" checked>
              <span class="text-sm">{{ trans('admin.analytics.export.csv_spreadsheet') }}</span>
            </label>
            <label class="flex items-center">
              <input type="radio" name="format" value="json" class="mr-2">
              <span class="text-sm">{{ trans('admin.analytics.export.json_data') }}</span>
            </label>
          </div>
        </div>

        <!-- Advanced Options -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-sm font-medium text-gray-900 mb-4">{{ trans('admin.analytics.export.advanced_options') }}</h3>

          <div class="space-y-4">
            <!-- Include Bot Traffic -->
            <label class="flex items-center">
              <input type="checkbox" name="include_bots" class="mr-2">
              <span class="text-sm text-gray-700">{{ trans('admin.analytics.export.include_bots') }}</span>
            </label>

            <!-- Limit Records -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">{{ trans('admin.analytics.export.limit_records') }}</label>
              <select name="limit" class="form-input w-32">
                <option value="">{{ trans('admin.analytics.export.no_limit') }}</option>
                <option value="1000">{{ trans('admin.analytics.export.records', {count: '1.000'}) }}</option>
                <option value="5000">{{ trans('admin.analytics.export.records', {count: '5.000'}) }}</option>
                <option value="10000">{{ trans('admin.analytics.export.records', {count: '10.000'}) }}</option>
                <option value="50000">{{ trans('admin.analytics.export.records', {count: '50.000'}) }}</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Export Button -->
        <div class="flex justify-end pt-4">
          <button type="submit" class="btn-primary">
            <i class="fas fa-download mr-2"></i>{{ trans('admin.analytics.export.generate') }}
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Export Information -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Data Privacy Notice -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
      <div class="flex items-start">
        <i class="fas fa-shield-alt text-blue-600 mt-1 mr-3"></i>
        <div>
          <h3 class="text-sm font-medium text-blue-800 mb-2">{{ trans('admin.analytics.export.privacy_title') }}</h3>
          <ul class="text-sm text-blue-700 space-y-1">
            <li>• {{ trans('admin.analytics.export.privacy_1') }}</li>
            <li>• {{ trans('admin.analytics.export.privacy_2') }}</li>
            <li>• {{ trans('admin.analytics.export.privacy_3') }}</li>
            <li>• {{ trans('admin.analytics.export.privacy_4') }}</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- File Format Information -->
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
      <div class="flex items-start">
        <i class="fas fa-info-circle text-gray-600 mt-1 mr-3"></i>
        <div>
          <h3 class="text-sm font-medium text-gray-800 mb-2">{{ trans('admin.analytics.export.formats_title') }}</h3>
          <ul class="text-sm text-gray-700 space-y-1">
            <li>• {{ trans('admin.analytics.export.formats_csv')|raw }}</li>
            <li>• {{ trans('admin.analytics.export.formats_json')|raw }}</li>
            <li>• {{ trans('admin.analytics.export.formats_note_1') }}</li>
            <li>• {{ trans('admin.analytics.export.formats_note_2') }}</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script nonce="{{ csp_nonce() }}">
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('custom-export-form');
  
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form);
    const params = new URLSearchParams();
    
    // Add all form fields to URL params
    for (const [key, value] of formData.entries()) {
      if (value) {
        params.append(key, value);
      }
    }
    
    // Create export URL
    const exportUrl = `{{ base_path }}/admin/analytics/export?${params.toString()}`;
    
    // Trigger download via AJAX to avoid page navigation
    fetch(exportUrl)
      .then(response => {
        if (!response.ok) {
          throw new Error('Export failed');
        }
        return response.blob();
      })
      .then(blob => {
        // Create download link
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = getFileName(params);
        document.body.appendChild(a);
        a.click();
        window.URL.revokeObjectURL(url);
        document.body.removeChild(a);
      })
      .catch(error => {
        console.error('Export error:', error);
        // Fallback to direct download
        window.location.href = exportUrl;
      })
      .finally(() => {
        // Reset button
        const button = form.querySelector('button[type="submit"]');
        const originalText = button.innerHTML;
        button.innerHTML = originalText;
        button.disabled = false;
      });
    
    // Show feedback
    const button = form.querySelector('button[type="submit"]');
    const originalText = button.innerHTML;
    button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>{{ trans('admin.analytics.export.generating')|e('js') }}';
    button.disabled = true;
  });
  
  // Update format options based on data type
  const typeSelect = form.querySelector('select[name="type"]');
  const formatInputs = form.querySelectorAll('input[name="format"]');
  
  typeSelect.addEventListener('change', function() {
    const selectedType = this.value;
    
    // Some data types are better suited for specific formats
    if (selectedType === 'dashboard' || selectedType === 'charts') {
      // Dashboard and charts are complex objects, prefer JSON
      formatInputs[1].checked = true; // JSON
    } else {
      // Raw data types work well with CSV
      formatInputs[0].checked = true; // CSV
    }
  });
  
  // Generate filename based on export parameters
  function getFileName(params) {
    const type = params.get('type') || 'data';
    const format = params.get('format') || 'csv';
    const startDate = params.get('start_date') || 'start';
    const endDate = params.get('end_date') || 'end';
    
    // Format dates to YYYY-MM-DD
    const startDateFormatted = startDate.replace(/-/g, '');
    const endDateFormatted = endDate.replace(/-/g, '');
    
    return `analytics_${type}_${startDateFormatted}_to_${endDateFormatted}.${format}`;
  }
});

// Also handle quick export links with AJAX
document.addEventListener('DOMContentLoaded', function() {
  const quickExportLinks = document.querySelectorAll('a[href*="/admin/analytics/export"]');
  
  quickExportLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      
      const exportUrl = this.href;
      
      // Show loading state
      const originalText = this.innerHTML;
      this.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>{{ trans('admin.analytics.export.loading')|e('js') }}';
      const originalClasses = this.className;
      this.className = originalClasses.replace('btn-secondary', 'btn-primary');
      
      // Trigger download via AJAX
      fetch(exportUrl)
        .then(response => {
          if (!response.ok) {
            throw new Error('Export failed');
          }
          // Return both blob and headers to preserve response scope
          return response.blob().then(blob => ({ blob, headers: response.headers }));
        })
        .then(({ blob, headers }) => {
          // Extract filename from Content-Disposition header or URL
          const contentDisposition = headers.get('Content-Disposition');
          let filename = 'analytics_export';

          if (contentDisposition) {
            const filenameMatch = contentDisposition.match(/filename[^;=\n]*=((['\"]).*?\2|[^;\n]*)/);
            if (filenameMatch && filenameMatch[1]) {
              filename = filenameMatch[1].replace(/['"]/g, '');
            }
          } else {
            // Fallback to URL-based filename
            const url = new URL(exportUrl);
            const params = new URLSearchParams(url.search);
            const type = params.get('type') || 'data';
            const format = params.get('format') || 'csv';
            filename = `analytics_${type}_export.${format}`;
          }

          // Create download link
          const blobUrl = window.URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = blobUrl;
          a.download = filename;
          document.body.appendChild(a);
          a.click();
          window.URL.revokeObjectURL(blobUrl);
          document.body.removeChild(a);
        })
        .catch(error => {
          console.error('Export error:', error);
          // Fallback to direct download
          window.location.href = exportUrl;
        })
        .finally(() => {
          // Reset button
          this.innerHTML = originalText;
          this.className = originalClasses;
        });
    });
  });
});
</script>

