  if (!countryCode) return 'ðŸŒ';
  
  const flags = {
    'US': 'ðŸ‡ºðŸ‡¸', 'GB': 'ðŸ‡¬ðŸ‡§', 'IT': 'ðŸ‡®ðŸ‡¹', 'DE': 'ðŸ‡©ðŸ‡ª', 'FR': 'ðŸ‡«ðŸ‡·',
    'ES': 'ðŸ‡ªðŸ‡¸', 'CA': 'ðŸ‡¨ðŸ‡¦', 'AU': 'ðŸ‡¦ðŸ‡º', 'JP': 'ðŸ‡¯ðŸ‡µ', 'CN': 'ðŸ‡¨ðŸ‡³',
    'IN': 'ðŸ‡®ðŸ‡³', 'BR': 'ðŸ‡§ðŸ‡·', 'RU': 'ðŸ‡·ðŸ‡º', 'NL': 'ðŸ‡³ðŸ‡±', 'SE': 'ðŸ‡¸ðŸ‡ª'
  };
  
  return flags[countryCode.toUpperCase()] || 'ðŸŒ';
