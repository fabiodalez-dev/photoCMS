        <h1 class="text-9xl font-bold text-gray-200">404</h1>
        <h2 class="text-2xl font-semibold text-gray-800 mt-4 mb-2">{{ trans('errors.404.title') }}</h2>
        <p class="text-gray-600 mb-8">{{ trans('errors.404.message') }}</p>
