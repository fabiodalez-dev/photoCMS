<div class="split-page">
  <section class="split-container">
    <header class="split-header">
      {% if album.categories|length > 0 %}
        <div class="split-meta">
          {% for cat in album.categories %}
            {% set cat_url = '/category/' ~ cat.slug %}
            <a href="{% if cat_url starts with '/' %}{{ base_path }}{{ cat_url }}{% else %}{{ cat_url }}{% endif %}">{{ cat.name|e }}</a>
          {% endfor %}
        </div>
      {% endif %}
      <h1 class="split-title">{{ album.title|e }}</h1>
      {% if album.excerpt %}
        <div class="split-body">{{ album.excerpt|e }}</div>
      {% endif %}
      {% if album.shoot_date or (album.equipment.locations|length > 0) %}
        <div class="split-meta">
          {% if album.shoot_date %}<span>{{ album.shoot_date|date_format }}</span>{% endif %}
          {% if album.equipment.locations|length > 0 %}
            <span>
              {% for location in album.equipment.locations %}
                {{ location|e }}{% if not loop.last %}, {% endif %}
              {% endfor %}
            </span>
          {% endif %}
        </div>
      {% endif %}
    </header>

    <div class="split-grid">
      <aside class="split-aside">
        <div class="split-section-title">{{ trans('album.equipment')|default('Equipment') }}</div>
        {% if album.equipment.cameras|length > 0 %}
          <div>{{ trans('album.camera')|default('Camera') }}</div>
          {% for camera in album.equipment.cameras %}<div>{{ camera|e }}</div>{% endfor %}
        {% endif %}
        {% if album.equipment.lenses|length > 0 %}
          <div class="split-section-title">{{ trans('album.lens')|default('Lens') }}</div>
          {% for lens in album.equipment.lenses %}<div>{{ lens|e }}</div>{% endfor %}
        {% endif %}
        {% if album.equipment.film|length > 0 %}
          <div class="split-section-title">{{ trans('album.film')|default('Film') }}</div>
          {% for film in album.equipment.film %}
            <div>
              {% if film.name is defined %}
                {{ film.name|e }}{% if film.iso %} (ISO {{ film.iso|e }}){% endif %}
              {% else %}
                {{ film|e }}
              {% endif %}
            </div>
          {% endfor %}
        {% endif %}
        {% if album.tags|length > 0 %}
          <div class="split-section-title">{{ trans('album.tags')|default('Tags') }}</div>
          <div class="split-tags">
            {% for tag in album.tags %}
              {% set tag_url = '/tag/' ~ (tag.slug|e('url')) %}
              <a class="split-tag" href="{% if tag_url starts with '/' %}{{ base_path }}{{ tag_url }}{% else %}{{ tag_url }}{% endif %}">#{{ tag.name|e }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </aside>
      <div>
        {% if album.body %}
          <div class="split-body">{{ album.body|safe_html }}</div>
        {% endif %}
        <div style="margin-top:28px;">
          {% include 'frontend/_album_gallery.twig' %}
        </div>
      </div>
    </div>
  </section>
</div>
