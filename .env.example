APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com/path
APP_TIMEZONE=UTC

DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

SESSION_SECRET=your-session-secret-key-here

# Logging Configuration
LOG_ENABLED=true
LOG_LEVEL=warning
LOG_CHANNEL=file
LOG_PATH=storage/logs
LOG_MAX_FILES=30

# Upload Performance (fast upload mode generates only preview on upload)
FAST_UPLOAD=false
SYNC_VARIANTS_ON_UPLOAD=true

# Debug Flags (all default to false in production)
DEBUG_SQL=false
DEBUG_REQUESTS=false
DEBUG_PERFORMANCE=false
DEBUG_TOOLBAR=false
